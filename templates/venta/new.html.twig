{% extends 'base.html.twig' %}

{% block title %}Nueva Venta - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_venta_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">💰 Nueva Venta</h1>
                        <p class="mb-0 opacity-75">Registra una nueva venta en el sistema</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-cash-register me-2"></i>Información de la Nueva Venta
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'id': 'venta-form'}}) }}

                    <!-- Información General de la Venta -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información General
                    </h3>
                    <div class="form-section">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha, 'Fecha de Venta', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'id': 'venta-fecha'
                                    }}) }}
                                    {{ form_errors(form.fecha) }}
                                    <div class="form-help-text">Fecha en que se realiza la venta</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.cliente, 'Cliente', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.cliente, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'id': 'venta-cliente'
                                    }}) }}
                                    {{ form_errors(form.cliente) }}
                                    <div class="form-help-text">Selecciona el cliente</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.tipo_venta, 'Tipo de Venta', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.tipo_venta, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'id': 'venta-tipo'
                                    }}) }}
                                    {{ form_errors(form.tipo_venta) }}
                                    <div class="form-help-text">Tipo de transacción</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.estado, 'Estado', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.estado, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'id': 'venta-estado'
                                    }}) }}
                                    {{ form_errors(form.estado) }}
                                    <div class="form-help-text">Estado actual de la venta</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.total, 'Total de Venta', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.total, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'readonly': 'readonly',
                                            'id': 'venta-total'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.total) }}
                                    <div class="form-help-text">Total calculado automáticamente</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles de la Venta -->
                    <h3 class="section-title">
                        <i class="fas fa-list-alt me-2"></i>Detalles de la Venta
                    </h3>
                    <div class="form-section">
                        <div id="detalle-ventas"
                             data-prototype="{{ form_widget(form.detalle_ventas.vars.prototype)|e('html_attr') }}"
                             data-index="{{ form.detalle_ventas|length }}">
                            {% for detalle in form.detalle_ventas %}
                                <div class="detalle-card" data-index="{{ loop.index0 }}">
                                    <div class="row align-items-center">
                                        <div class="col-md-4 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.producto, 'Producto', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.producto, {'attr': {
                                                    'class': 'form-select-modern detalle-producto',
                                                    'required': 'required',
                                                    'id': 'detalle_' ~ loop.index0 ~ '_producto'
                                                }}) }}
                                                {{ form_errors(detalle.producto) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.cantidad, 'Cantidad', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.cantidad, {'attr': {
                                                    'class': 'form-control form-control-modern detalle-cantidad',
                                                    'min': '1',
                                                    'required': 'required',
                                                    'id': 'detalle_' ~ loop.index0 ~ '_cantidad'
                                                }}) }}
                                                {{ form_errors(detalle.cantidad) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.precio_unitario, 'Precio Unitario', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    {{ form_widget(detalle.precio_unitario, {'attr': {
                                                        'class': 'form-control-modern detalle-precio',
                                                        'step': '0.01',
                                                        'min': '0',
                                                        'required': 'required',
                                                        'id': 'detalle_' ~ loop.index0 ~ '_precio'
                                                    }}) }}
                                                </div>
                                                {{ form_errors(detalle.precio_unitario) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                <label class="form-label-modern">Subtotal</label>
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    <input type="text"
                                                           class="form-control form-control-modern detalle-subtotal"
                                                           readonly
                                                           id="detalle_{{ loop.index0 }}_subtotal">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-modern btn-danger-modern eliminar-detalle">
                                        <i class="fas fa-trash me-2"></i>Eliminar Detalle
                                    </button>
                                </div>
                            {% endfor %}
                        </div>

                        <button type="button" id="add-detalle" class="btn btn-modern btn-outline-modern mb-4">
                            <i class="fas fa-plus me-2"></i>Agregar Detalle
                        </button>

                        <!-- Vista Previa del Total -->
                        <div class="total-preview">
                            <div class="total-preview-item">
                                <span>Total de la Venta:</span>
                                <span id="totalPreview" class="monto-total">$0.00</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_venta_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern" id="submit-venta">
                                <i class="fas fa-save me-2"></i>Guardar Venta
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/venta/new.js') }}"></script>
{% endblock %}
