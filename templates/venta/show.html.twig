{% extends 'base.html.twig' %}

{% block title %}Venta #{{ venta.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Venta #{{ venta.id }}</h1>
            <div>
                <a href="{{ path('app_venta_index') }}" class="btn btn-outline-secondary btn-sm me-2">
                    <i class="fas fa-arrow-left me-1"></i>Regresar
                </a>
                <a href="{{ path('app_venta_edit', {'id': venta.id}) }}" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Fecha</div>
                    <div class="col-sm-9">{{ venta.fecha ? venta.fecha|date('d/m/Y H:i') : '-' }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Total</div>
                    <div class="col-sm-9 h5 mb-0 text-success">$ {{ venta.total|number_format(2, ',', '.') }}</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Estado</div>
                    <div class="col-sm-9">
                        <div class="col-sm-9 h5 mb-0 text-success"> {{ venta.estado|capitalize }}</div>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Tipo de venta</div>
                    <div class="col-sm-9">

                        <span class="badge bg-secondary">{{ venta.tipoVeenta|capitalize }}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            {{ include('venta/_delete_form.html.twig') }}
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Precio Costo</th>
                            <th>Subtotal</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for detalle in detalle_venta %}
                            <tr>
                                <td>{{ detalle.cantidad }}</td>
                                <td>$ {{ detalle.precioUnitario|number_format(2, ',', '.') }}</td>
                                <td>$ {{ detalle.precioCosto|number_format(2, ',', '.') }}</td>
                                <td><strong>$ {{ detalle.subtotal|number_format(2, ',', '.') }}</strong></td>
                                <td class="text-center">
                                    <a href="{{ path('app_detalle_venta_show', {'id': detalle.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_detalle_venta_edit', {'id': detalle.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">No se encontraron detalles de venta.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
