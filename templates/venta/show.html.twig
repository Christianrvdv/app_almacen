{% extends 'base.html.twig' %}

{% block title %}Venta #{{ venta.id }} - Detalles de Venta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Moderno -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_venta_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">💰 Venta #{{ venta.id }}</h1>
                        <p class="mb-0 opacity-75">Detalles completos de la venta</p>
                    </div>
                    <div>
                        <div class="btn-group">
                            <a href="{{ path('app_venta_generate_pdf', {'id': venta.id}) }}"
                               class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-file-pdf"></i> Generar PDF
                            </a>
                            <a href="{{ path('app_venta_download_pdf', {'id': venta.id}) }}"
                               class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-download"></i> Descargar PDF
                            </a>
                            <a href="{{ path('app_venta_view_pdf', {'id': venta.id}) }}"
                               target="_blank"
                               class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-eye"></i> Ver PDF
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Información Principal de la Venta -->
            <div class="info-grid">
                <!-- Información General -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle me-2"></i>Información General
                    </div>
                    <div class="card-body p-4">
                        <div class="info-item">
                            <div class="info-label">Fecha de Venta</div>
                            <div class="info-value">
                                <i class="fas fa-calendar me-2 text-primary"></i>
                                {{ venta.fecha ? venta.fecha|date('d/m/Y H:i') : 'No disponible' }}
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Total de Venta</div>
                            <div class="info-value total-highlight">
                                ${{ venta.total|number_format(2, ',', '.') }}
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Estado</div>
                            <div class="info-value">
                                {% set statusClass = '' %}
                                {% if venta.estado == 'completada' %}
                                    {% set statusClass = 'status-completed' %}
                                {% elseif venta.estado == 'pendiente' %}
                                    {% set statusClass = 'status-pending' %}
                                {% elseif venta.estado == 'cancelada' %}
                                    {% set statusClass = 'status-cancelled' %}
                                {% endif %}
                                <span class="status-badge {{ statusClass }}">
                                    {{ venta.estado|capitalize }}
                                </span>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Tipo de Venta</div>
                            <div class="info-value">
                                <span class="badge-modern bg-secondary">
                                    <i class="fas
                                        {% if venta.tipoVenta == 'contado' %}fa-money-bill-wave
                                        {% elseif venta.tipoVenta == 'credito' %}fa-credit-card
                                        {% else %}fa-shopping-cart{% endif %} me-1"></i>
                                    {{ venta.tipoVenta|capitalize }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información del Cliente -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-user me-2"></i>Información del Cliente
                    </div>
                    <div class="card-body p-4">
                        <div class="info-item">
                            <div class="info-label">Cliente</div>
                            <div class="info-value">
                                {% if venta.cliente %}
                                    <i class="fas fa-user-tag me-2 text-primary"></i>
                                    {{ venta.cliente.nombre }}
                                {% else %}
                                    <span class="text-muted">Cliente no especificado</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="metadata">
                            <div class="metadata-item">
                                <span class="metadata-label">ID de Venta</span>
                                <span class="metadata-value">
                                    <code>#{{ venta.id }}</code>
                                </span>
                            </div>
                            <div class="metadata-item">
                                <span class="metadata-label">Registrada</span>
                                <span class="metadata-value">
                                    {{ venta.fecha ? venta.fecha|date('d/m/Y H:i') : 'N/A' }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detalles de la Venta -->
            <h3 class="section-title">
                <i class="fas fa-list-alt me-2"></i>Detalles de la Venta
            </h3>

            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-receipt me-2"></i>Productos Vendidos
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-show mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio Unitario</th>
                                <th class="text-end">Subtotal</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detalle in venta.detalleVentas %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded p-2 me-3">
                                                <i class="fas fa-cube text-white"></i>
                                            </div>
                                            <div>
                                                <strong>{{ detalle.producto.nombre ?? 'Producto no disponible' }}</strong>
                                                {% if detalle.producto %}
                                                    <br>
                                                    <small
                                                        class="text-muted">Código: {{ detalle.producto.codigoBarras ?? 'N/A' }}</small>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span>{{ detalle.cantidad }}</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>${{ detalle.precioUnitario|number_format(2, ',', '.') }}</strong>
                                    </td>
                                    <td class="text-end">
                                        <span
                                            class="text-success fw-bold">${{ detalle.subtotal|number_format(2, ',', '.') }}</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a href="{{ path('app_detalle_venta_show', {'id': detalle.id}) }}"
                                               class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <div class="text-muted">
                                            <i class="fas fa-inbox fa-2x mb-2"></i>
                                            <p class="mb-0">No se encontraron detalles de venta</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            {% if  venta.detalleVentas is not empty %}
                                <tfoot>
                                <tr class="table-active">
                                    <td colspan="3" class="text-end fw-bold">Total de Venta:</td>
                                    <td class="text-end">
                                        <span
                                            class="total-highlight">${{ venta.total|number_format(2, ',', '.') }}</span>
                                    </td>
                                    <td></td>
                                </tr>
                                </tfoot>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    <a href="{{ path('app_venta_edit', {'id': venta.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar Venta
                    </a>

                    <a href="{{ path('app_venta_index') }}"
                       class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-list me-2"></i>Volver al Listado
                    </a>

                    <!-- Botón de eliminar con confirmación -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar Venta
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar la venta <strong>#{{ venta.id }}</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer y se perderán todos los datos asociados a esta venta.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('venta/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initVentaShowPage } from "{{ asset('js/venta/show.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            initVentaShowPage();
        });
    </script>
{% endblock %}
