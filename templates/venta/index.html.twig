{% extends 'base.html.twig' %}

{% block title %}Listado de Ventas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">游눯 Gesti칩n de Ventas</h1>
                        <p class="mb-0 opacity-75">Administra y consulta el historial de ventas</p>
                    </div>
                    <div>
                        <a href="{{ path('app_venta_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nueva Venta
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estad칤sticas R치pidas -->
        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">춰칄xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalVentas }}</div>
                            <div class="metric-label">Total Ventas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalCompletadas }}
                            </div>
                            <div class="metric-label">Ventas Completadas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ totalPendientes }}
                            </div>
                            <div class="metric-label">Ventas Pendientes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div class="metric-value text-info">
                                ${{ totalIngresos|number_format(2, ',', '.') }}
                            </div>
                            <div class="metric-label">Ingresos Totales</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B칰squeda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <form method="get" action="{{ path('app_venta_index') }}" id="search-form">
                            <div class="input-group">
                                <input type="text"
                                       name="q"
                                       class="form-control form-control-modern"
                                       placeholder="游댌 Buscar por ID de venta, estado, tipo de venta o cliente..."
                                       value="{{ searchTerm|default('') }}"
                                       id="search-input">
                                {% if searchTerm %}
                                    <button type="button" class="btn btn-outline-secondary" onclick="clearSearch()" title="Limpiar b칰squeda">
                                        <i class="fas fa-times"></i>
                                    </button>
                                {% endif %}
                                <button type="submit" class="btn btn-primary">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tabla de Ventas -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Venta</th>
                            <th>Fecha</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Tipo Venta</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for venta in ventas %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-receipt text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="sale-name">Venta #{{ venta.id }}</div>
                                            <small class="text-muted">
                                                {% if venta.cliente %}
                                                    游녻 {{ venta.cliente.nombre }}
                                                {% else %}
                                                    游녻 Cliente no especificado
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        <strong>{{ venta.fecha ? venta.fecha|date('d/m/Y') : '-' }}</strong>
                                        <br>
                                        <small>{{ venta.fecha ? venta.fecha|date('H:i') : '' }}</small>
                                    </div>
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ venta.total|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    {% if venta.estado == 'completada' %}
                                        <span class="status-badge status-completed">
                                            <i class="fas fa-check me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% elseif venta.estado == 'pendiente' %}
                                        <span class="status-badge status-pending">
                                            <i class="fas fa-clock me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% elseif venta.estado == 'cancelada' %}
                                        <span class="status-badge status-cancelled">
                                            <i class="fas fa-times me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                            {{ venta.estado|capitalize }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center text-muted">
                                    {% if venta.tipoVenta %}
                                        {{ venta.tipoVenta|capitalize }}
                                    {% else %}
                                        No especificado
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_venta_show', {'id': venta.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_venta_edit', {'id': venta.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <i class="fas fa-shopping-cart"></i>
                                    <h4 class="mt-3">
                                        {% if searchTerm %}
                                            No se encontraron ventas para "{{ searchTerm }}"
                                        {% else %}
                                            No se encontraron ventas
                                        {% endif %}
                                    </h4>
                                    <p class="text-muted mb-3">
                                        {% if searchTerm %}
                                            Intenta con otros t칠rminos de b칰squeda
                                        {% else %}
                                            Comienza registrando tu primera venta
                                        {% endif %}
                                    </p>
                                    {% if searchTerm %}
                                        <a href="{{ path('app_venta_index') }}" class="btn btn-primary">
                                            <i class="fas fa-times me-2"></i>Limpiar b칰squeda
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_venta_new') }}" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Registrar primera venta
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci칩n de Paginaci칩n -->
            {% if ventas.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        P치gina <strong>{{ ventas.currentPageNumber }}</strong> de <strong>{{ ventas.pageCount }}</strong> -
                        Mostrando <strong>{{ ventas.getItemNumberPerPage * (ventas.currentPageNumber - 1) + 1 }}-{{ min(ventas.getItemNumberPerPage * ventas.currentPageNumber, ventas.getTotalItemCount) }}</strong> de <strong>{{ ventas.getTotalItemCount }}</strong> ventas
                        {% if searchTerm %}
                            <span class="badge bg-info ms-2">B칰squeda: "{{ searchTerm }}"</span>
                        {% endif %}
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Bot칩n Anterior #}
                                <li class="page-item {{ ventas.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ ventas.currentPageNumber == 1 ? '#' : path('app_venta_index', {'page': ventas.currentPageNumber - 1, 'q': searchTerm}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera p치gina #}
                                {% if ventas.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_venta_index', {'page': 1, 'q': searchTerm}) }}">1</a>
                                    </li>
                                    {% if ventas.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# P치ginas alrededor de la actual #}
                                {% for i in max(1, ventas.currentPageNumber - 1)..min(ventas.pageCount, ventas.currentPageNumber + 1) %}
                                    <li class="page-item {{ ventas.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_venta_index', {'page': i, 'q': searchTerm}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# 칔ltima p치gina #}
                                {% if ventas.currentPageNumber < ventas.pageCount - 1 %}
                                    {% if ventas.currentPageNumber < ventas.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_venta_index', {'page': ventas.pageCount, 'q': searchTerm}) }}">{{ ventas.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Bot칩n Siguiente #}
                                <li class="page-item {{ ventas.currentPageNumber == ventas.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ ventas.currentPageNumber == ventas.pageCount ? '#' : path('app_venta_index', {'page': ventas.currentPageNumber + 1, 'q': searchTerm}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function clearSearch() {
            window.location.href = "{{ path('app_venta_index') }}";
        }
    </script>

    <script type="module">
        import { initIndexPage } from "{{ asset('js/venta/index.js') }}";
        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
