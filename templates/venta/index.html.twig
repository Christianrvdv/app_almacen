{% extends 'base.html.twig' %}

{% block title %}Listado de Ventas{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Ventas</h1>
            <a href="{{ path('app_venta_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Nueva Venta
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Tipo Venta</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for venta in ventas %}
                            <tr>
                                <td>{{ venta.id }}</td>
                                <td>{{ venta.fecha ? venta.fecha|date('d/m/Y H:i') : '-' }}</td>
                                <td><strong>$ {{ venta.total|number_format(2, ',', '.') }}</strong></td>
                                <td>
                                    {% set tipo = venta.tipoVeenta|lower %}
                                    {% if tipo == 'online' %}
                                        <span class="badge bg-info text-dark">Online</span>
                                    {% elseif tipo == 'tienda' %}
                                        <span class="badge bg-primary">Tienda</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ venta.tipoVeenta|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_venta_show', {'id': venta.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_venta_edit', {'id': venta.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No se encontraron ventas.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
