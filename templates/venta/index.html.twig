{% extends 'base.html.twig' %}

{% block title %}Listado de Ventas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">💰 Gestión de Ventas</h1>
                        <p class="mb-0 opacity-75">Administra y consulta el historial de ventas</p>
                    </div>
                    <div>
                        <a href="{{ path('app_venta_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nueva Venta
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas Rápidas -->
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="metric-value text-primary">{{ ventas|length }}</div>
                            <div class="metric-label">Total Ventas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="metric-value text-success">
                                {% set completed_sales = ventas|filter(v => v.estado == 'completada') %}
                                {{ completed_sales|length }}
                            </div>
                            <div class="metric-label">Ventas Completadas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {% set pending_sales = ventas|filter(v => v.estado == 'pendiente') %}
                                {{ pending_sales|length }}
                            </div>
                            <div class="metric-label">Ventas Pendientes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div class="metric-value text-info">
                                ${{ ventas|reduce((total, v) => total + v.total, 0)|number_format(2, ',', '.') }}
                            </div>
                            <div class="metric-label">Ingresos Totales</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de Búsqueda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern"
                               placeholder="🔍 Buscar ventas por ID, estado o tipo...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Ventas -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Venta</th>
                            <th>Fecha</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Tipo Venta</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for venta in ventas %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-receipt text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="sale-name">Venta #{{ venta.id }}</div>
                                            <small class="text-muted">
                                                {% if venta.cliente %}
                                                    👤 {{ venta.cliente.nombre }}
                                                {% else %}
                                                    👤 Cliente no especificado
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        <strong>{{ venta.fecha ? venta.fecha|date('d/m/Y') : '-' }}</strong>
                                        <br>
                                        <small>{{ venta.fecha ? venta.fecha|date('H:i') : '' }}</small>
                                    </div>
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ venta.total|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    {% if venta.estado == 'completada' %}
                                        <span class="status-badge status-completed">
                                            <i class="fas fa-check me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% elseif venta.estado == 'pendiente' %}
                                        <span class="status-badge status-pending">
                                            <i class="fas fa-clock me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% elseif venta.estado == 'cancelada' %}
                                        <span class="status-badge status-cancelled">
                                            <i class="fas fa-times me-1"></i>{{ venta.estado|capitalize }}
                                        </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                            {{ venta.estado|capitalize }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center text-muted">
                                    {% if venta.tipoVeenta %}
                                        {{ venta.tipoVeenta|capitalize }}
                                    {% else %}
                                        No especificado
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_venta_show', {'id': venta.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_venta_edit', {'id': venta.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <i class="fas fa-shopping-cart"></i>
                                    <h4 class="mt-3">No se encontraron ventas</h4>
                                    <p class="text-muted mb-3">Comienza registrando tu primera venta</p>
                                    <a href="{{ path('app_venta_new') }}" class="btn btn-primary-modern btn-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Registrar Primera Venta
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Información de Paginación -->
            {% if ventas|length > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Mostrando <strong>{{ ventas|length }}</strong> ventas en total
                    </div>
                    <div>
                        <!-- Aquí iría la paginación si la hiciera -->
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Anterior</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Siguiente</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initVentaListPage } from "{{ asset('js/venta/list.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            initVentaListPage();
        });
    </script>
{% endblock %}
