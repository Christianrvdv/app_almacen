{% extends 'base.html.twig' %}

{% block title %}Nueva Compra{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_compra_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>
            <h1 class="fw-bold text-primary">Nueva Compra</h1>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_row(form.fecha, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.numero_factura, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_row(form.total, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.estado, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            {{ form_row(form.observaciones, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(form.proveedor, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h5 class="mt-4 fw-bold text-primary">Detalles de la compra</h5>
                    <div id="detalle-compras" data-prototype="{{ form_widget(form.detalleCompras.vars.prototype)|e('html_attr') }}">
                        {% for detalle in form.detalleCompras %}
                            <div class="card bg-light mb-3" style="border-radius: 8px; padding: 15px;">
                                <div class="row align-items-center">
                                    <div class="col-md-3 mb-3">
                                        <div class="form-group">
                                            {{ form_row(detalle.cantidad, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="form-group">
                                            {{ form_row(detalle.precioUnitario, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            {{ form_row(detalle.producto, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-sm btn-danger eliminar-detalle btn-block">
                                    Eliminar
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <button type="button" id="add-detalle" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-1"></i>Agregar Detalle
                    </button>
                    <button type="submit" class="btn btn-primary">Guardar Compra</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addButton = document.getElementById('add-detalle');
            const detalleCompras = document.getElementById('detalle-compras');
            const prototype = detalleCompras.getAttribute('data-prototype');

            addButton.addEventListener('click', function() {
                const newForm = prototype.replace(/__name__/g, Date.now());
                const newRow = document.createElement('div');
                newRow.setAttribute('class', 'card bg-light mb-3');
                newRow.setAttribute('style', 'border-radius: 8px; padding: 15px;');
                newRow.innerHTML = newForm;

                const deleteButton = document.createElement('button');
                deleteButton.setAttribute('type', 'button');
                deleteButton.setAttribute('class', 'btn btn-sm btn-danger eliminar-detalle mt-2 btn-block');
                deleteButton.innerHTML = 'Eliminar';
                newRow.appendChild(deleteButton);

                detalleCompras.appendChild(newRow);
            });

            detalleCompras.addEventListener('click', function(e) {
                if (e.target.classList.contains('eliminar-detalle')) {
                    e.target.closest('.card').remove();
                }
            });
        });
    </script>
{% endblock %}
