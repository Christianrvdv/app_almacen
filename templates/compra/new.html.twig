{% extends 'base.html.twig' %}

{% block title %}Nueva Compra - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_compra_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">ðŸ“¦ Nueva Compra</h1>
                        <p class="mb-0 opacity-75">Registra una nueva compra en el sistema</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Â¡Ã‰xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-shopping-cart me-2"></i>InformaciÃ³n de la Nueva Compra
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- InformaciÃ³n General de la Compra -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>InformaciÃ³n General
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha, 'Fecha de Compra', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.fecha) }}
                                    <div class="form-help-text">Fecha en que se realiza la compra</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.numero_factura, 'NÃºmero de Factura', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.numero_factura, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'placeholder': 'Ej: FAC-001-2024'
                                    }}) }}
                                    {{ form_errors(form.numero_factura) }}
                                    <div class="form-help-text">NÃºmero Ãºnico de la factura del proveedor</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.estado, 'Estado', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.estado, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.estado) }}
                                    <div class="form-help-text">Estado actual de la compra</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.total, 'Total de Compra', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.total, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'required': 'required',
                                            'step': '0.01',
                                            'min': '0'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.total) }}
                                    <div class="form-help-text">Total de la compra incluyendo impuestos</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.proveedor, 'Proveedor', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.proveedor, {'attr': {
                                        'class': 'form-control form-control-modern',
                                    }}) }}
                                    {{ form_errors(form.proveedor) }}
                                    <div class="form-help-text">Selecciona el proveedor (opcional)</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.observaciones, 'Observaciones', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.observaciones, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'rows': '3',
                                        'placeholder': 'Observaciones adicionales sobre la compra...'
                                    }}) }}
                                    {{ form_errors(form.observaciones) }}
                                    <div class="form-help-text">Notas o comentarios sobre la compra (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles de la Compra -->
                    <h3 class="section-title">
                        <i class="fas fa-list-alt me-2"></i>Detalles de la Compra
                    </h3>

                    <div class="form-section">
                        <div id="detalle-compras" data-prototype="{{ form_widget(form.detalleCompras.vars.prototype)|e('html_attr') }}">
                            {% for detalle in form.detalleCompras %}
                                <div class="detalle-card">
                                    <div class="row align-items-center">
                                        <div class="col-md-4 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.producto, 'Producto', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.producto, {'attr': {
                                                    'class': 'form-control form-control-modern',
                                                    'required': 'required'
                                                }}) }}
                                                {{ form_errors(detalle.producto) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.cantidad, 'Cantidad', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.cantidad, {'attr': {
                                                    'class': 'form-control form-control-modern',
                                                    'min': '1',
                                                    'required': 'required'
                                                }}) }}
                                                {{ form_errors(detalle.cantidad) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.precio_compra, 'Precio Compra', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    {{ form_widget(detalle.precio_compra, {'attr': {
                                                        'class': 'form-control form-control-modern',
                                                        'step': '0.01',
                                                        'min': '0',
                                                        'required': 'required'
                                                    }}) }}
                                                </div>
                                                {{ form_errors(detalle.precio_compra) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                <label class="form-label-modern">Subtotal</label>
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    <input type="text" class="form-control form-control-modern subtotal-input" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-modern btn-danger-modern eliminar-detalle">
                                        <i class="fas fa-trash me-2"></i>Eliminar Detalle
                                    </button>
                                </div>
                            {% endfor %}
                        </div>

                        <button type="button" id="add-detalle" class="btn btn-modern btn-outline-modern mb-4">
                            <i class="fas fa-plus me-2"></i>Agregar Detalle
                        </button>

                        <!-- Vista Previa del Total -->
                        <div class="total-preview">
                            <div class="total-preview-item">
                                <span>Total de la Compra:</span>
                                <span id="totalPreview" class="monto-total">$0.00</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de AcciÃ³n -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_compra_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Guardar Compra
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addButton = document.getElementById('add-detalle');
            const detalleCompras = document.getElementById('detalle-compras');
            const prototype = detalleCompras.getAttribute('data-prototype');
            const totalPreview = document.getElementById('totalPreview');
            const totalInput = document.getElementById('{{ form.total.vars.id }}');

            // FunciÃ³n para calcular subtotales y total
            function calcularTotales() {
                let totalCompra = 0;

                document.querySelectorAll('.detalle-card').forEach(card => {
                    const cantidad = parseFloat(card.querySelector('[id$="_cantidad"]').value) || 0;
                    const precio = parseFloat(card.querySelector('[id$="_precio_compra"]').value) || 0;
                    const subtotal = cantidad * precio;

                    // Actualizar subtotal
                    const subtotalInput = card.querySelector('.subtotal-input');
                    if (subtotalInput) {
                        subtotalInput.value = subtotal.toFixed(2);
                    }

                    totalCompra += subtotal;
                });

                // Actualizar total
                totalPreview.textContent = `$${totalCompra.toFixed(2)}`;
                totalInput.value = totalCompra.toFixed(2);
            }

            // Agregar nuevo detalle
            addButton.addEventListener('click', function() {
                const index = document.querySelectorAll('.detalle-card').length;
                const newForm = prototype.replace(/__name__/g, index);
                const newRow = document.createElement('div');
                newRow.setAttribute('class', 'detalle-card');
                newRow.innerHTML = newForm;

                // AÃ±adir campos de subtotal
                const subtotalField = `
                    <div class="col-md-3 mb-3">
                        <div class="form-group-modern">
                            <label class="form-label-modern">Subtotal</label>
                            <div class="input-group input-group-modern">
                                <span class="input-group-text input-group-text-modern">$</span>
                                <input type="text" class="form-control form-control-modern subtotal-input" readonly>
                            </div>
                        </div>
                    </div>
                `;

                const rowContent = newRow.querySelector('.row');
                if (rowContent) {
                    rowContent.insertAdjacentHTML('beforeend', subtotalField);
                }

                // AÃ±adir botÃ³n eliminar
                const deleteButton = document.createElement('button');
                deleteButton.setAttribute('type', 'button');
                deleteButton.setAttribute('class', 'btn btn-modern btn-danger-modern eliminar-detalle');
                deleteButton.innerHTML = '<i class="fas fa-trash me-2"></i>Eliminar Detalle';
                newRow.appendChild(deleteButton);

                detalleCompras.appendChild(newRow);

                // Reasignar eventos a los nuevos campos
                asignarEventosDetalle(newRow);

                // Calcular totales
                calcularTotales();

                // AnimaciÃ³n para el nuevo elemento
                newRow.style.opacity = '0';
                newRow.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    newRow.style.transition = 'all 0.6s ease';
                    newRow.style.opacity = '1';
                    newRow.style.transform = 'translateY(0)';
                }, 100);
            });

            // Eliminar detalle
            detalleCompras.addEventListener('click', function(e) {
                if (e.target.classList.contains('eliminar-detalle') ||
                    e.target.closest('.eliminar-detalle')) {
                    const button = e.target.classList.contains('eliminar-detalle') ?
                        e.target : e.target.closest('.eliminar-detalle');
                    const card = button.closest('.detalle-card');

                    // AnimaciÃ³n de salida
                    card.style.transition = 'all 0.4s ease';
                    card.style.opacity = '0';
                    card.style.transform = 'translateX(100px)';

                    setTimeout(() => {
                        card.remove();
                        calcularTotales();
                    }, 400);
                }
            });

            // FunciÃ³n para asignar eventos a los campos de un detalle
            function asignarEventosDetalle(detalleCard) {
                const cantidadInput = detalleCard.querySelector('[id$="_cantidad"]');
                const precioInput = detalleCard.querySelector('[id$="_precio_compra"]');

                if (cantidadInput) {
                    cantidadInput.addEventListener('input', calcularTotales);
                }

                if (precioInput) {
                    precioInput.addEventListener('input', calcularTotales);
                }
            }

            // Asignar eventos a los detalles existentes
            document.querySelectorAll('.detalle-card').forEach(card => {
                asignarEventosDetalle(card);
            });

            // Calcular totales iniciales
            calcularTotales();

            // AnimaciÃ³n suave para las secciones
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // ValidaciÃ³n de formulario
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Auto-calcular total cuando cambian los detalles
            document.addEventListener('input', function(e) {
                if (e.target.matches('[id$="_cantidad"], [id$="_precio_compra"]')) {
                    calcularTotales();
                }
            });
        });
    </script>
{% endblock %}
