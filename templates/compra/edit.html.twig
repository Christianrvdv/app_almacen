{% extends 'base.html.twig' %}

{% block title %}Editar Compra #{{ compra.id }} - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_compra_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">✏️ Editar Compra #{{ compra.id }}</h1>
                        <p class="mb-0 opacity-75">Actualiza la información de la compra</p>
                    </div>
                    <div>
                        <form method="post" action="{{ path('app_compra_delete', {'id': compra.id}) }}"
                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta compra?');"
                              style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ compra.id) }}">
                            <button type="submit" class="btn btn-outline-light btn-sm rounded-pill px-3">
                                <i class="fas fa-trash me-2"></i>Eliminar Compra
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-edit me-2"></i>Editar Información de la Compra
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'id': 'compra-edit-form'}}) }}

                    <!-- Información General de la Compra -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información General
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha, 'Fecha de Compra', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.fecha) }}
                                    <div class="form-help-text">Fecha en que se realiza la compra</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.numero_factura, 'Número de Factura', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.numero_factura, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'placeholder': 'Ej: FAC-001-2024'
                                    }}) }}
                                    {{ form_errors(form.numero_factura) }}
                                    <div class="form-help-text">Número único de la factura del proveedor</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.total, 'Total de Compra', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.total, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'readonly': 'readonly',
                                            'id': 'compra_total'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.total) }}
                                    <div class="form-help-text">Total calculado automáticamente</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.estado, 'Estado', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.estado, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.estado) }}
                                    <div class="form-help-text">Estado actual de la compra</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.proveedor, 'Proveedor', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.proveedor, {'attr': {
                                        'class': 'form-control form-control-modern',
                                    }}) }}
                                    {{ form_errors(form.proveedor) }}
                                    <div class="form-help-text">Selecciona el proveedor (opcional)</div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.observaciones, 'Observaciones', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.observaciones, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'rows': '3',
                                        'placeholder': 'Observaciones adicionales sobre la compra...'
                                    }}) }}
                                    {{ form_errors(form.observaciones) }}
                                    <div class="form-help-text">Notas o comentarios sobre la compra (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Detalles de la Compra -->
                    <h3 class="section-title">
                        <i class="fas fa-list-alt me-2"></i>Detalles de la Compra
                    </h3>
                    <div class="form-section">

                        <div id="detalle-compras" data-prototype="{{ form_widget(form.detalleCompras.vars.prototype)|e('html_attr') }}">
                            {% for detalle in form.detalleCompras %}
                                <div class="detalle-card">
                                    <div class="row align-items-center">
                                        <div class="col-md-4 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.producto, 'Producto', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.producto, {'attr': {
                                                    'class': 'form-control form-control-modern',
                                                    'required': 'required'
                                                }}) }}
                                                {{ form_errors(detalle.producto) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.cantidad, 'Cantidad', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                {{ form_widget(detalle.cantidad, {'attr': {
                                                    'class': 'form-control form-control-modern',
                                                    'min': '1',
                                                    'required': 'required'
                                                }}) }}
                                                {{ form_errors(detalle.cantidad) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                {{ form_label(detalle.precioUnitario, 'Precio Unitario', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    {{ form_widget(detalle.precioUnitario, {'attr': {
                                                        'class': 'form-control form-control-modern',
                                                        'step': '0.01',
                                                        'min': '0',
                                                        'required': 'required'
                                                    }}) }}
                                                </div>
                                                {{ form_errors(detalle.precioUnitario) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-group-modern">
                                                <label class="form-label-modern">Subtotal</label>
                                                <div class="input-group input-group-modern">
                                                    <span class="input-group-text input-group-text-modern">$</span>
                                                    <input type="text" class="form-control form-control-modern subtotal-input" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-modern btn-danger-modern eliminar-detalle">
                                        <i class="fas fa-trash me-2"></i>Eliminar Detalle
                                    </button>
                                </div>
                            {% endfor %}
                        </div>

                        <button type="button" id="add-detalle" class="btn btn-modern btn-outline-modern mb-4">
                            <i class="fas fa-plus me-2"></i>Agregar Detalle
                        </button>

                        <!-- Vista Previa del Total -->
                        <div class="total-preview">
                            <div class="total-preview-item">
                                <span>Total de la Compra:</span>
                                <span id="totalPreview" class="monto-total">${{ compra.total|number_format(2, '.', ',') }}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_compra_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Actualizar Compra
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/compra/edit.js') }}"></script>
{% endblock %}
