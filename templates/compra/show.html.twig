{% extends 'base.html.twig' %}

{% block title %}Compra #{{ compra.id }} - Detalles de la Compra{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_compra_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">💰 Compra #{{ compra.id }}</h1>
                        <p class="mb-0 opacity-75">Detalles completos de la compra</p>
                    </div>
                    <div>
                        {% set estado = compra.estado|lower %}
                        {% if estado == 'pagada' %}
                            <span class="badge-modern bg-success">
                                <i class="fas fa-check-circle me-1"></i>Pagada
                            </span>
                        {% elseif estado == 'pendiente' %}
                            <span class="badge-modern bg-warning text-dark">
                                <i class="fas fa-clock me-1"></i>Pendiente
                            </span>
                        {% else %}
                            <span class="badge-modern bg-secondary">
                                <i class="fas fa-question-circle me-1"></i>{{ compra.estado|capitalize }}
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Información Principal -->
            <div class="info-grid">
                <!-- Información de la Compra -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-receipt me-2"></i>Información de la Compra
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Número de Factura</div>
                            <div class="info-value">
                                <strong>{{ compra.numeroFactura }}</strong>
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Fecha de Compra</div>
                            <div class="info-value">
                                {{ compra.fecha ? compra.fecha|date('d/m/Y H:i') : 'No disponible' }}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Total de la Compra</div>
                            <div class="info-value price-highlight">
                                ${{ compra.total|number_format(2, ',', '.') }}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Estado</div>
                            <div class="info-value">
                                {% set estado = compra.estado|lower %}
                                {% if estado == 'pagada' %}
                                    <span class="badge-modern bg-success">
                                        <i class="fas fa-check me-1"></i>Pagada
                                    </span>
                                {% elseif estado == 'pendiente' %}
                                    <span class="badge-modern bg-warning text-dark">
                                        <i class="fas fa-clock me-1"></i>Pendiente
                                    </span>
                                {% else %}
                                    <span class="badge-modern bg-secondary">
                                        {{ compra.estado|capitalize }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información Adicional -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle me-2"></i>Información Adicional
                    </div>
                    <div class="card-body">
                        <div class="metadata">
                            <div class="metadata-item">
                                <span class="metadata-label">Observaciones</span>
                                <span class="metadata-value">
                                    {% if compra.observaciones %}
                                        {{ compra.observaciones }}
                                    {% else %}
                                        <span class="text-muted">Sin observaciones</span>
                                    {% endif %}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">ID de la Compra</span>
                                <span class="metadata-value">
                                    <code>#{{ compra.id }}</code>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detalles de la Compra -->
            <h3 class="section-title">
                <i class="fas fa-box me-2"></i>Detalles de la Compra
            </h3>
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-list me-2"></i>Productos Comprados
                    <span class="badge bg-light text-dark ms-2">{{ detalle_compras|length }} productos</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-show table-hover align-middle mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detalle in detalle_compras %}
                                <tr>
                                    <td>
                                        <div class="product-name">
                                            {% if detalle.producto %}
                                                {{ detalle.producto.nombre }}
                                            {% else %}
                                                <span class="text-muted">Producto no disponible</span>
                                            {% endif %}
                                        </div>
                                        {% if detalle.producto and detalle.producto.categoria %}
                                            <div class="product-category">
                                                <small>
                                                    <i class="fas fa-tag me-1"></i>
                                                    {{ detalle.producto.categoria.nombre }}
                                                </small>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                            <span class="badge-modern bg-primary">
                                                <i class="fas fa-cubes me-1"></i>
                                                {{ detalle.cantidad }} unidades
                                            </span>
                                    </td>
                                    <td>
                                        <strong>$ {{ detalle.precioUnitario|number_format(2, ',', '.') }}</strong>
                                    </td>
                                    <td>
                                        <strong class="text-success">
                                            $ {{ detalle.subtotal|number_format(2, ',', '.') }}
                                        </strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_detalle_compra_show', {'id': detalle.id}) }}"
                                               class="btn btn-sm btn-modern btn-outline-modern me-1"
                                               title="Ver detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_detalle_compra_edit', {'id': detalle.id}) }}"
                                               class="btn btn-sm btn-modern btn-warning-modern"
                                               title="Editar detalle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                        No se encontraron detalles de compra.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr class="table-active">
                                <td colspan="4" class="text-end fw-bold">Total General:</td>
                                <td class="fw-bold text-success h5">
                                    $ {{ compra.total|number_format(2, ',', '.') }}
                                </td>
                                <td></td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    <a href="{{ path('app_compra_edit', {'id': compra.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar Compra
                    </a>

                    <a href="{{ path('app_compra_index') }}"
                       class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-list me-2"></i>Volver al Listado
                    </a>

                    <!-- Botón de eliminar con confirmación -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar Compra
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar la compra <strong>#{{ compra.id }}</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer y se perderán todos los datos asociados a la compra.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('compra/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Animación suave para las tarjetas
            const cards = document.querySelectorAll('.stats-card, .detalle-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Animación para las filas de la tabla
            const tableRows = document.querySelectorAll('.table-show tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateX(-20px)';

                setTimeout(() => {
                    row.style.transition = 'all 0.5s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateX(0)';
                }, index * 100 + 400);
            });
        });
    </script>
{% endblock %}
