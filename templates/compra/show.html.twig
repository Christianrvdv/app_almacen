{% extends 'base.html.twig' %}

{% block title %}Compra #{{ compra.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_compra_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>

            <h1 class="fw-bold text-primary">Compra #{{ compra.id }}</h1>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Fecha</div>
                    <div class="col-sm-9">{{ compra.fecha ? compra.fecha|date('d/m/Y H:i') : '-' }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">NÃºmero de factura</div>
                    <div class="col-sm-9"><strong>{{ compra.numeroFactura }}</strong></div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Total</div>
                    <div class="col-sm-9 h5 mb-0 text-success">$ {{ compra.total|number_format(2, ',', '.') }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Estado</div>
                    <div class="col-sm-9">
                        {% set estado = compra.estado|lower %}
                        {% if estado == 'pagada' %}
                            <span class="badge bg-success">Pagada</span>
                        {% elseif estado == 'pendiente' %}
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ compra.estado|capitalize }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-3 fw-bold text-muted">Observaciones</div>
                    <div class="col-sm-9">{{ compra.observaciones }}</div>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_compra_edit', {'id': compra.id}) }}" class="btn btn-warning btn-sm">
                <i class="fas fa-edit me-1"></i>Editar
            </a>

            {{ include('compra/_delete_form.html.twig') }}
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for detalle in detalle_compras %}
                            <tr>
                                <td>{{ detalle.id }}</td>
                                <td>{{ detalle.cantidad }}</td>
                                <td>$ {{ detalle.precioUnitario|number_format(2, ',', '.') }}</td>
                                <td><strong>$ {{ detalle.subtotal|number_format(2, ',', '.') }}</strong></td>
                                <td class="text-center">
                                    <a href="{{ path('app_detalle_compra_show', {'id': detalle.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_detalle_compra_edit', {'id': detalle.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No se encontraron detalles de compra.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
