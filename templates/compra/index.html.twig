{% extends 'base.html.twig' %}

{% block title %}Listado de Compras{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Compras</h1>
            <a href="{{ path('app_compra_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Nueva Compra
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Fecha</th>
                            <th>NÃºmero de Factura</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Observaciones</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for compra in compras %}
                            <tr>
                                <td>{{ compra.id }}</td>
                                <td>{{ compra.fecha ? compra.fecha|date('d/m/Y H:i') : '-' }}</td>
                                <td><strong>{{ compra.numeroFactura }}</strong></td>
                                <td>${{ compra.total|number_format(2, ',', '.') }}</td>
                                <td>
                                    {% set estado = compra.estado|lower %}
                                    {% if estado == 'pagada' %}
                                        <span class="badge bg-success">Pagada</span>
                                    {% elseif estado == 'pendiente' %}
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ compra.estado|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ compra.observaciones|slice(0, 30) }}{{ compra.observaciones|length > 30 ? '...' : '' }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_compra_show', {'id': compra.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_compra_edit', {'id': compra.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">No se encontraron compras.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
