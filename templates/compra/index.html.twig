{% extends 'base.html.twig' %}

{% block title %}Listado de Compras{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📦 Gestión de Compras</h1>
                        <p class="mb-0 opacity-75">Administra y consulta el historial de compras</p>
                    </div>
                    <div>
                        <a href="{{ path('app_compra_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nueva Compra
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas Rápidas -->
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalCompras }}</div>
                            <div class="metric-label">Total Compras</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalPagadas }}
                            </div>
                            <div class="metric-label">Compras Pagadas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ totalPendientes }}
                            </div>
                            <div class="metric-label">Compras Pendientes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div class="metric-value text-info">
                                ${{ gastosTotales|number_format(2, ',', '.') }}
                            </div>
                            <div class="metric-label">Gastos Totales</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de Búsqueda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern" placeholder="🔍 Buscar compras por ID, factura o estado...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Compras -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Compra</th>
                            <th>Fecha</th>
                            <th>Número de Factura</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Observaciones</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for compra in compras %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-file-invoice text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="compra-name">Compra #{{ compra.id }}</div>
                                            <small class="text-muted">
                                                📋 Factura: {{ compra.numeroFactura }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        <strong>{{ compra.fecha ? compra.fecha|date('d/m/Y') : '-' }}</strong>
                                        <br>
                                        <small>{{ compra.fecha ? compra.fecha|date('H:i') : '' }}</small>
                                    </div>
                                </td>
                                <td>
                                    <strong>{{ compra.numeroFactura }}</strong>
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ compra.total|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    {% set estado = compra.estado|lower %}
                                    {% if estado == 'pagada' %}
                                        <span class="status-badge status-pagada">
                                            <i class="fas fa-check me-1"></i>{{ compra.estado|capitalize }}
                                        </span>
                                    {% elseif estado == 'pendiente' %}
                                        <span class="status-badge status-pendiente">
                                            <i class="fas fa-clock me-1"></i>{{ compra.estado|capitalize }}
                                        </span>
                                    {% elseif estado == 'cancelada' %}
                                        <span class="status-badge status-cancelada">
                                            <i class="fas fa-times me-1"></i>{{ compra.estado|capitalize }}
                                        </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                            {{ compra.estado|capitalize }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if compra.observaciones %}
                                        <span class="text-muted" title="{{ compra.observaciones }}">
                                            {{ compra.observaciones|slice(0, 30) }}{{ compra.observaciones|length > 30 ? '...' : '' }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_compra_show', {'id': compra.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_compra_edit', {'id': compra.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="empty-state">
                                    <i class="fas fa-shopping-bag"></i>
                                    <h4 class="mt-3">No se encontraron compras</h4>
                                    <p class="text-muted mb-3">Comienza registrando tu primera compra</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Información de Paginación -->
            {% if compras.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Página <strong>{{ compras.currentPageNumber }}</strong> de <strong>{{ compras.pageCount }}</strong> -
                        Mostrando <strong>{{ compras.getItemNumberPerPage * (compras.currentPageNumber - 1) + 1 }}-{{ min(compras.getItemNumberPerPage * compras.currentPageNumber, compras.getTotalItemCount) }}</strong> de <strong>{{ compras.getTotalItemCount }}</strong> compras
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Botón Anterior #}
                                <li class="page-item {{ compras.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ compras.currentPageNumber == 1 ? '#' : path('app_compra_index', {'page': compras.currentPageNumber - 1}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera página #}
                                {% if compras.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_compra_index', {'page': 1}) }}">1</a>
                                    </li>
                                    {% if compras.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# Páginas alrededor de la actual #}
                                {% for i in max(1, compras.currentPageNumber - 1)..min(compras.pageCount, compras.currentPageNumber + 1) %}
                                    <li class="page-item {{ compras.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_compra_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# Última página #}
                                {% if compras.currentPageNumber < compras.pageCount - 1 %}
                                    {% if compras.currentPageNumber < compras.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_compra_index', {'page': compras.pageCount}) }}">{{ compras.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Botón Siguiente #}
                                <li class="page-item {{ compras.currentPageNumber == compras.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ compras.currentPageNumber == compras.pageCount ? '#' : path('app_compra_index', {'page': compras.currentPageNumber + 1}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initIndexPage } from "{{ asset('js/compra/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
