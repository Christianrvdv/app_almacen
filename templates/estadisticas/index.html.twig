{% extends 'base.html.twig' %}

{% block title %}Estadísticas Financieras{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
    <style>
        .chart-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .chart-wrapper {
            position: relative;
            height: 400px;
        }

        .loading-chart {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        .spinner-chart {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .toggle-slider {
            background-color: var(--primary-color);
        }

        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .progress-thin {
            height: 6px;
            border-radius: 3px;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .metric-value {
                font-size: 1.8rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📊 Dashboard Financiero</h1>
                        <p class="mb-0 opacity-75">Resumen completo del rendimiento de tu negocio</p>
                    </div>
                    <div>
                        <div class="text-white opacity-75">
                            <small>Actualizado: {{ "now"|date("d/m/Y H:i") }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                </div>
            {% endfor %}
            <!-- Alertas Modernas -->
            {% if productosAgotados > 0 or productosStockBajo > 0 or metricasAdicionales.productos_problema_margen > 0 %}
                <div class="alert-modern alert alert-warning mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3 text-warning"></i>
                        <div class="flex-grow-1">
                            <h5 class="alert-heading mb-2">⚠️ Alertas del Sistema</h5>
                            <div class="d-flex flex-wrap gap-2">
                                {% if productosAgotados > 0 %}
                                    <span class="badge-modern bg-danger">
                                    <i class="fas fa-times-circle me-1"></i>
                                    {{ productosAgotados }} Productos Agotados
                                </span>
                                {% endif %}
                                {% if productosStockBajo > 0 %}
                                    <span class="badge-modern bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    {{ productosStockBajo }} Stock Bajo
                                </span>
                                {% endif %}
                                {% if metricasAdicionales.productos_problema_margen > 0 %}
                                    <span class="badge-modern bg-info text-white">
                                    <i class="fas fa-chart-line me-1"></i>
                                    {{ metricasAdicionales.productos_problema_margen }} Productos con Margen Problemático
                                </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Filtros por Período -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card-modern">
                        <div class="card-body">
                            <h5 class="card-title mb-3">🕒 Filtros de Período</h5>
                            <form method="get" action="{{ path('app_estadisticas_index') }}" class="row g-3 align-items-end">
                                <div class="col-md-4">
                                    <label for="filtro" class="form-label">Período:</label>
                                    <select class="form-select" id="filtro" name="filtro">
                                        <option value="hoy" {{ filtro_actual == 'hoy' ? 'selected' : '' }}>Hoy</option>
                                        <option value="ayer" {{ filtro_actual == 'ayer' ? 'selected' : '' }}>Ayer</option>
                                        <option value="fecha_especifica" {{ filtro_actual == 'fecha_especifica' ? 'selected' : '' }}>Fecha Específica</option>
                                        <option value="semana_actual" {{ filtro_actual == 'semana_actual' ? 'selected' : '' }}>Esta Semana</option>
                                        <option value="semana_pasada" {{ filtro_actual == 'semana_pasada' ? 'selected' : '' }}>Semana Pasada</option>
                                        <option value="mes_actual" {{ filtro_actual == 'mes_actual' ? 'selected' : '' }}>Este Mes</option>
                                        <option value="mes_pasado" {{ filtro_actual == 'mes_pasado' ? 'selected' : '' }}>Mes Pasado</option>
                                        <option value="ultimos_3_meses" {{ filtro_actual == 'ultimos_3_meses' ? 'selected' : '' }}>Últimos 3 Meses</option>
                                        <option value="ultimos_6_meses" {{ filtro_actual == 'ultimos_6_meses' ? 'selected' : '' }}>Últimos 6 Meses</option>
                                        <option value="ano_actual" {{ filtro_actual == 'ano_actual' ? 'selected' : '' }}>Este Año</option>
                                        <option value="ano_pasado" {{ filtro_actual == 'ano_pasado' ? 'selected' : '' }}>Año Pasado</option>
                                        <option value="todo" {{ filtro_actual == 'todo' ? 'selected' : '' }}>Todo el Historial</option>
                                    </select>
                                </div>

                                <div class="col-md-4" id="fecha-especifica-container" style="{{ filtro_actual == 'fecha_especifica' ? '' : 'display: none;' }}">
                                    <label for="fecha_especifica" class="form-label">Fecha Específica:</label>
                                    <input type="date" class="form-control" id="fecha_especifica" name="fecha_especifica"
                                           value="{{ fecha_especifica }}">
                                </div>

                                <div class="col-md-4">
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-filter me-2"></i>Aplicar Filtros
                                        </button>
                                        <a href="{{ path('app_estadisticas_index') }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-2"></i>Limpiar
                                        </a>
                                    </div>
                                </div>
                            </form>

                            <!-- Indicador del período activo -->
                            {% if filtro_actual != 'todo' %}
                                <div class="mt-3">
                        <span class="badge-modern bg-info">
                            <i class="fas fa-calendar me-1"></i>
                            Período activo:
                            {% if filtro_actual == 'hoy' %}Hoy
                            {% elseif filtro_actual == 'ayer' %}Ayer
                            {% elseif filtro_actual == 'fecha_especifica' %}Fecha específica: {{ fecha_especifica|date('d/m/Y') }}
                            {% elseif filtro_actual == 'semana_actual' %}Esta semana
                            {% elseif filtro_actual == 'semana_pasada' %}Semana pasada
                            {% elseif filtro_actual == 'mes_actual' %}Este mes
                            {% elseif filtro_actual == 'mes_pasado' %}Mes pasado
                            {% elseif filtro_actual == 'ultimos_3_meses' %}Últimos 3 meses
                            {% elseif filtro_actual == 'ultimos_6_meses' %}Últimos 6 meses
                            {% elseif filtro_actual == 'ano_actual' %}Este año
                            {% elseif filtro_actual == 'ano_pasado' %}Año pasado
                            {% else %}Todo el historial
                            {% endif %}
                        </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grid de Métricas Principales -->
            <div class="dashboard-stats">
                <!-- Ganancias Totales -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-success mb-3">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <div class="metric-value text-success">${{ gananciasBrutas|number_format(0) }}</div>
                        <div class="metric-label">Ganancias Totales</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ventas completadas</small>
                    </div>
                </div>

                <!-- Gastos Totales -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-danger mb-3">
                            <i class="fas fa-receipt fa-2x"></i>
                        </div>
                        <div class="metric-value text-danger">${{ gastosBrutos|number_format(0) }}</div>
                        <div class="metric-label">Gastos Totales</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-danger" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Compras realizadas</small>
                    </div>
                </div>

                <!-- Dinero Actual -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-primary mb-3">
                            <i class="fas fa-wallet fa-2x"></i>
                        </div>
                        <div class="metric-value text-primary">${{ dineroActual|number_format(0) }}</div>
                        <div class="metric-label">Dinero Actual</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-primary" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ganancias - Gastos</small>
                    </div>
                </div>

                <!-- Margen Bruto -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-info mb-3">
                            <i class="fas fa-percentage fa-2x"></i>
                        </div>
                        <div class="metric-value text-info">{{ margenBrutoPromedio|number_format(1) }}%</div>
                        <div class="metric-label">Margen Bruto</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-info" style="width: {{ (margenBrutoPromedio > 100 ? 100 : margenBrutoPromedio)|default(0) }}%"></div>
                        </div>
                        <small class="text-muted mt-2">
                            {{ metricasAdicionales.productos_analizados_margen }} productos analizados
                        </small>
                    </div>
                </div>
            </div>

            <!-- Segunda Fila de Métricas -->
            <div class="dashboard-stats">
                <!-- Valor Inventario -->
                <a href="{{ path('app_producto_index') }}" class="text-decoration-none">
                    <div class="dashboard-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning mb-3">
                                <i class="fas fa-boxes fa-2x"></i>
                            </div>
                            <div class="metric-value text-warning">${{ valorInventario|number_format(0) }}</div>
                            <div class="metric-label">Valor del Inventario</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-warning" style="width: 100%"></div>
                            </div>
                            <small class="text-muted mt-2">Stock actual valorizado</small>
                        </div>
                    </div>
                </a>

                <!-- Ticket Promedio -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-purple mb-3" style="color: #6f42c1;">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                        <div class="metric-value" style="color: #6f42c1;">${{ ticketPromedio|number_format(0) }}</div>
                        <div class="metric-label">Ticket Promedio</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar" style="background-color: #6f42c1; width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Por venta completada</small>
                    </div>
                </div>

                <!-- Dinero Pendiente -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-orange mb-3" style="color: #fd7e14;">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <div class="metric-value" style="color: #fd7e14;">${{ dineroPendiente|number_format(0) }}</div>
                        <div class="metric-label">Pendiente por Cobrar</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar" style="background-color: #fd7e14; width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ventas pendientes de pago</small>
                    </div>
                </div>

                <!-- Alertas Stock -->
                <a href="{{ path('app_producto_index') }}" class="text-decoration-none">
                    <div class="dashboard-card card-with-badge">
                        {% if productosAgotados > 0 %}
                            <div class="stat-badge">{{ productosAgotados }}</div>
                        {% endif %}
                        <div class="metric-card">
                            <div class="metric-icon text-danger mb-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div class="d-flex justify-content-around text-center">
                                <div>
                                    <div class="metric-value text-danger">{{ productosAgotados }}</div>
                                    <div class="metric-label">Agotados</div>
                                </div>
                                <div>
                                    <div class="metric-value text-warning">{{ productosStockBajo }}</div>
                                    <div class="metric-label">Stock Bajo</div>
                                </div>
                            </div>
                            <div class="progress progress-thin mt-2">
                                <div class="progress-bar bg-danger" style="width: 50%"></div>
                                <div class="progress-bar bg-warning" style="width: 50%"></div>
                            </div>
                            <small class="text-muted mt-2">Estado del inventario</small>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gráfico de Evolución -->
            <div class="chart-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 fw-bold">📈 Evolución de Ventas vs Compras (Últimos 30 días)</h4>
                </div>

                <div class="chart-wrapper">
                    <div id="chartLoading" class="loading-chart">
                        <div class="spinner-chart"></div>
                    </div>
                    <canvas id="statsChart" style="display: none;"></canvas>
                </div>
            </div>

            <!-- Sección de Rankings -->
            <div class="row">
                <!-- Top Productos Rentables -->
                <div class="col-lg-6 mb-4">
                    <h4 class="section-title">🏆 Productos Más Rentables</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Margen</th>
                                <th class="text-end">Precio Venta</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for producto in topProductosRentables %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-cube text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ producto.nombre|length > 25 ? producto.nombre|slice(0, 25) ~ '...' : producto.nombre }}</div>
                                                <small class="text-muted">Costo: ${{ producto.precio_compra|number_format(2) }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                    <span class="badge-modern bg-success">
                                        {{ producto.margen_porcentual|number_format(1) }}%
                                    </span>
                                    </td>
                                    <td class="text-end fw-bold text-primary price-cell">
                                        ${{ producto.precio_venta_actual|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Top Clientes -->
                <div class="col-lg-6 mb-4">
                    <h4 class="section-title">👥 Mejores Clientes</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Cliente</th>
                                <th class="text-end">Total Gastado</th>
                                <th class="text-center">Compras</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cliente in topClientes %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-user text-info"></i>
                                            </div>
                                            <div class="product-name">{{ cliente.nombre|length > 20 ? cliente.nombre|slice(0, 20) ~ '...' : cliente.nombre }}</div>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ cliente.total_gastado|number_format(2) }}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ cliente.total_compras }}</span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-users fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Top Proveedores -->
            <div class="row">
                <div class="col-12">
                    <h4 class="section-title">🏭 Proveedores Principales</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Proveedor</th>
                                <th class="text-end">Total Comprado</th>
                                <th class="text-center">Compras</th>
                                <th class="text-end">Compra Promedio</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for proveedor in topProveedores %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-truck text-warning"></i>
                                            </div>
                                            <div class="product-name">{{ proveedor.nombre|length > 30 ? proveedor.nombre|slice(0, 30) ~ '...' : proveedor.nombre }}</div>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-danger price-cell">
                                        ${{ proveedor.total_comprado|number_format(2) }}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-info">{{ proveedor.total_compras }}</span>
                                    </td>
                                    <td class="text-end text-muted price-cell">
                                        ${{ (proveedor.total_comprado / proveedor.total_compras)|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-warehouse fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Métricas Adicionales -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📊 Métricas Generales</h4>
                    <div class="stats-grid">
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-info mb-3">
                                    <i class="fas fa-cubes fa-2x"></i>
                                </div>
                                <div class="metric-value text-info">{{ metricasAdicionales.total_productos }}</div>
                                <div class="metric-label">Total Productos</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-success mb-3">
                                    <i class="fas fa-shopping-bag fa-2x"></i>
                                </div>
                                <div class="metric-value text-success">{{ metricasAdicionales.total_ventas }}</div>
                                <div class="metric-label">Total Ventas</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-primary mb-3">
                                    <i class="fas fa-truck-loading fa-2x"></i>
                                </div>
                                <div class="metric-value text-primary">{{ metricasAdicionales.total_compras }}</div>
                                <div class="metric-label">Total Compras</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-warning mb-3">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <div class="metric-value text-warning">{{ metricasAdicionales.total_clientes }}</div>
                                <div class="metric-label">Total Clientes</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nuevas Métricas Avanzadas -->
            <!-- Eficiencia de Inventario -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📦 Eficiencia de Inventario</h4>
                    <div class="stats-grid">
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-success mb-3">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                                <div class="metric-value text-success">{{ eficienciaInventario.porcentaje_optimo|default(0)|number_format(1) }}%</div>
                                <div class="metric-label">Stock Óptimo</div>
                                <div class="progress progress-thin">
                                    <div class="progress-bar bg-success" style="width: {{ eficienciaInventario.porcentaje_optimo|default(0) }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ eficienciaInventario.stock_optimo|default(0) }} de {{ eficienciaInventario.total_productos|default(0) }} productos</small>
                            </div>
                        </div>

                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-warning mb-3">
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                                <div class="metric-value text-warning">{{ eficienciaInventario.stock_bajo|default(0) }}</div>
                                <div class="metric-label">Stock Bajo</div>
                                <div class="progress progress-thin">
                                    {% set porcentaje_stock_bajo = eficienciaInventario.total_productos > 0 ? (eficienciaInventario.stock_bajo / eficienciaInventario.total_productos * 100) : 0 %}
                                    <div class="progress-bar bg-warning" style="width: {{ porcentaje_stock_bajo|number_format(1) }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ porcentaje_stock_bajo|number_format(1) }}% del inventario</small>
                            </div>
                        </div>

                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-danger mb-3">
                                    <i class="fas fa-times-circle fa-2x"></i>
                                </div>
                                <div class="metric-value text-danger">{{ eficienciaInventario.agotados|default(0) }}</div>
                                <div class="metric-label">Productos Agotados</div>
                                <div class="progress progress-thin">
                                    {% set porcentaje_agotados = eficienciaInventario.total_productos > 0 ? (eficienciaInventario.agotados / eficienciaInventario.total_productos * 100) : 0 %}
                                    <div class="progress-bar bg-danger" style="width: {{ porcentaje_agotados|number_format(1) }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ porcentaje_agotados|number_format(1) }}% del inventario</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Rotación y Comportamiento de Clientes -->
            <div class="row mt-4">
                <div class="col-lg-6 mb-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <h5 class="section-title mb-4">🔄 Rotación de Productos</h5>
                            <div class="metric-icon text-info mb-3">
                                <i class="fas fa-sync-alt fa-2x"></i>
                            </div>
                            <div class="metric-value text-info">{{ rotacionProductos.tasa_rotacion|default(0)|number_format(1) }}%</div>
                            <div class="metric-label">Tasa de Rotación</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-info" style="width: {{ rotacionProductos.tasa_rotacion|default(0) }}%"></div>
                            </div>
                            <div class="row mt-3 text-center">
                                <div class="col-6">
                                    <div class="fw-bold text-primary">{{ rotacionProductos.productos_vendidos|default(0) }}</div>
                                    <small class="text-muted">Productos Vendidos</small>
                                </div>
                                <div class="col-6">
                                    <div class="fw-bold text-secondary">{{ rotacionProductos.productos_activos|default(0) }}</div>
                                    <small class="text-muted">Productos Activos</small>
                                </div>
                            </div>
                            <small class="text-muted mt-2">Últimos 30 días</small>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <h5 class="section-title mb-4">👥 Comportamiento de Clientes</h5>
                            <div class="metric-icon text-purple mb-3" style="color: #6f42c1;">
                                <i class="fas fa-user-friends fa-2x"></i>
                            </div>
                            <div class="metric-value" style="color: #6f42c1;">{{ metricasClientes.tasa_recurrencia|default(0)|number_format(1) }}%</div>
                            <div class="metric-label">Tasa de Recurrencia</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar" style="background-color: #6f42c1; width: {{ metricasClientes.tasa_recurrencia|default(0) }}%"></div>
                            </div>
                            <div class="row mt-3 text-center">
                                <div class="col-4">
                                    <div class="fw-bold text-primary">{{ metricasClientes.total_clientes|default(0) }}</div>
                                    <small class="text-muted">Total Clientes</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold text-success">{{ metricasClientes.clientes_recurrentes|default(0) }}</div>
                                    <small class="text-muted">Recurrentes</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold text-info">{{ metricasClientes.promedio_ventas_por_cliente|default(0)|number_format(1) }}</div>
                                    <small class="text-muted">Promedio Ventas</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos con Mejor Rendimiento -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">🚀 Productos con Mejor Rendimiento</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Unidades Vendidas</th>
                                <th class="text-center">Margen</th>
                                <th class="text-end">Ingresos Totales</th>
                                <th class="text-end">Ganancia Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for producto in productosMejorRendimiento %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-star text-warning"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ producto.nombre|length > 30 ? producto.nombre|slice(0, 30) ~ '...' : producto.nombre }}</div>
                                                <small class="text-muted">Costo: ${{ producto.precio_compra|number_format(2) }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ producto.unidades_vendidas }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-success">{{ producto.margen_porcentual|number_format(1) }}%</span>
                                    </td>
                                    <td class="text-end fw-bold text-info price-cell">
                                        ${{ producto.ingresos_totales|number_format(2) }}
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ producto.ganancia_total|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Ventas por Categoría -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📊 Ventas por Categoría</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Categoría</th>
                                <th class="text-center">Total Ventas</th>
                                <th class="text-center">Productos Vendidos</th>
                                <th class="text-end">Ingresos Totales</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categoria in ventasPorCategoria %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-folder text-primary"></i>
                                            </div>
                                            <div class="product-name">{{ categoria.categoria }}</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-info">{{ categoria.total_ventas }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-secondary">{{ categoria.productos_vendidos }}</span>
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ categoria.total_ingresos|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-folder-open fa-2x mb-2"></i><br>
                                        No hay datos disponibles por categoría
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Margen por Categoría -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">💹 Margen por Categoría</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Categoría</th>
                                <th class="text-center">Total Productos</th>
                                <th class="text-center">Margen Promedio</th>
                                <th class="text-center">Productos con Problemas</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categoria in margenPorCategoria %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-chart-pie text-warning"></i>
                                            </div>
                                            <div class="product-name">{{ categoria.categoria }}</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ categoria.total_productos }}</span>
                                    </td>
                                    <td class="text-center">
                                        {% set margen = categoria.margen_promedio %}
                                        <span class="badge-modern {{ margen > 30 ? 'bg-success' : (margen > 15 ? 'bg-warning' : 'bg-danger') }}">
                                        {{ margen|number_format(1) }}%
                                    </span>
                                    </td>
                                    <td class="text-center">
                                        {% if categoria.productos_problema > 0 %}
                                            <span class="badge-modern bg-danger">{{ categoria.productos_problema }}</span>
                                        {% else %}
                                            <span class="badge-modern bg-success">0</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-chart-line fa-2x mb-2"></i><br>
                                        No hay datos de margen por categoría
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Pasar datos de PHP/JSON a JavaScript
        window.ventasDiarias = {{ ventasDiarias|json_encode()|raw }};
        window.comprasDiarias = {{ comprasDiarias|json_encode()|raw }};
    </script>
    <script type="module" src="{{ asset('js/index.js') }}"></script>
{% endblock %}
