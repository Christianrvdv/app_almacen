{% extends 'base.html.twig' %}

{% block title %}Estadísticas Financieras{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
    <style>
        .chart-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .chart-wrapper {
            position: relative;
            height: 400px;
        }

        .loading-chart {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        .spinner-chart {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .toggle-slider {
            background-color: var(--primary-color);
        }

        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .progress-thin {
            height: 6px;
            border-radius: 3px;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .metric-value {
                font-size: 1.8rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📊 Dashboard Financiero</h1>
                        <p class="mb-0 opacity-75">Resumen completo del rendimiento de tu negocio</p>
                    </div>
                    <div>
                        <div class="text-white opacity-75">
                            <small>Actualizado: {{ "now"|date("d/m/Y H:i") }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Alertas Modernas -->
            {% if productosAgotados > 0 or productosStockBajo > 0 or metricasAdicionales.productos_problema_margen > 0 %}
                <div class="alert-modern alert alert-warning mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3 text-warning"></i>
                        <div class="flex-grow-1">
                            <h5 class="alert-heading mb-2">⚠️ Alertas del Sistema</h5>
                            <div class="d-flex flex-wrap gap-2">
                                {% if productosAgotados > 0 %}
                                    <span class="badge-modern bg-danger">
                                    <i class="fas fa-times-circle me-1"></i>
                                    {{ productosAgotados }} Productos Agotados
                                </span>
                                {% endif %}
                                {% if productosStockBajo > 0 %}
                                    <span class="badge-modern bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    {{ productosStockBajo }} Stock Bajo
                                </span>
                                {% endif %}
                                {% if metricasAdicionales.productos_problema_margen > 0 %}
                                    <span class="badge-modern bg-info text-white">
                                    <i class="fas fa-chart-line me-1"></i>
                                    {{ metricasAdicionales.productos_problema_margen }} Productos con Margen Problemático
                                </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Grid de Métricas Principales -->
            <div class="dashboard-stats">
                <!-- Ganancias Totales -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-success mb-3">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <div class="metric-value text-success">${{ gananciasBrutas|number_format(0) }}</div>
                        <div class="metric-label">Ganancias Totales</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ventas completadas</small>
                    </div>
                </div>

                <!-- Gastos Totales -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-danger mb-3">
                            <i class="fas fa-receipt fa-2x"></i>
                        </div>
                        <div class="metric-value text-danger">${{ gastosBrutos|number_format(0) }}</div>
                        <div class="metric-label">Gastos Totales</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-danger" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Compras realizadas</small>
                    </div>
                </div>

                <!-- Dinero Actual -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-primary mb-3">
                            <i class="fas fa-wallet fa-2x"></i>
                        </div>
                        <div class="metric-value text-primary">${{ dineroActual|number_format(0) }}</div>
                        <div class="metric-label">Dinero Actual</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-primary" style="width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ganancias - Gastos</small>
                    </div>
                </div>

                <!-- Margen Bruto -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-info mb-3">
                            <i class="fas fa-percentage fa-2x"></i>
                        </div>
                        <div class="metric-value text-info">{{ margenBrutoPromedio|number_format(1) }}%</div>
                        <div class="metric-label">Margen Bruto</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar bg-info" style="width: {{ margenBrutoPromedio > 100 ? 100 : margenBrutoPromedio }}%"></div>
                        </div>
                        <small class="text-muted mt-2">
                            {{ metricasAdicionales.productos_analizados_margen }} productos analizados
                        </small>
                    </div>
                </div>
            </div>

            <!-- Segunda Fila de Métricas -->
            <div class="dashboard-stats">
                <!-- Valor Inventario -->
                <a href="{{ path('app_producto_index') }}" class="text-decoration-none">
                    <div class="dashboard-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning mb-3">
                                <i class="fas fa-boxes fa-2x"></i>
                            </div>
                            <div class="metric-value text-warning">${{ valorInventario|number_format(0) }}</div>
                            <div class="metric-label">Valor del Inventario</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-warning" style="width: 100%"></div>
                            </div>
                            <small class="text-muted mt-2">Stock actual valorizado</small>
                        </div>
                    </div>
                </a>

                <!-- Ticket Promedio -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-purple mb-3" style="color: #6f42c1;">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                        <div class="metric-value" style="color: #6f42c1;">${{ ticketPromedio|number_format(0) }}</div>
                        <div class="metric-label">Ticket Promedio</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar" style="background-color: #6f42c1; width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Por venta completada</small>
                    </div>
                </div>

                <!-- Dinero Pendiente -->
                <div class="dashboard-card">
                    <div class="metric-card">
                        <div class="metric-icon text-orange mb-3" style="color: #fd7e14;">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <div class="metric-value" style="color: #fd7e14;">${{ dineroPendiente|number_format(0) }}</div>
                        <div class="metric-label">Pendiente por Cobrar</div>
                        <div class="progress progress-thin">
                            <div class="progress-bar" style="background-color: #fd7e14; width: 100%"></div>
                        </div>
                        <small class="text-muted mt-2">Ventas pendientes de pago</small>
                    </div>
                </div>

                <!-- Alertas Stock -->
                <a href="{{ path('app_producto_index') }}" class="text-decoration-none">
