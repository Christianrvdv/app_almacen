                        {% if productosAgotados > 0 %}
                            <div class="stat-badge">{{ productosAgotados }}</div>
                        {% endif %}
                        <div class="metric-card">
                            <div class="metric-icon text-danger mb-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div class="d-flex justify-content-around text-center">
                                <div>
                                    <div class="metric-value text-danger">{{ productosAgotados }}</div>
                                    <div class="metric-label">Agotados</div>
                                </div>
                                <div>
                                    <div class="metric-value text-warning">{{ productosStockBajo }}</div>
                                    <div class="metric-label">Stock Bajo</div>
                                </div>
                            </div>
                            <div class="progress progress-thin mt-2">
                                <div class="progress-bar bg-danger" style="width: 50%"></div>
                                <div class="progress-bar bg-warning" style="width: 50%"></div>
                            </div>
                            <small class="text-muted mt-2">Estado del inventario</small>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gráfico de Evolución -->
            <div class="chart-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0 fw-bold">📈 Evolución de Ventas vs Compras (Últimos 30 días)</h4>
                    <div class="d-flex align-items-center">
                        <span class="me-2 small text-muted">Barras</span>
                        <label class="toggle-switch">
                            <input type="checkbox" id="toggleChartType">
                            <span class="toggle-slider"></span>
                        </label>
                        <span class="ms-2 small text-muted">Líneas</span>
                    </div>
                </div>

                <div class="chart-wrapper">
                    <div id="chartLoading" class="loading-chart">
                        <div class="spinner-chart"></div>
                    </div>
                    <canvas id="statsChart" style="display: none;"></canvas>
                </div>
            </div>

            <!-- Sección de Rankings -->
            <div class="row">
                <!-- Top Productos Rentables -->
                <div class="col-lg-6 mb-4">
                    <h4 class="section-title">🏆 Productos Más Rentables</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Margen</th>
                                <th class="text-end">Precio Venta</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for producto in topProductosRentables %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-cube text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ producto.nombre|length > 25 ? producto.nombre|slice(0, 25) ~ '...' : producto.nombre }}</div>
                                                <small class="text-muted">Costo: ${{ producto.precio_compra|number_format(2) }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                    <span class="badge-modern bg-success">
                                        {{ producto.margen_porcentual|number_format(1) }}%
                                    </span>
                                    </td>
                                    <td class="text-end fw-bold text-primary price-cell">
                                        ${{ producto.precio_venta_actual|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Top Clientes -->
                <div class="col-lg-6 mb-4">
                    <h4 class="section-title">👥 Mejores Clientes</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Cliente</th>
                                <th class="text-end">Total Gastado</th>
                                <th class="text-center">Compras</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cliente in topClientes %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-user text-info"></i>
                                            </div>
                                            <div class="product-name">{{ cliente.nombre|length > 20 ? cliente.nombre|slice(0, 20) ~ '...' : cliente.nombre }}</div>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ cliente.total_gastado|number_format(2) }}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ cliente.total_compras }}</span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-users fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Top Proveedores -->
            <div class="row">
                <div class="col-12">
                    <h4 class="section-title">🏭 Proveedores Principales</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Proveedor</th>
                                <th class="text-end">Total Comprado</th>
                                <th class="text-center">Compras</th>
                                <th class="text-end">Compra Promedio</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for proveedor in topProveedores %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-truck text-warning"></i>
                                            </div>
                                            <div class="product-name">{{ proveedor.nombre|length > 30 ? proveedor.nombre|slice(0, 30) ~ '...' : proveedor.nombre }}</div>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-danger price-cell">
                                        ${{ proveedor.total_comprado|number_format(2) }}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-info">{{ proveedor.total_compras }}</span>
                                    </td>
                                    <td class="text-end text-muted price-cell">
                                        ${{ (proveedor.total_comprado / proveedor.total_compras)|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-warehouse fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Métricas Adicionales -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📊 Métricas Generales</h4>
                    <div class="stats-grid">
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-info mb-3">
                                    <i class="fas fa-cubes fa-2x"></i>
                                </div>
                                <div class="metric-value text-info">{{ metricasAdicionales.total_productos }}</div>
                                <div class="metric-label">Total Productos</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-success mb-3">
                                    <i class="fas fa-shopping-bag fa-2x"></i>
                                </div>
                                <div class="metric-value text-success">{{ metricasAdicionales.total_ventas }}</div>
                                <div class="metric-label">Total Ventas</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-primary mb-3">
                                    <i class="fas fa-truck-loading fa-2x"></i>
                                </div>
                                <div class="metric-value text-primary">{{ metricasAdicionales.total_compras }}</div>
                                <div class="metric-label">Total Compras</div>
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-warning mb-3">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <div class="metric-value text-warning">{{ metricasAdicionales.total_clientes }}</div>
                                <div class="metric-label">Total Clientes</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nuevas Métricas Avanzadas -->
            <!-- Eficiencia de Inventario -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📦 Eficiencia de Inventario</h4>
                    <div class="stats-grid">
                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-success mb-3">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                                <div class="metric-value text-success">{{ eficienciaInventario.porcentaje_optimo|number_format(1) }}%</div>
                                <div class="metric-label">Stock Óptimo</div>
                                <div class="progress progress-thin">
                                    <div class="progress-bar bg-success" style="width: {{ eficienciaInventario.porcentaje_optimo }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ eficienciaInventario.stock_optimo }} de {{ eficienciaInventario.total_productos }} productos</small>
                            </div>
                        </div>

                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-warning mb-3">
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                                <div class="metric-value text-warning">{{ eficienciaInventario.stock_bajo }}</div>
                                <div class="metric-label">Stock Bajo</div>
                                <div class="progress progress-thin">
                                    <div class="progress-bar bg-warning" style="width: {{ (eficienciaInventario.stock_bajo / eficienciaInventario.total_productos * 100)|number_format(1) }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ (eficienciaInventario.stock_bajo / eficienciaInventario.total_productos * 100)|number_format(1) }}% del inventario</small>
                            </div>
                        </div>

                        <div class="stats-card">
                            <div class="metric-card">
                                <div class="metric-icon text-danger mb-3">
                                    <i class="fas fa-times-circle fa-2x"></i>
                                </div>
                                <div class="metric-value text-danger">{{ eficienciaInventario.agotados }}</div>
                                <div class="metric-label">Productos Agotados</div>
                                <div class="progress progress-thin">
                                    <div class="progress-bar bg-danger" style="width: {{ (eficienciaInventario.agotados / eficienciaInventario.total_productos * 100)|number_format(1) }}%"></div>
                                </div>
                                <small class="text-muted mt-2">{{ (eficienciaInventario.agotados / eficienciaInventario.total_productos * 100)|number_format(1) }}% del inventario</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Rotación y Comportamiento de Clientes -->
            <div class="row mt-4">
                <div class="col-lg-6 mb-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <h5 class="section-title mb-4">🔄 Rotación de Productos</h5>
                            <div class="metric-icon text-info mb-3">
                                <i class="fas fa-sync-alt fa-2x"></i>
                            </div>
                            <div class="metric-value text-info">{{ rotacionProductos.tasa_rotacion|number_format(1) }}%</div>
                            <div class="metric-label">Tasa de Rotación</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-info" style="width: {{ rotacionProductos.tasa_rotacion }}%"></div>
                            </div>
                            <div class="row mt-3 text-center">
                                <div class="col-6">
                                    <div class="fw-bold text-primary">{{ rotacionProductos.productos_vendidos }}</div>
                                    <small class="text-muted">Productos Vendidos</small>
                                </div>
                                <div class="col-6">
                                    <div class="fw-bold text-secondary">{{ rotacionProductos.productos_activos }}</div>
                                    <small class="text-muted">Productos Activos</small>
                                </div>
                            </div>
                            <small class="text-muted mt-2">Últimos 30 días</small>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <h5 class="section-title mb-4">👥 Comportamiento de Clientes</h5>
                            <div class="metric-icon text-purple mb-3" style="color: #6f42c1;">
                                <i class="fas fa-user-friends fa-2x"></i>
                            </div>
                            <div class="metric-value" style="color: #6f42c1;">{{ metricasClientes.tasa_recurrencia|number_format(1) }}%</div>
                            <div class="metric-label">Tasa de Recurrencia</div>
                            <div class="progress progress-thin">
                                <div class="progress-bar" style="background-color: #6f42c1; width: {{ metricasClientes.tasa_recurrencia }}%"></div>
                            </div>
                            <div class="row mt-3 text-center">
                                <div class="col-4">
                                    <div class="fw-bold text-primary">{{ metricasClientes.total_clientes }}</div>
                                    <small class="text-muted">Total Clientes</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold text-success">{{ metricasClientes.clientes_recurrentes }}</div>
                                    <small class="text-muted">Recurrentes</small>
                                </div>
                                <div class="col-4">
                                    <div class="fw-bold text-info">{{ metricasClientes.promedio_ventas_por_cliente|number_format(1) }}</div>
                                    <small class="text-muted">Promedio Ventas</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos con Mejor Rendimiento -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">🚀 Productos con Mejor Rendimiento</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Unidades Vendidas</th>
                                <th class="text-center">Margen</th>
                                <th class="text-end">Ingresos Totales</th>
                                <th class="text-end">Ganancia Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for producto in productosMejorRendimiento %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-star text-warning"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ producto.nombre|length > 30 ? producto.nombre|slice(0, 30) ~ '...' : producto.nombre }}</div>
                                                <small class="text-muted">Costo: ${{ producto.precio_compra|number_format(2) }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ producto.unidades_vendidas }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-success">{{ producto.margen_porcentual|number_format(1) }}%</span>
                                    </td>
                                    <td class="text-end fw-bold text-info price-cell">
                                        ${{ producto.ingresos_totales|number_format(2) }}
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ producto.ganancia_total|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                        No hay datos disponibles
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Ventas por Categoría -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">📊 Ventas por Categoría</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Categoría</th>
                                <th class="text-center">Total Ventas</th>
                                <th class="text-center">Productos Vendidos</th>
                                <th class="text-end">Ingresos Totales</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categoria in ventasPorCategoria %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-folder text-primary"></i>
                                            </div>
                                            <div class="product-name">{{ categoria.categoria }}</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-info">{{ categoria.total_ventas }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-secondary">{{ categoria.productos_vendidos }}</span>
                                    </td>
                                    <td class="text-end fw-bold text-success price-cell">
                                        ${{ categoria.total_ingresos|number_format(2) }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-folder-open fa-2x mb-2"></i><br>
                                        No hay datos disponibles por categoría
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Margen por Categoría -->
            <div class="row mt-4">
                <div class="col-12">
                    <h4 class="section-title">💹 Margen por Categoría</h4>
                    <div class="table-modern">
                        <table class="table table-hover mb-0">
                            <thead>
                            <tr>
                                <th>Categoría</th>
                                <th class="text-center">Total Productos</th>
                                <th class="text-center">Margen Promedio</th>
                                <th class="text-center">Productos con Problemas</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categoria in margenPorCategoria %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-chart-pie text-warning"></i>
                                            </div>
                                            <div class="product-name">{{ categoria.categoria }}</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-modern bg-primary">{{ categoria.total_productos }}</span>
                                    </td>
                                    <td class="text-center">
                                        {% set margen = categoria.margen_promedio %}
                                        <span class="badge-modern {{ margen > 30 ? 'bg-success' : (margen > 15 ? 'bg-warning' : 'bg-danger') }}">
                                        {{ margen|number_format(1) }}%
                                    </span>
                                    </td>
                                    <td class="text-center">
                                        {% if categoria.productos_problema > 0 %}
                                            <span class="badge-modern bg-danger">{{ categoria.productos_problema }}</span>
                                        {% else %}
                                            <span class="badge-modern bg-success">0</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted empty-state">
                                        <i class="fas fa-chart-line fa-2x mb-2"></i><br>
                                        No hay datos de margen por categoría
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(initializeChart, 100);
        });

        function initializeChart() {
            const ctx = document.getElementById('statsChart').getContext('2d');
            const chartLoading = document.getElementById('chartLoading');
            const chartCanvas = document.getElementById('statsChart');

            const ventasData = {{ ventasDiarias|json_encode()|raw }};
            const comprasData = {{ comprasDiarias|json_encode()|raw }};

            // Procesar datos para el gráfico
            const allDates = [...new Set([
                ...ventasData.map(item => item.dia),
                ...comprasData.map(item => item.dia)
            ])].sort();

            const ventasMap = new Map(ventasData.map(item => [item.dia, parseFloat(item.total)]));
            const comprasMap = new Map(comprasData.map(item => [item.dia, parseFloat(item.total)]));

            const ventasValues = allDates.map(date => ventasMap.get(date) || 0);
            const comprasValues = allDates.map(date => comprasMap.get(date) || 0);

            // Formatear fechas para mejor legibilidad
            const formattedDates = allDates.map(date => {
                const d = new Date(date);
                return d.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit' });
            });

            // Configuración del gráfico
            const chartConfig = {
                type: 'bar',
                data: {
                    labels: formattedDates,
                    datasets: [
                        {
                            label: 'Ventas Diarias',
                            data: ventasValues,
                            backgroundColor: 'rgba(67, 97, 238, 0.8)',
                            borderColor: 'rgba(67, 97, 238, 1)',
                            borderWidth: 2,
                            borderRadius: 6,
                            borderSkipped: false,
                        },
                        {
                            label: 'Compras Diarias',
                            data: comprasValues,
                            backgroundColor: 'rgba(239, 71, 111, 0.8)',
                            borderColor: 'rgba(239, 71, 111, 1)',
                            borderWidth: 2,
                            borderRadius: 6,
                            borderSkipped: false,
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: {
                        duration: 800,
                        easing: 'easeOutQuart'
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 20,
                                font: {
                                    size: 12,
                                    weight: '600'
                                }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.95)',
                            titleColor: '#2b2d42',
                            bodyColor: '#2b2d42',
                            borderColor: '#e9ecef',
                            borderWidth: 1,
                            cornerRadius: 8,
                            padding: 12,
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': $' + context.raw.toLocaleString('es-ES');
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            },
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString('es-ES');
                                },
                                font: {
                                    size: 11
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                maxTicksLimit: 10,
                                font: {
                                    size: 11
                                }
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            };

            setTimeout(() => {
                const chart = new Chart(ctx, chartConfig);

                // Ocultar loading y mostrar gráfico
                chartLoading.style.display = 'none';
                chartCanvas.style.display = 'block';

                // Toggle entre gráfico de barras y líneas
                document.getElementById('toggleChartType').addEventListener('change', function(e) {
                    chart.destroy();

                    const newConfig = {
                        ...chartConfig,
                        type: e.target.checked ? 'line' : 'bar'
                    };

                    if (e.target.checked) {
                        newConfig.data.datasets[0].backgroundColor = 'transparent';
                        newConfig.data.datasets[0].pointBackgroundColor = 'rgba(67, 97, 238, 1)';
                        newConfig.data.datasets[0].pointBorderColor = '#fff';
                        newConfig.data.datasets[0].pointBorderWidth = 2;
                        newConfig.data.datasets[0].pointRadius = 4;
                        newConfig.data.datasets[0].pointHoverRadius = 6;
                        newConfig.data.datasets[0].tension = 0.4;

                        newConfig.data.datasets[1].backgroundColor = 'transparent';
                        newConfig.data.datasets[1].pointBackgroundColor = 'rgba(239, 71, 111, 1)';
                        newConfig.data.datasets[1].pointBorderColor = '#fff';
                        newConfig.data.datasets[1].pointBorderWidth = 2;
                        newConfig.data.datasets[1].pointRadius = 4;
                        newConfig.data.datasets[1].pointHoverRadius = 6;
                        newConfig.data.datasets[1].tension = 0.4;
                    } else {
                        newConfig.data.datasets[0].backgroundColor = 'rgba(67, 97, 238, 0.8)';
                        newConfig.data.datasets[1].backgroundColor = 'rgba(239, 71, 111, 0.8)';
                    }

                    new Chart(ctx, newConfig);
                });
            }, 300);
        }
    </script>
{% endblock %}
