{% extends 'base.html.twig' %}

{% block title %}Estadísticas Financieras{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
        }
        .card-text {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .text-danger {
            color: #dc3545 !important;
        }
        .card-link {
            text-decoration: none;
        }
        .card-link:hover {
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex align-items-center mb-4">
            <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-secondary btn-sm me-2">
                <i class="fas fa-arrow-left me-1"></i>Regresar
            </a>

            <div class="d-flex justify-content-center flex-grow-1">
                <h1 class="fw-bold text-primary">Estadísticas Financieras</h1>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <a href="{{ path('app_producto_index') }}" class="card-link">
                    <div class="card shadow-sm border-0">
                        <div class="card-header fw-bold">Productos Agotados</div>
                        <div class="card-body">
                            <p class="card-text text-danger">{{ productosAgotados }} unidades</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-header fw-bold">Ganancias Totales</div>
                    <div class="card-body">
                        <p class="card-text">{{ gananciasBrutas }} $</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-header fw-bold">Gastos Totales</div>
                    <div class="card-body">
                        <p class="card-text">{{ gastosBrutos }} $</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-header fw-bold">Faltante de Inversión</div>
                    <div class="card-body">
                        <p class="card-text">{{ dineroActual }} $</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-header fw-bold">Pendiente por Recibir</div>
                    <div class="card-body">
                        <p class="card-text">{{ dineroPendiente }} $</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <canvas id="statsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('statsChart').getContext('2d');
        const ventasData = {{ ventasDiarias|json_encode()|raw }};
        const comprasData = {{ comprasDiarias|json_encode()|raw }};

        const ventasLabels = ventasData.map(item => item.dia);
        const ventasValues = ventasData.map(item => item.total);

        const comprasLabels = comprasData.map(item => item.dia);
        const comprasValues = comprasData.map(item => item.total);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [...new Set([...ventasLabels, ...comprasLabels])].sort(),
                datasets: [
                    {
                        label: 'Ventas Diarias',
                        data: ventasValues,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    },
                    {
                        label: 'Compras Diarias',
                        data: comprasValues,
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Cantidad ($)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Días'
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            }
        });
    </script>
{% endblock %}
