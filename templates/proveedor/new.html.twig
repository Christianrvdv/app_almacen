{% extends 'base.html.twig' %}

{% block title %}Nuevo Proveedor - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_proveedor_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">🏢 Nuevo Proveedor</h1>
                        <p class="mb-0 opacity-75">Agrega un nuevo proveedor a tu sistema</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-plus-circle me-2"></i>Información del Nuevo Proveedor
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información Básica -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.nombre, 'Nombre del Proveedor', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.nombre, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Ej: Distribuidora ABC S.A.',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.nombre) }}
                                    <div class="form-help-text">Nombre completo o razón social del proveedor</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.telefono, 'Teléfono', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        {{ form_widget(form.telefono, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: +34 912 345 678'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.telefono) }}
                                    <div class="form-help-text">Número de contacto principal</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.email, 'Correo Electrónico', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        {{ form_widget(form.email, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: contacto@proveedor.com'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.email) }}
                                    <div class="form-help-text">Email de contacto para pedidos y consultas</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.direccion, 'Dirección', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </span>
                                        {{ form_widget(form.direccion, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: Calle Principal #123, Ciudad, Código Postal, País...'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.direccion) }}
                                    <div class="form-help-text">Dirección completa para envíos y facturación</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Contacto Adicional -->
                    <h3 class="section-title">
                        <i class="fas fa-id-card me-2"></i>Información Adicional
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-12">
                                <div class="price-preview">
                                    <div class="price-preview-item">
                                        <span><i class="fas fa-cube me-2 text-info"></i>Productos asociados:</span>
                                        <span class="text-info">0 productos</span>
                                    </div>
                                    <div class="price-preview-item">
                                        <span><i class="fas fa-calendar me-2 text-primary"></i>Fecha de registro:</span>
                                        <span class="text-primary">{{ "now"|date('d/m/Y') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_proveedor_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Crear Proveedor
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


    <style>
        .custom-textarea {
            resize: vertical;
            min-height: 100px;
        }

        .input-group.focused {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }

        .form-group-modern.focused .form-label-modern {
            color: var(--primary-color);
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initProveedorFormPage } from "{{ asset('js/proveedor/form.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            initProveedorFormPage();
        });
    </script>
{% endblock %}
