{% extends 'base.html.twig' %}

{% block title %}Listado de Proveedores{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1"> Gesti贸n de Proveedores</h1>
                        <p class="mb-0 opacity-75">Administra tus proveedores y contactos comerciales</p>
                    </div>
                    <div>
                        <a href="{{ path('app_proveedor_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Proveedor
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estad铆sticas R谩pidas -->
        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">隆xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-truck"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalProveedores }}</div>
                            <div class="metric-label">Total Proveedores</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalConTelefono }}
                            </div>
                            <div class="metric-label">Con Tel茅fono</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ totalConEmail }}
                            </div>
                            <div class="metric-label">Con Email</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ totalConDireccion }}
                            </div>
                            <div class="metric-label">Con Direcci贸n</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B煤squeda -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <form method="get" action="{{ path('app_proveedor_index') }}" id="search-form">
                            <div class="input-group">
                                <input type="text"
                                       name="q"
                                       class="form-control form-control-modern"
                                       placeholder=" Buscar proveedores por nombre, tel茅fono, email o direcci贸n..."
                                       value="{{ searchTerm|default('') }}"
                                       id="search-input">
                                {% if searchTerm %}
                                    <a href="{{ path('app_proveedor_index') }}" class="btn btn-outline-secondary" title="Limpiar b煤squeda">
                                        <i class="fas fa-times"></i>
                                    </a>
                                {% endif %}
                                <button type="submit" class="btn btn-primary">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tabla de Proveedores -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Proveedor</th>
                            <th>Contacto</th>
                            <th>Ubicaci贸n</th>
                            <th class="text-center">Productos</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for proveedor in proveedors %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-truck text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ proveedor.nombre }}</div>
                                            <small class="text-muted">
                                                ID: {{ proveedor.id }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        {% if proveedor.telefono %}
                                            <div class="mb-1">
                                                <a href="tel:{{ proveedor.telefono }}"
                                                   class="text-decoration-none text-success">
                                                    <i class="fas fa-phone-alt me-2"></i>{{ proveedor.telefono }}
                                                </a>
                                            </div>
                                        {% endif %}
                                        {% if proveedor.email %}
                                            <div>
                                                <a href="mailto:{{ proveedor.email }}"
                                                   class="text-decoration-none text-primary">
                                                    <i class="fas fa-envelope me-2"></i>{{ proveedor.email }}
                                                </a>
                                            </div>
                                        {% endif %}
                                        {% if not proveedor.telefono and not proveedor.email %}
                                            <span class="text-muted">Sin informaci贸n de contacto</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    {% if proveedor.direccion %}
                                        <div class="text-muted">
                                            <i class="fas fa-map-marker-alt me-2 text-warning"></i>
                                            {{ proveedor.direccion|slice(0, 40) }}{{ proveedor.direccion|length > 40 ? '...' : '' }}
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Sin direcci贸n</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                        <span class="badge-modern text-info">
                                            <i class="fas fa-cube me-1"></i>{{ proveedor.productos|length }}
                                        </span>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_proveedor_show', {'id': proveedor.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="empty-state">
                                    <i class="fas fa-truck"></i>
                                    <h4 class="mt-3">
                                        {% if searchTerm %}
                                            No se encontraron proveedores para "{{ searchTerm }}"
                                        {% else %}
                                            No se encontraron proveedores
                                        {% endif %}
                                    </h4>
                                    <p class="text-muted mb-3">
                                        {% if searchTerm %}
                                            Intenta con otros t茅rminos de b煤squeda
                                        {% else %}
                                            Comienza agregando tu primer proveedor al sistema
                                        {% endif %}
                                    </p>
                                    {% if searchTerm %}
                                        <a href="{{ path('app_proveedor_index') }}" class="btn btn-primary">
                                            <i class="fas fa-times me-2"></i>Limpiar b煤squeda
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_proveedor_new') }}" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Agregar primer proveedor
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci贸n de Paginaci贸n -->
            {% if proveedors.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        P谩gina <strong>{{ proveedors.currentPageNumber }}</strong> de <strong>{{ proveedors.pageCount }}</strong> -
                        Mostrando <strong>{{ proveedors.getItemNumberPerPage * (proveedors.currentPageNumber - 1) + 1 }}-{{ min(proveedors.getItemNumberPerPage * proveedors.currentPageNumber, proveedors.getTotalItemCount) }}</strong> de <strong>{{ proveedors.getTotalItemCount }}</strong> proveedores
                        {% if searchTerm %}
                            <span class="badge bg-info ms-2">B煤squeda: "{{ searchTerm }}"</span>
                        {% endif %}
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Bot贸n Anterior #}
                                <li class="page-item {{ proveedors.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ proveedors.currentPageNumber == 1 ? '#' : path('app_proveedor_index', {'page': proveedors.currentPageNumber - 1, 'q': searchTerm}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera p谩gina #}
                                {% if proveedors.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_proveedor_index', {'page': 1, 'q': searchTerm}) }}">1</a>
                                    </li>
                                    {% if proveedors.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# P谩ginas alrededor de la actual #}
                                {% for i in max(1, proveedors.currentPageNumber - 1)..min(proveedors.pageCount, proveedors.currentPageNumber + 1) %}
                                    <li class="page-item {{ proveedors.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_proveedor_index', {'page': i, 'q': searchTerm}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# ltima p谩gina #}
                                {% if proveedors.currentPageNumber < proveedors.pageCount - 1 %}
                                    {% if proveedors.currentPageNumber < proveedors.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_proveedor_index', {'page': proveedors.pageCount, 'q': searchTerm}) }}">{{ proveedors.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Bot贸n Siguiente #}
                                <li class="page-item {{ proveedors.currentPageNumber == proveedors.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ proveedors.currentPageNumber == proveedors.pageCount ? '#' : path('app_proveedor_index', {'page': proveedors.currentPageNumber + 1, 'q': searchTerm}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import { initIndexPage } from "{{ asset('js/proveedor/index.js') }}";
        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
