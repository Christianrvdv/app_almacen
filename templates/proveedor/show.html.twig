{% extends 'base.html.twig' %}

{% block title %}{{ proveedor.nombre }} - Detalles del Proveedor{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_proveedor_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">🏢 {{ proveedor.nombre }}</h1>
                        <p class="mb-0 opacity-75">Detalles completos del proveedor</p>
                    </div>
                    <div>
                        <span class="badge-modern bg-info">
                            <i class="fas fa-cube me-1"></i>{{ proveedor.productos|length }} productos
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container"><!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <!-- Información Principal -->
            <div class="info-grid">
                <!-- Información Básica -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </div>
                    <div class="card-body p-4">
                        <div class="product-image">
                            <i class="fas fa-truck"></i>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Nombre del Proveedor</div>
                            <div class="info-value">{{ proveedor.nombre }}</div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">ID del Proveedor</div>
                            <div class="info-value">
                                <code class="bg-light p-2 rounded">#{{ proveedor.id }}</code>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información de Contacto -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-address-book me-2"></i>Información de Contacto
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Teléfono</div>
                            <div class="info-value">
                                {% if proveedor.telefono %}
                                    <a href="tel:{{ proveedor.telefono }}" class="text-decoration-none text-success">
                                        <i class="fas fa-phone-alt me-2"></i>{{ proveedor.telefono }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">No asignado</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Correo Electrónico</div>
                            <div class="info-value">
                                {% if proveedor.email %}
                                    <a href="mailto:{{ proveedor.email }}" class="text-decoration-none text-primary">
                                        <i class="fas fa-envelope me-2"></i>{{ proveedor.email }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">No asignado</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Dirección</div>
                            <div class="info-value">
                                {% if proveedor.direccion %}
                                    <i class="fas fa-map-marker-alt me-2 text-warning"></i>
                                    {{ proveedor.direccion }}
                                {% else %}
                                    <span class="text-muted">No asignada</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas del Proveedor -->
            <h4 class="section-title">📊 Estadísticas del Proveedor</h4>
            <div class="stats-grid" id="stats-container">
                <div class="stat-item" id="stat-productos">
                    <div class="stat-number text-primary">{{ proveedor.productos|length }}</div>
                    <div class="stat-label">Productos Asociados</div>
                </div>
                <div class="stat-item" id="stat-contacto">
                    <div class="stat-number text-success">
                        {% set contactInfo = 0 %}
                        {% if proveedor.telefono %}{% set contactInfo = contactInfo + 1 %}{% endif %}
                        {% if proveedor.email %}{% set contactInfo = contactInfo + 1 %}{% endif %}
                        {% if proveedor.direccion %}{% set contactInfo = contactInfo + 1 %}{% endif %}
                        {{ contactInfo }}/3
                    </div>
                    <div class="stat-label">Información de Contacto</div>
                </div>
                <div class="stat-item" id="stat-activos">
                    <div class="stat-number text-warning">
                        {{ proveedor.productos|filter(p => p.activo)|length }}
                    </div>
                    <div class="stat-label">Productos Activos</div>
                </div>
                <div class="stat-item" id="stat-completo">
                    <div class="stat-number text-info">
                        {% if proveedor.telefono and proveedor.email and proveedor.direccion %}
                            <i class="fas fa-check"></i>
                        {% else %}
                            <i class="fas fa-exclamation-triangle"></i>
                        {% endif %}
                    </div>
                    <div class="stat-label">
                        {% if proveedor.telefono and proveedor.email and proveedor.direccion %}
                            Perfil Completo
                        {% else %}
                            Perfil Incompleto
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Productos del Proveedor -->
            {% if proveedor.productos|length > 0 %}
                <h3 class="section-title">
                    <i class="fas fa-cubes me-2"></i>Productos en esta Categoría ({{ proveedor.productos|length }})
                </h3>
                <div class="table-modern">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Descripción</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Actualizado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for producto in  proveedor.productos %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-cube text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ producto.nombre }}</div>
                                            <small class="text-muted">
                                                {% if producto.codigoBarras %}
                                                    📋 {{ producto.codigoBarras }}
                                                {% else %}
                                                    📋 Sin código
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                        <span class="text-muted">
                                            {{ producto.descipcion ? (producto.descipcion|slice(0, 40) ~ (producto.descipcion|length > 40 ? '...' : '')) : 'Sin descripción' }}
                                        </span>
                                </td>
                                <td class="text-center">
                                    {% if producto.activo %}
                                        <span class="badge-modern text-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                    {% endif %}
                                </td>
                                <td class="text-center text-muted">
                                    <small>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}</small>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="empty-state">
                                    <i class="fas fa-inbox"></i>
                                    <h4 class="mt-3">No se encontraron productos</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primer producto al catálogo</p>
                                    <a href="{{ path('app_producto_new') }}"
                                       class="btn btn-primary-modern btn-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Crear Primer Producto
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="stats-card">
                    <div class="card-body p-4">
                        <div class="empty-state">
                            <i class="fas fa-cubes"></i>
                            <h4 class="mt-3">No hay productos asociados</h4>
                            <p class="text-muted mb-3">Este proveedor no tiene productos en el inventario</p>
                            <a href="{{ path('app_producto_new') }}" class="btn btn-primary-modern btn-modern">
                                <i class="fas fa-plus-circle me-2"></i>Crear Producto
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar Proveedor
                    </a>

                    <a href="{{ path('app_proveedor_index') }}"
                       class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-list me-2"></i>Volver al Listado
                    </a>

                    <!-- Botón de eliminar con confirmación -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar Proveedor
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar el proveedor <strong>"{{ proveedor.nombre }}"</strong>?</p>

                    {% if proveedor.productos|length > 0 %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> Este proveedor tiene {{ proveedor.productos|length }}
                            producto(s) asociado(s).
                            Al eliminar el proveedor, estos productos quedarán sin proveedor asignado.
                        </div>
                    {% endif %}

                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('proveedor/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initProveedorShowPage } from "{{ asset('js/proveedor/show.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            initProveedorShowPage();
        });
    </script>
{% endblock %}
