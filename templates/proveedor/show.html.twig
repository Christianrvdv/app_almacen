{% extends 'base.html.twig' %}

{% block title %}Proveedor #{{ proveedor.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Proveedor #{{ proveedor.id }}</h1>
            <a href="{{ path('app_proveedor_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Nombre</div>
                    <div class="col-sm-9">{{ proveedor.nombre }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Teléfono</div>
                    <div class="col-sm-9">
                        <a href="tel:{{ proveedor.telefono }}" class="text-decoration-none">
                            <i class="fas fa-phone-alt me-1 text-success"></i>{{ proveedor.telefono }}
                        </a>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Email</div>
                    <div class="col-sm-9">
                        <a href="mailto:{{ proveedor.email }}" class="text-decoration-none">
                            <i class="fas fa-envelope me-1 text-primary"></i>{{ proveedor.email }}
                        </a>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-3 fw-bold text-muted">Dirección</div>
                    <div class="col-sm-9">{{ proveedor.direccion }}</div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}" class="btn btn-warning btn-sm">
                <i class="fas fa-edit me-1"></i>Editar
            </a>
            {{ include('proveedor/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
