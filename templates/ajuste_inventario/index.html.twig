{% extends 'base.html.twig' %}

{% block title %}Listado de Ajustes de Inventario{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Ajustes de Inventario</h1>
            <a href="{{ path('app_ajuste_inventario_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Nuevo Ajuste
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Tipo</th>
                            <th>Cantidad</th>
                            <th>Fecha</th>
                            <th>Motivo</th>
                            <th>Usuario</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ajuste in ajuste_inventarios %}
                            <tr>
                                <td>{{ ajuste.id }}</td>
                                <td>
                                    {% set tipo = ajuste.tipo|lower %}
                                    {% if tipo == 'entrada' %}
                                        <span class="badge bg-success">Entrada</span>
                                    {% elseif tipo == 'salida' %}
                                        <span class="badge bg-danger">Salida</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ ajuste.tipo|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ ajuste.cantidad }}</td>
                                <td>{{ ajuste.fecha ? ajuste.fecha|date('d/m/Y H:i') : '-' }}</td>
                                <td title="{{ ajuste.motivo }}">
                                    {{ ajuste.motivo|slice(0, 30) }}{{ ajuste.motivo|length > 30 ? '...' : '' }}
                                </td>
                                <td>{{ ajuste.usuario }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_ajuste_inventario_show', {'id': ajuste.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_ajuste_inventario_edit', {'id': ajuste.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">No se encontraron ajustes de inventario.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
