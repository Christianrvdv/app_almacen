{% extends 'base.html.twig' %}

{% block title %}Listado de Ajustes de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📊 Historial de Ajustes</h1>
                        <p class="mb-0 opacity-75">Gestiona los movimientos de inventario</p>
                    </div>
                    <div>
                        <a href="{{ path('app_ajuste_inventario_new') }}"
                           class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Ajuste
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Estadísticas Rápidas -->
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-exchange-alt"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalAjustes }}</div>
                            <div class="metric-label">Total Ajustes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-sign-in-alt"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalEntradas }}
                            </div>
                            <div class="metric-label">Entradas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i>
                            </div>
                            <div class="metric-value text-danger">
                                {{ totalSalidas }}
                            </div>
                            <div class="metric-label">Salidas</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ cantidad_usuarios_unicos }}
                            </div>
                            <div class="metric-label">Usuarios Activos</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de Búsqueda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern"
                               placeholder="🔍 Buscar ajustes por motivo, usuario o tipo...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Ajustes -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Producto</th>
                            <th>Tipo</th>
                            <th class="text-center">Cantidad</th>
                            <th>Fecha</th>
                            <th>Motivo</th>
                            <th>Usuario</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ajuste in ajuste_inventarios %}
                            <tr>
                                <td class="fw-bold text-muted">#{{ ajuste.id }}</td>
                                <td>
                                    {% if ajuste.producto %}
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-cube text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ ajuste.producto.nombre }}</div>
                                                <small class="text-muted">
                                                    {% if ajuste.producto.codigoBarras %}
                                                        📋 {{ ajuste.producto.codigoBarras }}
                                                    {% else %}
                                                        📋 Sin código
                                                    {% endif %}
                                                </small>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Producto eliminado</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set tipo = ajuste.tipo|lower %}
                                    {% if tipo == 'entrada' %}
                                        <span class="badge-modern text-success bg-success bg-opacity-10">
                                            <i class="fas fa-sign-in-alt me-1"></i>Entrada
                                        </span>
                                    {% elseif tipo == 'salida' %}
                                        <span class="badge-modern text-danger bg-danger bg-opacity-10">
                                            <i class="fas fa-sign-out-alt me-1"></i>Salida
                                        </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">{{ ajuste.tipo|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <span
                                        class="fw-bold {% if tipo == 'entrada' %}text-success{% else %}text-danger{% endif %}">
                                        {% if tipo == 'entrada' %}+{% else %}-{% endif %}{{ ajuste.cantidad }}
                                    </span>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        <small>{{ ajuste.fecha ? ajuste.fecha|date('d/m/Y') : '-' }}</small>
                                        <br>
                                        <small class="text-muted">{{ ajuste.fecha ? ajuste.fecha|date('H:i') : '' }}</small>
                                    </div>
                                </td>
                                <td title="{{ ajuste.motivo }}">
                                    <span class="text-muted">
                                        {{ ajuste.motivo|slice(0, 40) }}{{ ajuste.motivo|length > 40 ? '...' : '' }}
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-2">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <span class="fw-medium">{{ ajuste.usuario }}</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_ajuste_inventario_show', {'id': ajuste.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_ajuste_inventario_edit', {'id': ajuste.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="empty-state">
                                    <i class="fas fa-clipboard-list"></i>
                                    <h4 class="mt-3">No se encontraron ajustes</h4>
                                    <p class="text-muted mb-3">Comienza registrando tu primer ajuste de inventario</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Información de Paginación -->
            {% if ajuste_inventarios.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Página <strong>{{ ajuste_inventarios.currentPageNumber }}</strong> de <strong>{{ ajuste_inventarios.pageCount }}</strong> -
                        Mostrando <strong>{{ ajuste_inventarios.getItemNumberPerPage * (ajuste_inventarios.currentPageNumber - 1) + 1 }}-{{ min(ajuste_inventarios.getItemNumberPerPage * ajuste_inventarios.currentPageNumber, ajuste_inventarios.getTotalItemCount) }}</strong> de <strong>{{ ajuste_inventarios.getTotalItemCount }}</strong> ajustes
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Botón Anterior #}
                                <li class="page-item {{ ajuste_inventarios.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ ajuste_inventarios.currentPageNumber == 1 ? '#' : path('app_ajuste_inventario_index', {'page': ajuste_inventarios.currentPageNumber - 1}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera página #}
                                {% if ajuste_inventarios.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_ajuste_inventario_index', {'page': 1}) }}">1</a>
                                    </li>
                                    {% if ajuste_inventarios.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# Páginas alrededor de la actual #}
                                {% for i in max(1, ajuste_inventarios.currentPageNumber - 1)..min(ajuste_inventarios.pageCount, ajuste_inventarios.currentPageNumber + 1) %}
                                    <li class="page-item {{ ajuste_inventarios.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_ajuste_inventario_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# Última página #}
                                {% if ajuste_inventarios.currentPageNumber < ajuste_inventarios.pageCount - 1 %}
                                    {% if ajuste_inventarios.currentPageNumber < ajuste_inventarios.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_ajuste_inventario_index', {'page': ajuste_inventarios.pageCount}) }}">{{ ajuste_inventarios.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Botón Siguiente #}
                                <li class="page-item {{ ajuste_inventarios.currentPageNumber == ajuste_inventarios.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ ajuste_inventarios.currentPageNumber == ajuste_inventarios.pageCount ? '#' : path('app_ajuste_inventario_index', {'page': ajuste_inventarios.currentPageNumber + 1}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Se carga el script principal de listado como un módulo #}
    <script type="module">
        import {initIndexPage} from "{{ asset('js/ajuste_inventario/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
