{% extends 'base.html.twig' %}

{% block title %}Nuevo Ajuste de Inventario - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_ajuste_inventario_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📊 Nuevo Ajuste de Inventario</h1>
                        <p class="mb-0 opacity-75">Registra un nuevo movimiento de inventario</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-exchange-alt me-2"></i>Información del Ajuste de Inventario
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información Básica del Ajuste -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información Básica del Movimiento
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.tipo, 'Tipo de Movimiento', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.tipo, {'attr': {
                                        'class': 'form-control form-control-modern form-select-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.tipo) }}
                                    <div class="form-help-text">Selecciona si es una entrada o salida de inventario</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.cantidad, 'Cantidad', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.cantidad, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'min': '1',
                                        'required': 'required',
                                        'placeholder': 'Ej: 10'
                                    }}) }}
                                    {{ form_errors(form.cantidad) }}
                                    <div class="form-help-text">Cantidad de unidades a ajustar</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha, 'Fecha del Ajuste', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.fecha) }}
                                    <div class="form-help-text">Fecha y hora en que se realiza el ajuste</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.usuario, 'Usuario Responsable', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.usuario, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'placeholder': 'Ej: Juan Pérez'
                                    }}) }}
                                    {{ form_errors(form.usuario) }}
                                    <div class="form-help-text">Nombre del usuario que realiza el ajuste</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información del Producto -->
                    <h3 class="section-title">
                        <i class="fas fa-cube me-2"></i>Información del Producto
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.producto, 'Producto', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.producto, {'attr': {
                                        'class': 'form-control form-control-modern form-select-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.producto) }}
                                    <div class="form-help-text">Selecciona el producto a ajustar</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.motivo, 'Motivo del Ajuste', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.motivo, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'placeholder': 'Ej: Ajuste por inventario físico, daño, etc...'
                                    }}) }}
                                    {{ form_errors(form.motivo) }}
                                    <div class="form-help-text">Describe el motivo del ajuste de inventario</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Previa del Impacto -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-bar me-2"></i>Vista Previa del Impacto
                    </h3>
                    <div class="form-section">

                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Tipo de Movimiento:</span>
                                <span id="tipoPreview" class="margen-ganancia text-profit">Selecciona un tipo</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Impacto en Inventario:</span>
                                <span id="impactoPreview" class="text-success">0 unidades</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Producto Seleccionado:</span>
                                <span id="productoPreview" class="text-info">Ninguno</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_ajuste_inventario_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Crear Ajuste
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Se carga el script principal de formulario como un módulo #}
    <script type="module">
        import { initFormPage } from "{{ asset('js/ajuste_inventario/new.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            const formVars = {
                tipoId: '{{ form.tipo.vars.id }}',
                cantidadId: '{{ form.cantidad.vars.id }}',
                productoId: '{{ form.producto.vars.id }}',
                fechaId: '{{ form.fecha.vars.id }}', // Asumiendo que has pasado el ID de la fecha
                isEdit: false,
            };
            initFormPage(formVars);
        });
    </script>
{% endblock %}
