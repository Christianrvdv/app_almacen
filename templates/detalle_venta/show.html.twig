{% extends 'base.html.twig' %}

{% block title %}Detalle de Venta #{{ detalle_venta.id }} - Sistema de Ventas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header con gradiente -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_venta_show', {'id': detalle_venta.venta.id}) }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Ver Venta Principal
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">üí∞ Detalle de Venta #{{ detalle_venta.id }}</h1>
                        <p class="mb-0 opacity-75">Informaci√≥n completa del detalle de venta</p>
                    </div>
                    <div style="width: 130px;"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¬°√âxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                </div>
            {% endfor %}
            <!-- Informaci√≥n Principal -->
            <div class="info-grid">
                <!-- Informaci√≥n de la Venta -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-receipt me-2"></i>Informaci√≥n de la Venta
                    </div>
                    <div class="card-body p-4">
                        <div class="product-image">
                            <i class="fas fa-shopping-cart"></i>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">ID del Detalle</div>
                            <div class="info-value">#{{ detalle_venta.id }}</div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Cantidad Vendida</div>
                            <div class="info-value">
                                <span class="badge-modern bg-primary fs-6">{{ detalle_venta.cantidad }} unidades</span>
                            </div>
                        </div>

                        {% if detalle_venta.producto %}
                            <div class="detalle-card">
                                <div class="info-label">Producto</div>
                                <div class="info-value">
                                <span class="badge-modern bg-info">
                                    <i class="fas fa-cube me-1"></i>{{ detalle_venta.producto.nombre }}
                                </span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Informaci√≥n Financiera -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-chart-line me-2"></i>Informaci√≥n Financiera
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Precio Unitario</div>
                            <div class="info-value price-highlight">
                                ${{ detalle_venta.precioUnitario|number_format(2, ',', '.') }}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Precio de Costo</div>
                            <div class="info-value price-cost">
                                ${{ detalle_venta.producto.precioCompra|number_format(2, ',', '.') }}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Subtotal</div>
                            <div class="info-value total-highlight">
                                ${{ detalle_venta.subtotal|number_format(2, ',', '.') }}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Margen de Ganancia</div>
                            <div class="info-value">
                                {% set ganancia = detalle_venta.precioUnitario - detalle_venta.producto.precioCompra %}
                                {% set margenPorcentaje = detalle_venta.producto.precioCompra > 0 ? (ganancia / detalle_venta.producto.precioCompra * 100) : 0 %}
                                <span class="{% if margenPorcentaje > 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                    {{ margenPorcentaje|number_format(2) }}%
                                </span>
                                <small class="text-muted d-block">
                                    (${{ ganancia|number_format(2, ',', '.') }} por unidad)
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informaci√≥n Adicional -->
            <div class="info-grid">
                <!-- Relaciones -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-network-wired me-2"></i>Relaciones
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Venta Principal</div>
                            <div class="info-value">
                                {% if detalle_venta.venta %}
                                    <span class="badge-modern bg-warning text-dark">
                                        <i class="fas fa-file-invoice-dollar me-1"></i>
                                        Venta #{{ detalle_venta.venta.id }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Sin venta asociada</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Producto Relacionado</div>
                            <div class="info-value">
                                {% if detalle_venta.producto %}
                                    <span class="badge-modern bg-success">
                                        <i class="fas fa-box me-1"></i>
                                        {{ detalle_venta.producto.nombre }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Sin producto asociado</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Metadatos -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-history me-2"></i>Metadatos
                    </div>
                    <div class="card-body">
                        <div class="metadata">
                            <div class="metadata-item">
                                <span class="metadata-label">Estado</span>
                                <span class="metadata-value">
                                    <span class="badge-modern bg-success">
                                        <i class="fas fa-check me-1"></i>Activo
                                    </span>
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">Total de la Venta</span>
                                <span class="metadata-value text-success fw-bold">
                                    ${{ detalle_venta.subtotal|number_format(2, ',', '.') }}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">Unidades Vendidas</span>
                                <span class="metadata-value fw-bold">
                                    {{ detalle_venta.cantidad }}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">ID del Detalle</span>
                                <span class="metadata-value">
                                    <code>#{{ detalle_venta.id }}</code>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resumen Financiero -->
            <h3 class="section-title">
                <i class="fas fa-calculator me-2"></i>Resumen Financiero
            </h3>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number text-primary">{{ detalle_venta.cantidad }}</div>
                    <div class="stat-label">Unidades Vendidas</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number text-success">${{ detalle_venta.precioUnitario|number_format(2, ',', '.') }}</div>
                    <div class="stat-label">Precio Unitario</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number text-warning">${{ detalle_venta.producto.precioCompra|number_format(2, ',', '.') }}</div>
                    <div class="stat-label">Precio de Costo</div>
                </div>
                <div class="stat-item">
                    {% set gananciaTotal = (detalle_venta.precioUnitario - detalle_venta.producto.precioCompra) * detalle_venta.cantidad %}
                    <div class="stat-number {% if gananciaTotal > 0 %}text-success{% else %}text-danger{% endif %}">
                        ${{ gananciaTotal|number_format(2, ',', '.') }}
                    </div>
                    <div class="stat-label">Ganancia Total</div>
                </div>
            </div>

            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    {% if detalle_venta.venta %}
                        <a href="{{ path('app_venta_show', {'id': detalle_venta.venta.id}) }}"
                           class="btn btn-modern btn-outline-modern">
                            <i class="fas fa-external-link-alt me-2"></i>Ver Venta Principal
                        </a>
                    {% endif %}

                    <a href="{{ path('app_detalle_venta_edit', {'id': detalle_venta.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>

                    <!-- Bot√≥n de eliminar con confirmaci√≥n -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmaci√≥n para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminaci√≥n
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro de que deseas eliminar el detalle de venta <strong>#{{ detalle_venta.id }}</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acci√≥n no se puede deshacer y se perder√°n todos los datos asociados a este detalle.
                    </p>
                    <div class="alert alert-warning mt-3">
                        <strong>Informaci√≥n a eliminar:</strong><br>
                        ‚Ä¢ {{ detalle_venta.cantidad }} unidades de {{ detalle_venta.producto ? detalle_venta.producto.nombre : 'producto' }}<br>
                        ‚Ä¢ Subtotal: ${{ detalle_venta.subtotal|number_format(2, ',', '.') }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="post" action="{{ path('app_detalle_venta_delete', {'id': detalle_venta.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ detalle_venta.id) }}">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initShowPage } from "{{ asset('js/detalle_venta/show.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            // Variables de Twig pasadas al m√≥dulo JavaScript
            const detalleId = {{ detalle_venta.id }};
            const productoNombre = '{{ detalle_venta.producto ? detalle_venta.producto.nombre|escape('js') : 'Producto Eliminado' }}';
            const cantidad = {{ detalle_venta.cantidad }};
            const precioUnitario = {{ detalle_venta.precioUnitario }};
            // Asumiendo que el precio de costo est√° disponible en el producto asociado
            const precioCosto = {{ detalle_venta.producto ? detalle_venta.producto.precioCompra : 0 }};

            initShowPage(detalleId, productoNombre, cantidad, precioUnitario, precioCosto);
        });
    </script>
{% endblock %}
