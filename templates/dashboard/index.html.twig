{% extends 'base.html.twig' %}

{% block title %}Dashboard - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="page-header">
            <div class="container">
                <div class="text-center text-white">
                    <h1 class="fw-bold mb-2">🚀 Panel de Control</h1>
                    <p class="mb-0 opacity-90 fs-5">Resumen en tiempo real de tu negocio</p>
                    <div class="mt-2">
                        <span class="badge-modern bg-light text-dark">
                            <i class="fas fa-clock me-1"></i>
                            Actualizado al {{ "now"|date("d/m/Y h:i A", "America/Toronto") }}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Alertas de Stock -->
            {% if productosAgotados > 0 or productosStockBajo > 0 %}
                <div class="alert-card">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3 text-warning"></i>
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-2">⚠️ Alertas de Inventario</h5>
                            <div class="d-flex flex-wrap gap-2">
                                {% if productosAgotados > 0 %}
                                    <span class="badge-modern bg-danger text-white">
                                        <i class="fas fa-times-circle me-1"></i>
                                        {{ productosAgotados }} Productos Agotados
                                    </span>
                                {% endif %}
                                {% if productosStockBajo > 0 %}
                                    <span class="badge-modern bg-warning text-dark">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        {{ productosStockBajo }} Productos con Stock Bajo
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Estadísticas Principales -->
            <h3 class="section-title">
                <i class="fas fa-chart-bar me-2"></i>Métricas Principales
            </h3>
            <div class="dashboard-stats">
                <div class="stats-card">
                    <div class="metric-card">
                        <div class="metric-icon text-primary">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="metric-value text-primary">{{ ventasHoy.total }}</div>
                        <div class="metric-label">Ventas Hoy</div>
                        <small class="text-muted fw-semibold">${{ ventasHoy.monto|number_format(0, ',', '.') }}</small>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="metric-card">
                        <div class="metric-icon text-success">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <div class="metric-value text-success">{{ productosActivos }}</div>
                        <div class="metric-label">Productos Activos</div>
                        <small class="text-muted fw-semibold">
                            {% if totalProductos > 0 %}
                                {{ (productosActivos / totalProductos * 100)|round(1) }}% del total
                            {% else %}
                                0% del total
                            {% endif %}
                        </small>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="metric-card">
                        <div class="metric-icon text-warning">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        <div class="metric-value text-warning">{{ totalClientes }}</div>
                        <div class="metric-label">Clientes Registrados</div>
                        <small class="text-muted fw-semibold">{{ nuevosClientesMes }} nuevos este mes</small>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="metric-card">
                        <div class="metric-icon text-info">
                            <i class="fas fa-receipt"></i>
                        </div>
                        <div class="metric-value text-info">{{ comprasMes }}</div>
                        <div class="metric-label">Compras Este Mes</div>
                        <small class="text-muted fw-semibold">{{ comprasPendientes }} pendientes</small>
                    </div>
                </div>
            </div>

            <!-- Módulos Principales -->
            <h3 class="section-title">
                <i class="fas fa-cubes me-2"></i>Módulos Principales
            </h3>
            <div class="module-grid">
                <!-- Productos -->
                <div class="module-card card-with-badge">
                    <div class="module-header">
                        <div class="module-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestión de Productos</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Administra tu inventario, precios, categorías y control de stock de manera eficiente.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_producto_index') }}" class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Listado
                            </a>
                            <a href="{{ path('app_producto_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-plus me-1"></i>Nuevo Producto
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Ventas -->
                <div class="module-card">
                    <div class="module-header"
                         style="background: linear-gradient(135deg, var(--success-color), #05c391);">
                        <div class="module-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestion de Ventas</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Registra ventas, gestiona clientes y consulta historial de transacciones.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_venta_index') }}" class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Ventas
                            </a>
                            <a href="{{ path('app_venta_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-cash-register me-1"></i>Nueva Venta
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Compras -->
                <div class="module-card">
                    <div class="module-header"
                         style="background: linear-gradient(135deg, var(--warning-color), #ffc107);">
                        <div class="module-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestión de Compras</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Controla compras, proveedores, órdenes de pedido y recepción de mercancía.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_compra_index') }}" class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Compras
                            </a>
                            <a href="{{ path('app_compra_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-receipt me-1"></i>Nueva Compra
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Segunda Fila de Módulos -->
            <div class="module-grid">
                <!-- Clientes -->
                <div class="module-card">
                    <div class="module-header" style="background: linear-gradient(135deg, var(--info-color), #0d7ea6);">
                        <div class="module-icon">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestión de Clientes</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Administra tu base de clientes, contactos y historial de compras.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_cliente_index') }}" class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Clientes
                            </a>
                            <a href="{{ path('app_cliente_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-user-plus me-1"></i>Nuevo Cliente
                            </a>
                        </div>
                    </div>
                </div>


                <!-- Proveedores -->
                <div class="module-card">
                    <div class="module-header" style="background: linear-gradient(135deg, #6f42c1, #5a2d9c);">
                        <div class="module-icon">
                            <i class="fas fa-truck-loading"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestión de Proveedores</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Controla proveedores, contactos y evaluaciones de servicio.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_proveedor_index') }}"
                               class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Proveedores
                            </a>

                            <a href="{{ path('app_proveedor_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-plus me-1"></i>Nuevo Proveedor
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Categorías -->
                <div class="module-card">
                    <div class="module-header" style="background: linear-gradient(135deg, #e83e8c, #d91a72);">
                        <div class="module-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Gestión de Categorías</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Organiza tus productos en categorías, subcategorías y familias.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_categoria_index') }}"
                               class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Categorías
                            </a>
                            <a href="{{ path('app_categoria_new') }}" class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-plus me-1"></i>Nueva Catgoria
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tercera Fila de Módulos -->
            <div class="module-grid">
                <!-- Ajustes de Inventario -->
                <div class="module-card">
                    <div class="module-header" style="background: linear-gradient(135deg, #20c997, #199d74);">
                        <div class="module-icon">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Ajustes de Inventario</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Realiza ajustes de stock, conteos físicos y control de inventario.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_ajuste_inventario_index') }}"
                               class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-list me-1"></i>Ver Ajustes
                            </a>
                            <a href="{{ path('app_ajuste_inventario_new') }}"
                               class="btn btn-modern btn-outline-modern btn-sm">
                                <i class="fas fa-plus me-1"></i>Nuevo Ajuste
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas -->
                <div class="module-card">
                    <div class="module-header" style="background: linear-gradient(135deg, #fd7e14, #e56a0c);">
                        <div class="module-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div>
                            <h3 class="module-title">Estadísticas Avanzadas</h3>
                        </div>
                    </div>
                    <div class="module-body">
                        <p class="module-description">
                            Dashboard completo con métricas, análisis y reportes detallados de tu negocio.
                        </p>
                        <div class="module-actions">
                            <a href="{{ path('app_estadisticas_index') }}"
                               class="btn btn-modern btn-primary-modern btn-sm">
                                <i class="fas fa-chart-line me-1"></i>Ver Estadísticas
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Acciones Rápidas -->
            <h3 class="section-title">
                <i class="fas fa-bolt me-2"></i>Acciones Rápidas
            </h3>
            <div class="card-body p-4">
                <div class="quick-actions-grid">
                    <a href="{{ path('app_producto_new') }}" class="text-decoration-none">
                        <div class="quick-action-card">
                            <div class="quick-action-icon">
                                <i class="fas fa-plus"></i>
                            </div>
                            <div class="quick-action-title">Nuevo Producto</div>
                            <div class="quick-action-description">Agregar producto al inventario</div>
                        </div>
                    </a>
                    <a href="{{ path('app_venta_new') }}" class="text-decoration-none">
                        <div class="quick-action-card">
                            <div class="quick-action-icon">
                                <i class="fas fa-cash-register"></i>
                            </div>
                            <div class="quick-action-title">Nueva Venta</div>
                            <div class="quick-action-description">Registrar venta rápida</div>
                        </div>
                    </a>
                    <a href="{{ path('app_compra_new') }}" class="text-decoration-none">
                        <div class="quick-action-card">
                            <div class="quick-action-icon">
                                <i class="fas fa-receipt"></i>
                            </div>
                            <div class="quick-action-title">Nueva Compra</div>
                            <div class="quick-action-description">Registrar compra a proveedor</div>
                        </div>
                    </a>
                    <a href="{{ path('app_cliente_new') }}" class="text-decoration-none">
                        <div class="quick-action-card">
                            <div class="quick-action-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="quick-action-title">Nuevo Cliente</div>
                            <div class="quick-action-description">Agregar cliente a la base</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Animación suave para las tarjetas
            const cards = document.querySelectorAll('.stats-card, .module-card, .quick-action-card');

            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
{% endblock %}
