{% extends 'base.html.twig' %}

{% block title %}Editar Detalle de Compra #{{ detalle_compra.id }} - Sistema de Compras{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header con gradiente -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_detalle_compra_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">✏️ Editar Detalle de Compra</h1>
                        <p class="mb-0 opacity-75">Actualiza la información del detalle #{{ detalle_compra.id }}</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <i class="fas fa-edit me-2"></i>Editando Detalle de Compra #{{ detalle_compra.id }}
                        </div>
                        <form method="post" action="{{ path('app_detalle_compra_delete', {'id': detalle_compra.id}) }}"
                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar este detalle de compra?');"
                              class="delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ detalle_compra.id) }}">
                            <button type="submit" class="btn btn-danger-modern btn-modern btn-sm">
                                <i class="fas fa-trash me-1"></i>Eliminar Detalle
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información de la Compra -->
                    <h3 class="section-title">
                        <i class="fas fa-shopping-cart me-2"></i>Información de la Compra
                    </h3>
                    <div class="form-section">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.cantidad, 'Cantidad', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.cantidad, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Ej: 5',
                                        'min': '1',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.cantidad) }}
                                    <div class="form-help-text">Cantidad de unidades compradas</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.precioUnitario, 'Precio Unitario', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.precioUnitario, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'step': '0.01',
                                            'min': '0',
                                            'required': 'required',
                                            'placeholder': '0.00'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.precioUnitario) }}
                                    <div class="form-help-text">Precio de compra por unidad</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-modern">
                                    {{ form_label(form.producto, 'Producto', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.producto, {'attr': {
                                        'class': 'form-control form-select-modern',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.producto) }}
                                    <div class="form-help-text">Selecciona el producto comprado</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información Financiera -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Información Financiera
                    </h3>
                    <div class="form-section">
                        <!-- Vista Previa de Cálculos -->
                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Subtotal Calculado:</span>
                                <span id="subtotalPreview" class="margen-ganancia text-profit">$0.00</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Total de Unidades:</span>
                                <span id="totalUnidadesPreview">{{ detalle_compra.cantidad }}</span>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Relaciones -->
                    <h3 class="section-title">
                        <i class="fas fa-network-wired me-2"></i>Información de Relaciones
                    </h3>
                    <div class="form-section">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label class="form-label-modern">Compra Principal</label>
                                    <div class="form-control form-control-modern" readonly>
                                        {% if detalle_compra.compra %}
                                            <span class="badge-modern bg-warning text-dark">
                                                <i class="fas fa-file-invoice-dollar me-1"></i>
                                                Compra #{{ detalle_compra.compra.id }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Sin compra asociada</span>
                                        {% endif %}
                                    </div>
                                    <div class="form-help-text">Compra principal asociada (no editable)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label class="form-label-modern">Producto Actual</label>
                                    <div class="form-control form-control-modern" readonly>
                                        {% if detalle_compra.producto %}
                                            <span class="badge-modern bg-info">
                                                <i class="fas fa-cube me-1"></i>
                                                {{ detalle_compra.producto.nombre }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Sin producto asociado</span>
                                        {% endif %}
                                    </div>
                                    <div class="form-help-text">Producto actual (puede ser cambiado arriba)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_detalle_compra_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>

                            <a href="{{ path('app_detalle_compra_show', {'id': detalle_compra.id}) }}"
                               class="btn btn-modern btn-warning-modern">
                                <i class="fas fa-eye me-2"></i>Ver Detalles
                            </a>

                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Actualizar Detalle
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cantidadInput = document.getElementById('{{ form.cantidad.vars.id }}');
            const precioUnitarioInput = document.getElementById('{{ form.precioUnitario.vars.id }}');
            const subtotalPreview = document.getElementById('subtotalPreview');
            const totalUnidadesPreview = document.getElementById('totalUnidadesPreview');

            function calcularTotales() {
                const cantidad = parseFloat(cantidadInput.value) || 0;
                const precioUnitario = parseFloat(precioUnitarioInput.value) || 0;
                const subtotal = cantidad * precioUnitario;

                // Actualizar previews
                subtotalPreview.textContent = `$${subtotal.toFixed(2)}`;
                totalUnidadesPreview.textContent = cantidad;

                // Cambiar color del subtotal según valor
                if (subtotal > 0) {
                    subtotalPreview.className = 'margen-ganancia text-profit';
                } else {
                    subtotalPreview.className = 'margen-ganancia text-loss';
                }
            }

            // Calcular cuando cambien los inputs
            cantidadInput.addEventListener('input', calcularTotales);
            precioUnitarioInput.addEventListener('input', calcularTotales);

            // Calcular valores iniciales
            calcularTotales();

            // Validación de formulario
            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Animación suave para las secciones
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Efectos de focus en los campos del formulario
            const formControls = document.querySelectorAll('.form-control-modern, .form-select-modern');
            formControls.forEach(control => {
                control.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                control.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });
        });
    </script>
{% endblock %}
