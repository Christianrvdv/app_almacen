{% extends 'base.html.twig' %}

{% block title %}Nuevo Cliente - Sistema de Gesti贸n{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_cliente_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1"> Nuevo Cliente</h1>
                        <p class="mb-0 opacity-75">Agrega un nuevo cliente a tu sistema</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">隆xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-user-plus me-2"></i>Informaci贸n del Nuevo Cliente
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Informaci贸n B谩sica -->
                    <h3 class="section-title">
                        <i class="fas fa-user me-2"></i>Informaci贸n Personal
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.nombre, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Ej: Juan P茅rez Garc铆a',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.nombre) }}
                                    <div class="form-help-text">Nombre completo del cliente</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informaci贸n de Contacto -->
                    <h3 class="section-title">
                        <i class="fas fa-address-book me-2"></i>Informaci贸n de Contacto
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.telefono, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        {{ form_widget(form.telefono, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: +34 612 345 678'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.telefono) }}
                                    <div class="form-help-text">N煤mero de tel茅fono (opcional)</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        {{ form_widget(form.email, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: juan.perez@email.com'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.email) }}
                                    <div class="form-help-text">Correo electr贸nico (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informaci贸n de Ubicaci贸n -->
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt me-2"></i>Informaci贸n de Ubicaci贸n
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.direccion, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-home"></i>
                                        </span>
                                        {{ form_widget(form.direccion, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: Calle Principal 123, Ciudad, Pa铆s',
                                            'rows': 3
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.direccion) }}
                                    <div class="form-help-text">Direcci贸n completa del cliente (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informaci贸n Financiera -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Informaci贸n Financiera
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.compra_totales, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.compra_totales, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': '0.00',
                                            'step': '0.01',
                                            'min': '0',
                                            'readonly':'readonly'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.compra_totales) }}
                                    <div class="form-help-text">Total hist贸rico de compras (opcional)</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label class="form-label-modern">Fecha de Registro</label>
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input type="text" class="form-control form-control-modern"
                                               value="{{ "now"|date('d/m/Y H:i') }}" readonly>
                                    </div>
                                    <div class="form-help-text">Se asignar谩 autom谩ticamente</div>
                                </div>
                            </div>
                        </div>

                        <!-- Vista Previa de Cliente -->
                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Estado del Cliente:</span>
                                <span class="margen-ganancia text-profit">Activo</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Ventas Iniciales:</span>
                                <span class="text-success">0 ventas</span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acci贸n -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_cliente_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Crear Cliente
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validaci贸n de formulario
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Animaci贸n suave para las secciones
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Efectos interactivos para los campos
            const inputs = document.querySelectorAll('.form-control-modern');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.parentElement.classList.remove('focused');
                });
            });

            // Formateo autom谩tico para el campo de tel茅fono
            const telefonoInput = document.getElementById('{{ form.telefono.vars.id }}');
            telefonoInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 0) {
                    value = value.match(/.{1,3}/g).join(' ');
                    e.target.value = value;
                }
            });

            // Formateo autom谩tico para el campo de compras totales
            const comprasInput = document.getElementById('{{ form.compra_totales.vars.id }}');
            comprasInput.addEventListener('blur', function(e) {
                let value = parseFloat(e.target.value);
                if (!isNaN(value)) {
                    e.target.value = value.toFixed(2);
                }
            });
        });
    </script>
{% endblock %}
