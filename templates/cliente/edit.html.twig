{% extends 'base.html.twig' %}

{% block title %}Editar {{ cliente.nombre }} - Sistema de Gestión{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_cliente_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">✏️ Editar Cliente</h1>
                        <p class="mb-0 opacity-75">Actualiza la información de {{ cliente.nombre }}</p>
                    </div>
                    <div>
                        <span class="badge-modern bg-warning text-dark">
                            <i class="fas fa-edit me-1"></i>
                            Modo Edición
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash Mejorados -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario de Edición -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-edit me-2"></i>Editar Información del Cliente
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información Básica -->
                    <h3 class="section-title">
                        <i class="fas fa-user me-2"></i>Información Personal
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.nombre, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Ej: Juan Pérez García',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.nombre) }}
                                    <div class="form-help-text">Nombre completo del cliente</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Contacto -->
                    <h3 class="section-title">
                        <i class="fas fa-address-book me-2"></i>Información de Contacto
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.telefono, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        {{ form_widget(form.telefono, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: +34 612 345 678'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.telefono) }}
                                    <div class="form-help-text">Número de teléfono (opcional)</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        {{ form_widget(form.email, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: juan.perez@email.com'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.email) }}
                                    <div class="form-help-text">Correo electrónico (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Ubicación -->
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt me-2"></i>Información de Ubicación
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group-modern">
                                    {{ form_label(form.direccion, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-home"></i>
                                        </span>
                                        {{ form_widget(form.direccion, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': 'Ej: Calle Principal 123, Ciudad, País',
                                            'rows': 3
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.direccion) }}
                                    <div class="form-help-text">Dirección completa del cliente (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información Financiera -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Información Financiera
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.compra_totales, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.compra_totales, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'placeholder': '0.00',
                                            'step': '0.01',
                                            'min': '0'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.compra_totales) }}
                                    <div class="form-help-text">Total histórico de compras (opcional)</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label class="form-label-modern">Fecha de Registro</label>
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input type="text" class="form-control form-control-modern"
                                               value="{{ cliente.fechaRegistro ? cliente.fechaRegistro|date('d/m/Y H:i') : 'No disponible' }}" readonly>
                                    </div>
                                    <div class="form-help-text">Fecha de registro original (no editable)</div>
                                </div>
                            </div>
                        </div>

                        <!-- Vista Previa de Estadísticas -->
                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Total de Ventas:</span>
                                <span class="margen-ganancia text-primary">{{ cliente.ventas|length }} ventas</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Promedio por Venta:</span>
                                <span class="text-success">
                                    {% if cliente.ventas|length > 0 %}
                                        ${{ (cliente.compraTotales / cliente.ventas|length)|number_format(2, ',', '.') }}
                                    {% else %}
                                        $0.00
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_cliente_index') }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Actualizar Cliente
                            </button>

                            <!-- Botón de eliminar con confirmación -->
                            <button type="button"
                                    class="btn btn-modern btn-danger-modern"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal">
                                <i class="fas fa-trash me-2"></i>Eliminar Cliente
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar al cliente <strong>"{{ cliente.nombre }}"</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer y se perderán todos los datos asociados al cliente.
                        {% if cliente.ventas|length > 0 %}
                            <br><strong>Advertencia:</strong> Este cliente tiene {{ cliente.ventas|length }} ventas asociadas.
                        {% endif %}
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('cliente/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validación de formulario
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Animación suave para las secciones
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Efectos interactivos para los campos
            const inputs = document.querySelectorAll('.form-control-modern');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.parentElement.classList.remove('focused');
                });
            });

            // Formateo automático para el campo de teléfono
            const telefonoInput = document.getElementById('{{ form.telefono.vars.id }}');
            if (telefonoInput) {
                telefonoInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 0) {
                        value = value.match(/.{1,3}/g).join(' ');
                        e.target.value = value;
                    }
                });
            }

            // Formateo automático para el campo de compras totales
            const comprasInput = document.getElementById('{{ form.compra_totales.vars.id }}');
            if (comprasInput) {
                comprasInput.addEventListener('blur', function(e) {
                    let value = parseFloat(e.target.value);
                    if (!isNaN(value)) {
                        e.target.value = value.toFixed(2);
                    }
                });
            }

            // Mostrar información de cambios
            const originalData = {
                nombre: '{{ cliente.nombre|escape('js') }}',
                telefono: '{{ cliente.telefono|escape('js') }}',
                email: '{{ cliente.email|escape('js') }}',
                direccion: '{{ cliente.direccion|escape('js') }}',
                compras: '{{ cliente.compraTotales|escape('js') }}'
            };

            // Detectar cambios en el formulario
            let hasChanges = false;
            const formElements = form.querySelectorAll('input, textarea, select');

            formElements.forEach(element => {
                element.addEventListener('input', function() {
                    if (!hasChanges) {
                        hasChanges = true;
                        // Podríamos mostrar un indicador de cambios no guardados aquí
                        console.log('Se han detectado cambios en el formulario');
                    }
                });
            });
        });
    </script>
{% endblock %}
