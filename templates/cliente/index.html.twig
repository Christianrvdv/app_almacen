{% extends 'base.html.twig' %}

{% block title %}Listado de Clientes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">👥 Gestión de Clientes</h1>
                        <p class="mb-0 opacity-75">Administra tu lista de clientes y su información de contacto</p>
                    </div>
                    <div>
                        <a href="{{ path('app_cliente_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Cliente
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas Rápidas -->
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalClientes }}</div>
                            <div class="metric-label">Total Clientes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalConEmail }}
                            </div>
                            <div class="metric-label">Con Email</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ totalConTelefono }}
                            </div>
                            <div class="metric-label">Con Teléfono</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ totalConDireccion }}
                            </div>
                            <div class="metric-label">Con Dirección</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de Búsqueda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern" placeholder="🔍 Buscar clientes por nombre, teléfono, email o dirección...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Clientes -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Contacto</th>
                            <th>Dirección</th>
                            <th class="text-center">Fecha Registro</th>
                            <th class="text-center">Compras Totales</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for cliente in clientes %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ cliente.nombre }}</div>
                                            <small class="text-muted">
                                                📋 ID: {{ cliente.id }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        {% if cliente.telefono %}
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="fas fa-phone-alt text-success me-2"></i>
                                                <a href="tel:{{ cliente.telefono }}" class="text-decoration-none text-dark">{{ cliente.telefono }}</a>
                                            </div>
                                        {% endif %}
                                        {% if cliente.email %}
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-envelope text-primary me-2"></i>
                                                <a href="mailto:{{ cliente.email }}" class="text-decoration-none text-dark" title="{{ cliente.email }}">
                                                    {{ cliente.email|slice(0, 25) }}{{ cliente.email|length > 25 ? '...' : '' }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        {{ cliente.direccion ? (cliente.direccion|slice(0, 30) ~ (cliente.direccion|length > 30 ? '...' : '')) : 'Sin dirección' }}
                                    </span>
                                </td>
                                <td class="text-center text-muted">
                                    <small>{{ cliente.fechaRegistro ? cliente.fechaRegistro|date('d/m/Y') : 'N/A' }}</small>
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ cliente.compraTotales|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_cliente_show', {'id': cliente.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <i class="fas fa-users"></i>
                                    <h4 class="mt-3">No se encontraron clientes</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primer cliente</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Información de Paginación -->
            {% if clientes.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Página <strong>{{ clientes.currentPageNumber }}</strong> de <strong>{{ clientes.pageCount }}</strong> -
                        Mostrando <strong>{{ clientes.getItemNumberPerPage * (clientes.currentPageNumber - 1) + 1 }}-{{ min(clientes.getItemNumberPerPage * clientes.currentPageNumber, clientes.getTotalItemCount) }}</strong> de <strong>{{ clientes.getTotalItemCount }}</strong> clientes
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Botón Anterior #}
                                <li class="page-item {{ clientes.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ clientes.currentPageNumber == 1 ? '#' : path('app_cliente_index', {'page': clientes.currentPageNumber - 1}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera página #}
                                {% if clientes.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_cliente_index', {'page': 1}) }}">1</a>
                                    </li>
                                    {% if clientes.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# Páginas alrededor de la actual #}
                                {% for i in max(1, clientes.currentPageNumber - 1)..min(clientes.pageCount, clientes.currentPageNumber + 1) %}
                                    <li class="page-item {{ clientes.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_cliente_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# Última página #}
                                {% if clientes.currentPageNumber < clientes.pageCount - 1 %}
                                    {% if clientes.currentPageNumber < clientes.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_cliente_index', {'page': clientes.pageCount}) }}">{{ clientes.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Botón Siguiente #}
                                <li class="page-item {{ clientes.currentPageNumber == clientes.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ clientes.currentPageNumber == clientes.pageCount ? '#' : path('app_cliente_index', {'page': clientes.currentPageNumber + 1}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initIndexPage } from "{{ asset('js/cliente/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
