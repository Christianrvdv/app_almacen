{% extends 'base.html.twig' %}

{% block title %}Listado de Clientes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1"> Gesti贸n de Clientes</h1>
                        <p class="mb-0 opacity-75">Administra tu lista de clientes y su informaci贸n de contacto</p>
                    </div>
                    <div>
                        <a href="{{ path('app_cliente_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Cliente
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estad铆sticas R谩pidas -->
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="metric-value text-primary">{{ clientes|length }}</div>
                            <div class="metric-label">Total Clientes</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ clientes|filter(c => c.email != null)|length }}
                            </div>
                            <div class="metric-label">Con Email</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ clientes|filter(c => c.telefono != null)|length }}
                            </div>
                            <div class="metric-label">Con Tel茅fono</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ clientes|filter(c => c.direccion != null)|length }}
                            </div>
                            <div class="metric-label">Con Direcci贸n</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B煤squeda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern" placeholder=" Buscar clientes por nombre, tel茅fono, email o direcci贸n...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Clientes -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Contacto</th>
                            <th>Direcci贸n</th>
                            <th class="text-center">Fecha Registro</th>
                            <th class="text-center">Compras Totales</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for cliente in clientes %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ cliente.nombre }}</div>
                                            <small class="text-muted">
                                                 ID: {{ cliente.id }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        {% if cliente.telefono %}
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="fas fa-phone-alt text-success me-2"></i>
                                                <a href="tel:{{ cliente.telefono }}" class="text-decoration-none text-dark">{{ cliente.telefono }}</a>
                                            </div>
                                        {% endif %}
                                        {% if cliente.email %}
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-envelope text-primary me-2"></i>
                                                <a href="mailto:{{ cliente.email }}" class="text-decoration-none text-dark" title="{{ cliente.email }}">
                                                    {{ cliente.email|slice(0, 25) }}{{ cliente.email|length > 25 ? '...' : '' }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        {{ cliente.direccion ? (cliente.direccion|slice(0, 30) ~ (cliente.direccion|length > 30 ? '...' : '')) : 'Sin direcci贸n' }}
                                    </span>
                                </td>
                                <td class="text-center text-muted">
                                    <small>{{ cliente.fechaRegistro ? cliente.fechaRegistro|date('d/m/Y') : 'N/A' }}</small>
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ cliente.compraTotales|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_cliente_show', {'id': cliente.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <i class="fas fa-users"></i>
                                    <h4 class="mt-3">No se encontraron clientes</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primer cliente</p>
                                    <a href="{{ path('app_cliente_new') }}" class="btn btn-primary-modern btn-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Crear Primer Cliente
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci贸n de Paginaci贸n -->
            {% if clientes|length > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Mostrando <strong>{{ clientes|length }}</strong> clientes en total
                    </div>
                    <div>
                        <!-- Aqu铆 ir铆a la paginaci贸n si la hiciera -->
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Anterior</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Siguiente</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Funcionalidad b谩sica de b煤squeda
            const searchInput = document.querySelector('input[type="text"]');
            const tableRows = document.querySelectorAll('tbody tr');

            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();

                tableRows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

            // Animaci贸n suave para las filas
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateX(-20px)';

                setTimeout(() => {
                    row.style.transition = 'all 0.5s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateX(0)';
                }, index * 100);
            });
        });
    </script>
{% endblock %}
