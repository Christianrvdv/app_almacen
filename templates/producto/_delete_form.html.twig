<form method="post" action="{{ path('app_producto_delete', {'id': producto.id}) }}"
      onsubmit="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
    <button class="btn btn-danger btn-modern btn-danger-modern w-100">
        <i class="fas fa-trash me-2"></i>Confirmar Eliminación
    </button>
</form>
