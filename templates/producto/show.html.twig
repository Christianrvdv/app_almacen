{% extends 'base.html.twig' %}

{% block title %}{{ producto.nombre }} - Detalles del Producto{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_producto_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📦 {{ producto.nombre }}</h1>
                        <p class="mb-0 opacity-75">Detalles completos del producto</p>
                    </div>
                    <div style="width: 130px;"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Información Principal -->
            <div class="info-grid">
                <!-- Información Básica -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </div>
                    <div class="card-body p-4">
                        <div class="product-image">
                            <i class="fas fa-cube"></i>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Nombre del Producto</div>
                            <div class="info-value">{{ producto.nombre }}</div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Descripción</div>
                            <div class="info-value">
                                {% if producto.descipcion %}
                                    {{ producto.descipcion }}
                                {% else %}
                                    <span class="text-muted">Sin descripción</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Código de Barras</div>
                            <div class="info-value">
                                {% if producto.codigoBarras %}
                                    <code class="bg-light p-2 rounded">{{ producto.codigoBarras }}</code>
                                {% else %}
                                    <span class="text-muted">No asignado</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información Financiera -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-chart-line me-2"></i>Información Financiera
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Precio de Compra</div>
                            <div class="info-value price-cost">
                                ${{ producto.precioCompra|number_format(2, ',', '.') }}</div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Precio de Venta Actual</div>
                            <div class="info-value price-highlight">
                                ${{ producto.precioVentaActual|number_format(2, ',', '.') }}</div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Margen de Ganancia</div>
                            <div class="info-value">
                                <span class="{% if margen > 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                    {{ margen|number_format(2) }}%
                                </span>
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Stock Mínimo</div>
                            <div class="info-value">{{ producto.stockMinimo }} unidades</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de Relaciones -->
            <div class="info-grid">
                <!-- Categoría y Proveedor -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-network-wired me-2"></i>Relaciones
                    </div>
                    <div class="card-body p-4">
                        <div class="detalle-card">
                            <div class="info-label">Categoría</div>
                            <div class="info-value">
                                {% if producto.categoria %}
                                    <span class="badge-modern bg-info">
                                        <i class="fas fa-tag me-1"></i>{{ producto.categoria.nombre }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Sin categoría asignada</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="detalle-card">
                            <div class="info-label">Proveedor</div>
                            <div class="info-value">
                                {% if producto.proveedor %}
                                    <span class="badge-modern bg-warning text-dark">
                                        <i class="fas fa-truck me-1"></i>{{ producto.proveedor.nombre }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Sin proveedor asignado</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Metadatos -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-history me-2"></i>Metadatos
                    </div>
                    <div class="card-body">
                        <div class="metadata">
                            <div class="metadata-item">
                                <span class="metadata-label">Estado</span>
                                <span class="metadata-value">
                                    {% if producto.activo %}
                                        <span class="badge-modern bg-success">
                                            <i class="fas fa-check me-1"></i>Activo
                                        </span>
                                    {% else %}
                                        <span class="badge-modern bg-secondary">
                                            <i class="fas fa-times me-1"></i>Inactivo
                                        </span>
                                    {% endif %}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">Fecha de Creación</span>
                                <span class="metadata-value">
                                    {{ producto.fechaCreaccion ? producto.fechaCreaccion|date('d/m/Y H:i') : 'No disponible' }}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">Última Actualización</span>
                                <span class="metadata-value">
                                    {{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y H:i') : 'No disponible' }}
                                </span>
                            </div>

                            <div class="metadata-item">
                                <span class="metadata-label">ID del Producto</span>
                                <span class="metadata-value">
                                    <code>#{{ producto.id }}</code>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas del Producto -->
            <h3 class="section-title">
                <i class="fas fa-chart-line me-2"> </i>Estadísticas del Producto
            </h3>
            <div class="stats-grid">
                <div class="stat-item loading">
                    <div class="stat-number text-primary">{{ ventas }}</div>
                    <div class="stat-label">Ventas Totales</div>
                </div>
                <div class="stat-item loading">
                    <div class="stat-number text-success">{{ stok }}</div>
                    <div class="stat-label">Stock Actual</div>
                </div>
                <div class="stat-item loading">
                    <div class="stat-number text-warning">{{ ingresos }}</div>
                    <div class="stat-label">Ingresos Generados</div>
                </div>
                <div class="stat-item loading">
                    <div class="stat-number text-info">{{ modificaciones }}</div>
                    <div class="stat-label">Veces Modificado</div>
                </div>
            </div>


            <!-- Historial de precio-->
            <h3 class="section-title">
                <i class="fas fa-dollar me-2"></i>Historial de Precios
            </h3>

            <div class="table-modern">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                    <tr>
                        <th>Fecha Cambio</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Precio Anterior</th>
                        <th class="text-center">Precio Nuevo</th>
                        <th class="text-center">Diferencia</th>
                        <th>Motivo</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for registro in producto.historialPrecios %}
                        {% set is_last_historial = last_historials[registro.id] is defined %}
                        <tr>
                            <td>

                                <div class="text-muted">
                                    <strong>{{ registro.fechaCambio ? registro.fechaCambio|date('d/m/Y') : '-' }}</strong>
                                    <br>
                                    <small>{{ registro.fechaCambio ? registro.fechaCambio|date('H:i') : '' }}</small>
                                </div>

                            </td>
                            <td class="text-center text-muted">
                                {% set tipo = registro.tipo|lower %}
                                {% if tipo == 'venta' %}
                                    <strong>Venta</strong>
                                {% elseif tipo == 'compra' %}
                                    <strong>Compra</strong>
                                {% else %}
                                    <span class="badge-modern bg-secondary">{{ registro.tipo|capitalize }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center price-cell text-muted">
                                ${{ registro.precioAnterior|number_format(2, ',', '.') }}
                            </td>
                            <td class="text-center price-cell fw-bold text-success">
                                ${{ registro.precioNuevo|number_format(2, ',', '.') }}
                            </td>
                            <td class="text-center">
                                {% set diferencia = registro.precioNuevo - registro.precioAnterior %}
                                {% if diferencia > 0 %}
                                    <span
                                        class="text-success fw-bold">+${{ diferencia|number_format(2, ',', '.') }}</span>
                                {% else %}
                                    <span
                                        class="text-danger fw-bold">${{ diferencia|number_format(2, ',', '.') }}</span>
                                {% endif %}
                            </td>

                            <td class="text-muted text-center" title="{{ registro.motivo }}">
                                {{ registro.motivo ? (registro.motivo|slice(0, 30) ~ (registro.motivo|length > 30 ? '...' : '')) : 'Sin motivo' }}
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a href="{{ path('app_historial_precios_show', {'id': registro.id}) }}"
                                       class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="empty-state">
                                <i class="fas fa-history"></i>
                                <h4 class="text-muted">No se encontraron registros en el historial</h4>
                                <p class="text-muted mb-3">Comienza agregando tu primer registro al historial</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Ajustes de inventario -->
            <h3 class="section-title">
                <i class="fas fa-dollar me-2"></i>Historial de Ajustes
            </h3>

            <div class="table-modern">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Tipo</th>
                        <th class="text-center">Cantidad</th>
                        <th>Fecha</th>
                        <th>Motivo</th>
                        <th>Usuario</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ajuste in producto.ajusteInventarios %}
                        <tr>
                            <td>
                                {% if ajuste.producto %}
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-cube text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ ajuste.producto.nombre }}</div>
                                            <small class="text-muted">
                                                {% if ajuste.producto.codigoBarras %}
                                                    📋 {{ ajuste.producto.codigoBarras }}
                                                {% else %}
                                                    📋 Sin código
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-muted">Producto eliminado</span>
                                {% endif %}
                            </td>
                            <td>
                                {% set tipo = ajuste.tipo|lower %}
                                {% if tipo == 'entrada' %}
                                    <span class="badge-modern text-success bg-success bg-opacity-10">
                                            <i class="fas fa-sign-in-alt me-1"></i>Entrada
                                        </span>
                                {% elseif tipo == 'salida' %}
                                    <span class="badge-modern text-danger bg-danger bg-opacity-10">
                                            <i class="fas fa-sign-out-alt me-1"></i>Salida
                                        </span>
                                {% else %}
                                    <span class="badge-modern text-secondary">{{ ajuste.tipo|capitalize }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                    <span class="fw-bold {% if tipo == 'entrada' %}text-success{% else %}text-danger{% endif %}">
                                        {% if tipo == 'entrada' %}+{% else %}-{% endif %}{{ ajuste.cantidad }}
                                    </span>
                            </td>
                            <td>
                                <div class="text-muted">
                                    <small>{{ ajuste.fecha ? ajuste.fecha|date('d/m/Y') : '-' }}</small>
                                    <br>
                                    <small class="text-muted">{{ ajuste.fecha ? ajuste.fecha|date('H:i') : '' }}</small>
                                </div>
                            </td>
                            <td title="{{ ajuste.motivo }}">
                                    <span class="text-muted">
                                        {{ ajuste.motivo|slice(0, 40) }}{{ ajuste.motivo|length > 40 ? '...' : '' }}
                                    </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-2">
                                        <i class="fas fa-user text-primary"></i>
                                    </div>
                                    <span class="fw-medium">{{ ajuste.usuario }}</span>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a href="{{ path('app_ajuste_inventario_show', {'id': ajuste.id}) }}"
                                       class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_ajuste_inventario_edit', {'id': ajuste.id}) }}"
                                       class="btn btn-modern btn-primary-modern" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="empty-state">
                                <i class="fas fa-clipboard-list"></i>
                                <h4 class="mt-3">No se encontraron ajustes</h4>
                                <p class="text-muted mb-3">Comienza registrando tu primer ajuste de inventario</p>
                                <a href="{{ path('app_ajuste_inventario_new') }}" class="btn btn-primary-modern btn-modern">
                                    <i class="fas fa-plus-circle me-2"></i>Crear Primer Ajuste
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar Producto
                    </a>


                    <a href="{{ path('app_historial_precios_new', {'id': producto.id}) }}"
                       class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-edit me-2"></i>Editar historial precio
                    </a>
                    <a href="{{ path('app_compra_new_by_id', {'id': producto.id}) }}"
                           class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-edit me-2"></i>Nueva Compra
                    </a>

                    <a href="{{ path('app_ajuste_inventario_new_by_id', {'id':producto.id})}}"
                           class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-edit me-2"></i>Ajustar Inventario
                    </a>

                    <!-- Botón de eliminar con confirmación -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar Producto
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar el producto <strong>"{{ producto.nombre }}"</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer y se perderán todos los datos asociados al producto.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('producto/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Animación suave para las tarjetas
            const cards = document.querySelectorAll('.stats-card, .detalle-card, .stat-item');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
{% endblock %}
