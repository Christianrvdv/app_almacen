{% extends 'base.html.twig' %}

{% block title %}Producto #{{ producto.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Producto #{{ producto.id }}</h1>
            <a href="{{ path('app_producto_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Nombre</div>
                    <div class="col-sm-9">{{ producto.nombre }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Descripción</div>
                    <div class="col-sm-9">{{ producto.descipcion }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Código de barras</div>
                    <div class="col-sm-9"><code>{{ producto.codigoBarras }}</code></div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Precio compra</div>
                    <div class="col-sm-9">$ {{ producto.precioCompra|number_format(2, ',', '.') }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Precio venta actual</div>
                    <div class="col-sm-9 h5 mb-0 text-success">$ {{ producto.precioVentaActual|number_format(2, ',', '.') }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Stock mínimo</div>
                    <div class="col-sm-9">{{ producto.stockMinimo }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Activo</div>
                    <div class="col-sm-9">
                        {% if producto.activo %}
                            <span class="badge bg-success">Sí</span>
                        {% else %}
                            <span class="badge bg-secondary">No</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Fecha creación</div>
                    <div class="col-sm-9">{{ producto.fechaCreaccion ? producto.fechaCreaccion|date('d/m/Y H:i') : '-' }}</div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-3 fw-bold text-muted">Fecha actualización</div>
                    <div class="col-sm-9">{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y H:i') : '-' }}</div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-warning btn-sm">
                <i class="fas fa-edit me-1"></i>Editar
            </a>
            {{ include('producto/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
