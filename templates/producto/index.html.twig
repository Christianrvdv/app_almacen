{% extends 'base.html.twig' %}

{% block title %}Listado de Productos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">游닍 Gesti칩n de Productos</h1>
                        <p class="mb-0 opacity-75">Administra tu inventario y cat치logo de productos</p>
                    </div>
                    <div>
                        <a href="{{ path('app_categoria_index') }}" class="btn btn-light btn-sm rounded-pill px-3 me-2">
                            <i class="fas fa-tags me-2"></i>Categor칤as
                        </a>
                        <a href="{{ path('app_producto_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Producto
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estad칤sticas R치pidas -->
        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">춰칄xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-cubes"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalProductos }}</div>
                            <div class="metric-label">Total Productos</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalActivos }}
                            </div>
                            <div class="metric-label">Productos Activos</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-danger">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <div class="metric-value text-danger">
                                {{ totalInactivos }}
                            </div>
                            <div class="metric-label">Productos Inactivos</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-box-open"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ totalConCategoria }}
                            </div>
                            <div class="metric-label">Con Categor칤a</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B칰squeda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern" placeholder="游댌 Buscar productos por nombre, descripci칩n o c칩digo de barras...">
                    </div>
                </div>
            </div>

            <!-- Tabla de Productos -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Descripci칩n</th>
                            <th class="text-center">Precio Compra</th>
                            <th class="text-center">Precio Venta</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Actualizado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for producto in productos %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-cube text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ producto.nombre }}</div>
                                            <small class="text-muted">
                                                {% if producto.codigoBarras %}
                                                    游늶 {{ producto.codigoBarras }}
                                                {% else %}
                                                    游늶 Sin c칩digo
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                        <span class="text-muted">
                                            {{ producto.descripcion ? (producto.descripcion|slice(0, 40) ~ (producto.descripcion|length > 40 ? '...' : '')) : 'Sin descripci칩n' }}
                                        </span>
                                </td>
                                <td class="text-center price-cell text-danger">
                                    ${{ producto.precioCompra|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center price-cell text-success">
                                    ${{ producto.precioVentaActual|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    {% if producto.activo %}
                                        <span class="badge-modern text-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                    {% endif %}
                                </td>
                                <td class="text-center text-muted">
                                    <small>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}</small>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="empty-state">
                                    <i class="fas fa-inbox"></i>
                                    <h4 class="mt-3">No se encontraron productos</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primer producto al cat치logo</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci칩n de Paginaci칩n -->
            {% if productos.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        P치gina <strong>{{ productos.currentPageNumber }}</strong> de <strong>{{ productos.pageCount }}</strong> -
                        Mostrando <strong>{{ productos.getItemNumberPerPage * (productos.currentPageNumber - 1) + 1 }}-{{ min(productos.getItemNumberPerPage * productos.currentPageNumber, productos.getTotalItemCount) }}</strong> de <strong>{{ productos.getTotalItemCount }}</strong> productos
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Bot칩n Anterior #}
                                <li class="page-item {{ productos.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ productos.currentPageNumber == 1 ? '#' : path('app_producto_index', {'page': productos.currentPageNumber - 1}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera p치gina #}
                                {% if productos.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_producto_index', {'page': 1}) }}">1</a>
                                    </li>
                                    {% if productos.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# P치ginas alrededor de la actual #}
                                {% for i in max(1, productos.currentPageNumber - 1)..min(productos.pageCount, productos.currentPageNumber + 1) %}
                                    <li class="page-item {{ productos.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_producto_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# 칔ltima p치gina #}
                                {% if productos.currentPageNumber < productos.pageCount - 1 %}
                                    {% if productos.currentPageNumber < productos.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_producto_index', {'page': productos.pageCount}) }}">{{ productos.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Bot칩n Siguiente #}
                                <li class="page-item {{ productos.currentPageNumber == productos.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ productos.currentPageNumber == productos.pageCount ? '#' : path('app_producto_index', {'page': productos.currentPageNumber + 1}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initIndexPage } from "{{ asset('js/producto/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
