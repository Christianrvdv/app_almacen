{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <h1>Producto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descipcion</th>
                <th>Codigo_barras</th>
                <th>Precio_compra</th>
                <th>Precio_venta_actual</th>
                <th>Stock_minimo</th>
                <th>Activo</th>
                <th>Fecha_creaccion</th>
                <th>Fecha_actualizacion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descipcion }}</td>
                <td>{{ producto.codigoBarras }}</td>
                <td>{{ producto.precioCompra }}</td>
                <td>{{ producto.precioVentaActual }}</td>
                <td>{{ producto.stockMinimo }}</td>
                <td>{{ producto.activo ? 'Yes' : 'No' }}</td>
                <td>{{ producto.fechaCreaccion ? producto.fechaCreaccion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_producto_show', {'id': producto.id}) }}">show</a>
                    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_producto_new') }}">Create new</a>
{% endblock %}
