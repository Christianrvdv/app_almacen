{% extends 'base.html.twig' %}

{% block title %}Listado de Productos{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex justify-content-end">
                <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-secondary btn-sm me-2">
                    <i class="fas fa-arrow-left me-1"></i>Regresar
                </a>

                <a href="{{ path('app_categoria_index') }}" class="btn btn-outline-primary btn-sm">
                    <i class="fas fst-normal me-1"></i>Categorías
                </a>
            </div>

            <h1 class="fw-bold text-primary">Productos</h1>

            <a href="{{ path('app_producto_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Producto
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio Compra</th>
                            <th>Precio Venta</th>
                            <th>Estado</th>
                            <th>Actualizado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for producto in productos %}
                            <tr>
                                <td>{{ producto.nombre }}</td>
                                <td>{{ producto.descipcion|slice(0, 30) }}{{ producto.descipcion|length > 30 ? '...' : '' }}</td>
                                <td>${{ producto.precioCompra|number_format(2, ',', '.') }}</td>
                                <td>${{ producto.precioVentaActual|number_format(2, ',', '.') }}</td>
                                <td>
                                    {% if producto.activo %}
                                        <span class="badge bg-success">Excistente</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Agotado</span>
                                    {% endif %}
                                </td>
                                <td>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : '-' }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_producto_show', {'id': producto.id}) }}"
                                       class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11" class="text-center text-muted">No se encontraron productos.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
