{% extends 'base.html.twig' %}

{% block title %}Editar Producto{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Editar Producto</h1>
            <a href="{{ path('app_producto_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                {{ include('producto/_form.html.twig', {'button_label': 'Actualizar producto'}) }}
            </div>
        </div>

        <div class="text-end">
            {{ include('producto/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
