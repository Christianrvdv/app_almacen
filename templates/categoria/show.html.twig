{% extends 'base.html.twig' %}

{% block title %}{{ categoria.nombre }} - Detalles de la Categor√≠a{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_categoria_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">üè∑Ô∏è {{ categoria.nombre }}</h1>
                        <p class="mb-0 opacity-75">Detalles completos de la categor√≠a</p>
                    </div>
                    <div>
                        <span class="badge-modern">
                            <i class="fas fa-tag me-1"></i>Categor√≠a
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Informaci√≥n Principal -->
            <div class="info-grid">
                <!-- Informaci√≥n B√°sica -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-info-circle me-2"></i>Informaci√≥n B√°sica
                    </div>
                    <div class="card-body p-4">
                        <div class="category-icon">
                            <i class="fas fa-tags"></i>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Nombre de la Categor√≠a</div>
                            <div class="info-value">{{ categoria.nombre }}</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Descripci√≥n</div>
                            <div class="info-value">
                                {% if categoria.descripcion %}
                                    {{ categoria.descripcion }}
                                {% else %}
                                    <span class="text-muted">Sin descripci√≥n</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estad√≠sticas de la Categor√≠a -->
                <div class="stats-card">
                    <div class="card-header-modern">
                        <i class="fas fa-chart-bar me-2"></i>Estad√≠sticas
                    </div>
                    <div class="card-body p-4">
                        <div class="stats-grid" id="stats-container">
                            <div class="stat-item loading" id="stat-productos">
                                <div class="stat-number text-primary">...</div>
                                <div class="stat-label">Productos Asociados</div>
                            </div>
                            <div class="stat-item loading" id="stat-activos">
                                <div class="stat-number text-success">...</div>
                                <div class="stat-label">Productos Activos</div>
                            </div>
                            <div class="stat-item loading">
                                <div class="stat-number text-warning">$ {{ ingresos }}</div>
                                <div class="stat-label">Ingresos Generados</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Metadatos -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-database me-2"></i>Informaci√≥n del Sistema
                </div>
                <div class="card-body">
                    <div class="metadata">
                        <div class="metadata-item">
                            <span class="metadata-label">ID de la Categor√≠a</span>
                            <span class="metadata-value">
                                <code>#{{ categoria.id }}</code>
                            </span>
                        </div>

                        <div class="metadata-item">
                            <span class="metadata-label">Total de Productos</span>
                            <span class="metadata-value">
                                {{ categoria.productos|length }} producto(s)
                            </span>
                        </div>

                        <div class="metadata-item">
                            <span class="metadata-label">Estado</span>
                            <span class="metadata-value">
                                <span class="badge-modern bg-success">
                                    <i class="fas fa-check me-1"></i>Activa
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Lista de Productos Asociados -->
            {% if categoria.productos|length > 0 %}
                <h3 class="section-title">
                    <i class="fas fa-cubes me-2"></i>Productos en esta Categor√≠a ({{ categoria.productos|length }})
                </h3>
                <div class="table-modern">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Descripci√≥n</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Actualizado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for producto in  categoria.productos %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-cube text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="product-name">{{ producto.nombre }}</div>
                                            <small class="text-muted">
                                                {% if producto.codigoBarras %}
                                                    üìã {{ producto.codigoBarras }}
                                                {% else %}
                                                    üìã Sin c√≥digo
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                        <span class="text-muted">
                                            {{ producto.descipcion ? (producto.descipcion|slice(0, 40) ~ (producto.descipcion|length > 40 ? '...' : '')) : 'Sin descripci√≥n' }}
                                        </span>
                                </td>
                                <td class="text-center">
                                    {% if producto.activo %}
                                        <span class="badge-modern text-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                    {% else %}
                                        <span class="badge-modern text-secondary">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                    {% endif %}
                                </td>
                                <td class="text-center text-muted">
                                    <small>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}</small>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="empty-state">
                                    <i class="fas fa-inbox"></i>
                                    <h4 class="mt-3">No se encontraron productos</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primer producto al cat√°logo</p>
                                    <a href="{{ path('app_producto_new') }}"
                                       class="btn btn-primary-modern btn-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Crear Primer Producto
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            {% endif %}

            <!-- Acciones -->
            <h3 class="section-title">
                <i class="fas fa-cogs me-2"></i>Acciones
            </h3>
            <div class="form-section">
                <div class="action-buttons">
                    <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}"
                       class="btn btn-modern btn-warning-modern">
                        <i class="fas fa-edit me-2"></i>Editar Categor√≠a
                    </a>

                    <a href="{{ path('app_categoria_index') }}"
                       class="btn btn-modern btn-primary-modern">
                        <i class="fas fa-list me-2"></i>Volver al Listado
                    </a>

                    <!-- Bot√≥n de eliminar con confirmaci√≥n -->
                    <button type="button"
                            class="btn btn-modern btn-danger-modern"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Eliminar Categor√≠a
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmaci√≥n para Eliminar -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminaci√≥n
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro de que deseas eliminar la categor√≠a <strong>"{{ categoria.nombre }}"</strong>?</p>
                    <p class="text-danger small">
                        <i class="fas fa-info-circle me-1"></i>
                        {% if categoria.productos|length > 0 %}
                            Esta categor√≠a tiene {{ categoria.productos|length }} producto(s) asociado(s).
                            Al eliminar la categor√≠a, estos productos quedar√°n sin categor√≠a asignada.
                        {% else %}
                            Esta acci√≥n no se puede deshacer.
                        {% endif %}
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    {{ include('categoria/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Animaci√≥n suave para las tarjetas
            const cards = document.querySelectorAll('.stats-card, .detalle-card, .stat-item');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Cargar estad√≠sticas
            loadStats();
        });

        async function loadStats() {
            try {
                // Usar datos reales de la categor√≠a
                const stats = {
                    productos: {{ categoria.productos|length }},
                    activos: {{ categoria.productos|filter(p => p.activo)|length }},
                    ingresos: calcularIngresosTotales()
                };

                // Actualizar las estad√≠sticas
                document.getElementById('stat-productos').querySelector('.stat-number').textContent = stats.productos;
                document.getElementById('stat-activos').querySelector('.stat-number').textContent = stats.activos;

                // Remover clase de loading
                document.querySelectorAll('.stat-item').forEach(item => {
                    item.classList.remove('loading');
                });
            } catch (error) {
                console.error('Error cargando estad√≠sticas:', error);
                document.querySelectorAll('.stat-item').forEach(item => {
                    item.classList.remove('loading');
                    item.querySelector('.stat-number').textContent = 'Error';
                });
            }
        }

        function calcularIngresosTotales() {
            // Esta funci√≥n calcular√≠a los ingresos totales de los productos de esta categor√≠a
            // Por ahora devolvemos 0, pero puedes implementar la l√≥gica real aqu√≠
