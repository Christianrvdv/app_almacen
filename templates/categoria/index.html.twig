{% extends 'base.html.twig' %}

{% block title %}Listado de Categor√≠as{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_producto_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver a Productos
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">üè∑Ô∏è Gesti√≥n de Categor√≠as</h1>
                        <p class="mb-0 opacity-75">Administra las categor√≠as de tu inventario</p>
                    </div>
                    <div>
                        <a href="{{ path('app_categoria_new') }}" class="btn btn-warning btn-sm rounded-pill px-3">
                            <i class="fas fa-plus-circle me-2"></i>Nueva Categor√≠a
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¬°√âxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Estad√≠sticas R√°pidas -->
            <div class="row">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalCategorias }}</div>
                            <div class="metric-label">Total Categor√≠as</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalConDescripcion }}
                            </div>
                            <div class="metric-label">Con Descripci√≥n</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-boxes"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ totalEnUso }}
                            </div>
                            <div class="metric-label">En Uso</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B√∫squeda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <input type="text" class="form-control form-control-modern" placeholder="üîç Buscar categor√≠as por nombre o descripci√≥n...">
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>

            <!-- Tabla de Categor√≠as -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>Categor√≠a</th>
                            <th>Descripci√≥n</th>
                            <th class="text-center">Productos</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categoria in categorias %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-2 me-3">
                                            <i class="fas fa-tag text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="category-name">{{ categoria.nombre }}</div>
                                            <small class="text-muted">
                                                ID: {{ categoria.id }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        {{ categoria.descripcion ? (categoria.descripcion|slice(0, 60) ~ (categoria.descripcion|length > 60 ? '...' : '')) : 'Sin descripci√≥n' }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-modern text-info">
                                        <i class="fas fa-cube me-1"></i>{{ categoria.productos|length }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_categoria_show', {'id': categoria.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="empty-state">
                                    <i class="fas fa-tags"></i>
                                    <h4 class="mt-3">No se encontraron categor√≠as</h4>
                                    <p class="text-muted mb-3">Comienza agregando tu primera categor√≠a</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci√≥n de Paginaci√≥n -->
            {% if categorias.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        P√°gina <strong>{{ categorias.currentPageNumber }}</strong> de <strong>{{ categorias.pageCount }}</strong> -
                        Mostrando <strong>{{ categorias.getItemNumberPerPage * (categorias.currentPageNumber - 1) + 1 }}-{{ min(categorias.getItemNumberPerPage * categorias.currentPageNumber, categorias.getTotalItemCount) }}</strong> de <strong>{{ categorias.getTotalItemCount }}</strong> categor√≠as
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Bot√≥n Anterior #}
                                <li class="page-item {{ categorias.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ categorias.currentPageNumber == 1 ? '#' : path('app_categoria_index', {'page': categorias.currentPageNumber - 1}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera p√°gina #}
                                {% if categorias.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_categoria_index', {'page': 1}) }}">1</a>
                                    </li>
                                    {% if categorias.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# P√°ginas alrededor de la actual #}
                                {% for i in max(1, categorias.currentPageNumber - 1)..min(categorias.pageCount, categorias.currentPageNumber + 1) %}
                                    <li class="page-item {{ categorias.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_categoria_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# √öltima p√°gina #}
                                {% if categorias.currentPageNumber < categorias.pageCount - 1 %}
                                    {% if categorias.currentPageNumber < categorias.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_categoria_index', {'page': categorias.pageCount}) }}">{{ categorias.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Bot√≥n Siguiente #}
                                <li class="page-item {{ categorias.currentPageNumber == categorias.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ categorias.currentPageNumber == categorias.pageCount ? '#' : path('app_categoria_index', {'page': categorias.currentPageNumber + 1}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initIndexPage } from "{{ asset('js/categoria/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
