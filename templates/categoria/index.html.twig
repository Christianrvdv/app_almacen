{% extends 'base.html.twig' %}

{% block title %}Listado de Categorías{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_producto_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar
            </a>
            <h1 class="fw-bold text-primary">Categorías</h1>
            <a href="{{ path('app_categoria_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Nueva Categoría
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categoria in categorias %}
                            <tr>
                                <td>{{ categoria.nombre }}</td>
                                <td title="{{ categoria.descripcion }}">
                                    {{ categoria.descripcion|slice(0, 40) }}{{ categoria.descripcion|length > 40 ? '...' : '' }}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_categoria_show', {'id': categoria.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">No se encontraron categorías.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
