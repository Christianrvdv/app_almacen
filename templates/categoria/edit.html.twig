{% extends 'base.html.twig' %}

{% block title %}Editar Categor칤a #{{ categoria.id }} - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
    <!-- Header Mejorado -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <a href="{{ path('app_categoria_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                    </a>
                </div>
                <div class="text-center text-white">
                    <h1 class="fw-bold mb-1">九勇 Editar Categor칤a</h1>
                    <p class="mb-0 opacity-75">Actualiza la informaci칩n de la categor칤a #{{ categoria.id }}</p>
                </div>
                <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Mensajes Flash Mejorados -->
        {% for message in app.flashes('success') %}
            <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-check-circle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">춰칄xito!</h5>
                        {{ message }}
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Error</h5>
                        {{ message }}
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Formulario Principal -->
        <div class="stats-card">
            <div class="card-header-modern">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <i class="fas fa-edit me-2"></i>Editando Categor칤a: {{ categoria.nombre }}
                    </div>
                    <form method="post" action="{{ path('app_categoria_delete', {'id': categoria.id}) }}"
                          onsubmit="return confirm('쮼st치s seguro de que deseas eliminar esta categor칤a?');"
                          class="delete-form">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
                        <button type="submit" class="btn btn-danger-modern btn-modern btn-sm">
                            <i class="fas fa-trash me-1"></i>Eliminar Categor칤a
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <!-- Estad칤sticas de la Categor칤a -->
                {% if categoria.productos|length > 0 %}

                <div class="card-body p-4">
                    <div class="stats-grid" id="stats-container">
                        <div class="stat-item loading">
                            <div class="stat-number text-primary">{{ categoria.productos|length }}</div>
                            <div class="stat-label">Productos Totales</div>
                        </div>
                        <div class="stat-item loading">
                            <div
                                class="stat-number text-success">{{ categoria.productos|filter(p => p.activo)|length }}</div>
                            <div class="stat-label">Productos Activos</div>
                        </div>
                        <div class="stat-item loading">
                            <div
                                class="stat-number text-warning">{{ categoria.productos|filter(p => not p.activo)|length }}</div>
                            <div class="stat-label">Productos Inactivos</div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Informaci칩n B치sica -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Informaci칩n B치sica de la Categor칤a
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.nombre, 'Nombre de la Categor칤a', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.nombre, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Ej: Electr칩nicos, Ropa, Hogar',
                                        'required': 'required'
                                    }}) }}
                                    {{ form_errors(form.nombre) }}
                                    <div class="form-help-text">Nombre 칰nico y descriptivo para la categor칤a</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.descripcion, 'Descripci칩n', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.descripcion, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Describe el prop칩sito de esta categor칤a...',
                                        'rows': 3
                                    }}) }}
                                    {{ form_errors(form.descripcion) }}
                                    <div class="form-help-text">Informaci칩n adicional sobre la categor칤a (opcional)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Previa de Productos -->
                    <h3 class="section-title">
                        <i class="fas fa-cubes me-2"></i>Productos en esta Categor칤a ({{ categoria.productos|length }})
                    </h3>

                    {% if categoria.productos|length > 0 %}
                        <div class="table-modern mb-4">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Descripci칩n</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-center">Actualizado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for producto in  categoria.productos %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded p-2 me-3">
                                                    <i class="fas fa-cube text-primary"></i>
                                                </div>
                                                <div>
                                                    <div class="product-name">{{ producto.nombre }}</div>
                                                    <small class="text-muted">
                                                        {% if producto.codigoBarras %}
                                                            游늶 {{ producto.codigoBarras }}
                                                        {% else %}
                                                            游늶 Sin c칩digo
                                                        {% endif %}
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                        <span class="text-muted">
                                            {{ producto.descripcion ? (producto.descripcion|slice(0, 40) ~ (producto.descripcion|length > 40 ? '...' : '')) : 'Sin descripci칩n' }}
                                        </span>
                                        </td>
                                        <td class="text-center">
                                            {% if producto.activo %}
                                                <span class="badge-modern text-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                            {% else %}
                                                <span class="badge-modern text-secondary">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center text-muted">
                                            <small>{{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}</small>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a href="{{ path('app_producto_show', {'id': producto.id}) }}"
                                                   class="btn btn-modern btn-outline-modern"
                                                   title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_producto_edit', {'id': producto.id}) }}"
                                                   class="btn btn-modern btn-primary-modern" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="empty-state">
                                            <i class="fas fa-inbox"></i>
                                            <h4 class="mt-3">No se encontraron productos</h4>
                                            <p class="text-muted mb-3">Comienza agregando tu primer producto al
                                                cat치logo</p>
                                            <a href="{{ path('app_producto_new') }}"
                                               class="btn btn-primary-modern btn-modern">
                                                <i class="fas fa-plus-circle me-2"></i>Crear Primer Producto
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    {% endif %}


                    <!-- Botones de Acci칩n -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_categoria_show', {'id': categoria.id}) }}" class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Actualizar Categor칤a
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import { initFormPage } from "{{ asset('js/categoria/new.js') }}";

        document.addEventListener('DOMContentLoaded', function() {
            const nombreInputId = '{{ form.nombre.vars.id }}';
            initFormPage(nombreInputId, true);
        });
    </script>
{% endblock %}
