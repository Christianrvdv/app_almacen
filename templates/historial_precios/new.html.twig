{% extends 'base.html.twig' %}

{% block title %}Nuevo Historial de Precios - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_producto_show', {'id':producto.id}) }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Regresar
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">📊 Nuevo Registro</h1>
                        <p class="mb-0 opacity-75">Agrega un nuevo cambio de precio al historial</p>
                    </div>
                    <div style="width: 130px;"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <i class="fas fa-history me-2"></i>Información del Cambio de Precio
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información Básica -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </h3>
                    <div class="form-section">
                        <div class="row g-3">
                            <div class="col-md-6">

                                <div class="form-group-modern">
                                    <div class="bg-light rounded p-3 me-3">
                                        <i class="fas fa-cube text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="fw-bold mb-1">{{ producto.nombre }}</h5>
                                        <div class="d-flex flex-wrap gap-3">
                                            {% if producto.codigoBarras %}
                                                <small class="text-muted">
                                                    <i class="fas fa-barcode me-1"></i>{{ producto.codigoBarras }}
                                                </small>
                                            {% endif %}
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Actualizado: {{ producto.fechaActualizacion ? producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}
                                            </small>
                                            <small>
                                                {% if producto.activo %}
                                                    <span class="badge-modern text-success">
                                            <i class="fas fa-check me-1"></i>Activo
                                        </span>
                                                {% else %}
                                                    <span class="badge-modern text-secondary">
                                            <i class="fas fa-times me-1"></i>Inactivo
                                        </span>
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.tipo, 'Tipo de Cambio', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.tipo, {'attr': {
                                        'class': 'form-control form-control-modern form-select-modern',
                                        'required': 'required',
                                        'id': 'tipo_cambio'
                                    }}) }}
                                    {{ form_errors(form.tipo) }}
                                    <div class="form-help-text">Selecciona el tipo de cambio de precio</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Precios -->
                    <h3 class="section-title">
                        <i class="fas fa-dollar-sign me-2"></i>Información de Precios
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.precio_anterior, 'Precio Anterior', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.precio_anterior, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'step': '0.01',
                                            'min': '0',
                                            'required': 'required',
                                            'placeholder': '0.00',
                                            'id':'precio_anterior',
                                            'readonly': 'readonly'

                                        }}) }}
                                    </div>
                                    {{ form_errors(form.precio_anterior) }}
                                    <div class="form-help-text">Precio anterior del producto</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.precio_nuevo, 'Precio Nuevo', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.precio_nuevo, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'step': '0.01',
                                            'min': '0',
                                            'required': 'required',
                                            'placeholder': '0.00'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.precio_nuevo) }}
                                    <div class="form-help-text">Nuevo precio del producto</div>
                                </div>
                            </div>
                        </div>

                        <!-- Vista Previa de Cambio -->
                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Diferencia:</span>
                                <span id="diferenciaPreview" class="text-success">$0.00</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Variación Porcentual:</span>
                                <span id="variacionPreview" class="text-profit">0.00%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Fecha y Motivo -->
                    <h3 class="section-title">
                        <i class="fas fa-calendar-alt me-2"></i>Fecha y Motivo
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha_cambio, 'Fecha del Cambio', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha_cambio, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'readonly': 'readonly'
                                    }}) }}
                                    {{ form_errors(form.fecha_cambio) }}
                                    <div class="form-help-text">Fecha y hora en que se realizó el cambio</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.motivo, 'Motivo del Cambio', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.motivo, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Describe el motivo del cambio de precio...'
                                    }}) }}
                                    {{ form_errors(form.motivo) }}
                                    <div class="form-help-text">Razón o justificación del cambio (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Resumen -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Resumen del Cambio
                    </h3>
                    <div class="form-section">

                        <div class="detalle-card">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="info-label">Tipo</div>
                                    <div id="resumenTipo" class="info-value">-</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Precio Anterior</div>
                                    <div id="resumenAnterior" class="info-value text-danger">$0.00</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Precio Nuevo</div>
                                    <div id="resumenNuevo" class="info-value text-success">$0.00</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Diferencia</div>
                                    <div id="resumenDiferencia" class="info-value text-primary">$0.00</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_producto_show', {'id':producto.id}) }}"
                               class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Crear Registro
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tipoSelect = document.getElementById('{{ form.tipo.vars.id }}');
            const precioAnteriorInput = document.getElementById('{{ form.precio_anterior.vars.id }}');
            const precioNuevoInput = document.getElementById('{{ form.precio_nuevo.vars.id }}');
            const fechaCambioInput = document.getElementById('{{ form.fecha_cambio.vars.id }}');
            const diferenciaPreview = document.getElementById('diferenciaPreview');
            const variacionPreview = document.getElementById('variacionPreview');

            // Elementos del resumen
            const resumenTipo = document.getElementById('resumenTipo');
            const resumenAnterior = document.getElementById('resumenAnterior');
            const resumenNuevo = document.getElementById('resumenNuevo');
            const resumenDiferencia = document.getElementById('resumenDiferencia');

            // Precios del producto desde el objeto producto pasado por el controlador
            const preciosProducto = {
                compra: {{ producto.getPrecioCompra() ?? 0 }},
                venta: {{ producto.getPrecioVentaActual() ?? 0 }}
            };

            console.log('Precios del producto:', preciosProducto);

            // Establecer fecha actual por defecto si está vacía
            if (!fechaCambioInput.value) {
                const now = new Date();

                // Convertir a zona horaria de Toronto
                const torontoTime = now.toLocaleString("en-CA", {
                    timeZone: "America/Toronto",
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false
                }).replace(', ', 'T').replace(/\//g, '-');

                fechaCambioInput.value = torontoTime;
            }

            // Función para actualizar el precio según el tipo seleccionado
            function actualizarPrecio() {
                const valorTipo = tipoSelect.value;
                const helpText = document.querySelector('#{{ form.precio_anterior.vars.id }}').closest('.form-group-modern').querySelector('.form-help-text');

                console.log('Actualizando precio para tipo:', valorTipo);

                if (valorTipo === 'compra') {
                    precioAnteriorInput.value = preciosProducto.compra;
                    precioAnteriorInput.placeholder = preciosProducto.compra.toFixed(2);
                    if (helpText) {
                        helpText.textContent = 'Precio de compra actual del producto';
                    }
                } else if (valorTipo === 'venta') {
                    precioAnteriorInput.value = preciosProducto.venta;
                    precioAnteriorInput.placeholder = preciosProducto.venta.toFixed(2);
                    if (helpText) {
                        helpText.textContent = 'Precio de venta actual del producto';
                    }
                } else {
                    precioAnteriorInput.value = '0.00';
                    precioAnteriorInput.placeholder = '0.00';
                    if (helpText) {
                        helpText.textContent = 'Precio anterior del producto';
                    }
                }

                // Recalcular el cambio después de actualizar el precio
                calcularCambio();
            }

            // Asignar el evento change
            tipoSelect.addEventListener('change', actualizarPrecio);

            // Llamar a la función al cargar la página
            actualizarPrecio();

            function calcularCambio() {
                const precioAnterior = parseFloat(precioAnteriorInput.value) || 0;
                const precioNuevo = parseFloat(precioNuevoInput.value) || 0;
                const tipo = tipoSelect.options[tipoSelect.selectedIndex]?.text || '-';

                if (precioAnterior > 0 && precioNuevo > 0) {
                    const diferencia = precioNuevo - precioAnterior;
                    const variacionPorcentaje = (diferencia / precioAnterior) * 100;

                    // Actualizar preview
                    diferenciaPreview.textContent = `$${diferencia.toFixed(2)}`;
                    variacionPreview.textContent = `${variacionPorcentaje.toFixed(2)}%`;

                    // Cambiar colores según el resultado
                    if (diferencia > 0) {
                        diferenciaPreview.className = 'text-success';
                        variacionPreview.className = 'text-profit';
                    } else {
                        diferenciaPreview.className = 'text-danger';
                        variacionPreview.className = 'text-loss';
                    }

                    // Actualizar resumen
                    resumenTipo.textContent = tipo;
                    resumenAnterior.textContent = `$${precioAnterior.toFixed(2)}`;
                    resumenNuevo.textContent = `$${precioNuevo.toFixed(2)}`;
                    resumenDiferencia.textContent = `$${diferencia.toFixed(2)}`;
                    resumenDiferencia.className = diferencia > 0 ? 'info-value text-success' : 'info-value text-danger';
                } else {
                    // Valores por defecto
                    diferenciaPreview.textContent = '$0.00';
                    variacionPreview.textContent = '0.00%';
                    diferenciaPreview.className = 'text-success';
                    variacionPreview.className = 'text-profit';

                    // Resumen por defecto
                    resumenTipo.textContent = tipo || '-';
                    resumenAnterior.textContent = `$${(precioAnterior || 0).toFixed(2)}`;
                    resumenNuevo.textContent = `$${(precioNuevo || 0).toFixed(2)}`;
                    resumenDiferencia.textContent = '$0.00';
                    resumenDiferencia.className = 'info-value text-primary';
                }
            }

            // Calcular cuando cambien los precios
            precioAnteriorInput.addEventListener('input', calcularCambio);
            precioNuevoInput.addEventListener('input', calcularCambio);

            // Calcular inicialmente
            calcularCambio();

            // Validación de formulario
            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();

                    // Mostrar mensajes de error específicos
                    const requiredFields = form.querySelectorAll('[required]');
                    requiredFields.forEach(field => {
                        if (!field.value) {
                            field.classList.add('is-invalid');
                        }
                    });
                }
                form.classList.add('was-validated');
            });

            // Remover clase de error cuando se complete el campo
            const requiredFields = form.querySelectorAll('[required]');
            requiredFields.forEach(field => {
                field.addEventListener('input', function () {
                    if (this.value) {
                        this.classList.remove('is-invalid');
                    }
                });
            });

            // Animación suave para las secciones
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 200);
            });

            // Efecto hover para la tarjeta de resumen
            const resumenCard = document.querySelector('.detalle-card');
            if (resumenCard) {
                resumenCard.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-2px)';
                });
                resumenCard.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            }
        });
    </script>
{% endblock %}
