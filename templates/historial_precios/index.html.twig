{% extends 'base.html.twig' %}

{% block title %}Historial de Precios{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Mejorado -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Dashboard
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">游늵 Historial de Precios</h1>
                        <p class="mb-0 opacity-75">Seguimiento de cambios en los precios de productos</p>
                    </div>
                    <div>
                        <a href="{{ path('app_producto_index') }}" class="btn btn-light btn-sm rounded-pill px-3 me-2">
                            <i class="fas fa-boxes me-2"></i>Productos
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estad칤sticas R치pidas -->
        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">춰칄xito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-primary">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="metric-value text-primary">{{ totalRegistros }}</div>
                            <div class="metric-label">Total Registros</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-success">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="metric-value text-success">
                                {{ totalVenta }}
                            </div>
                            <div class="metric-label">Cambios Venta</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-info">
                                <i class="fas fa-truck-loading"></i>
                            </div>
                            <div class="metric-value text-info">
                                {{ totalCompra }}
                            </div>
                            <div class="metric-label">Cambios Compra</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="metric-card">
                            <div class="metric-icon text-warning">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="metric-value text-warning">
                                {{ totalAjustePromo }}
                            </div>
                            <div class="metric-label">Ajustes/Promos</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barra de B칰squeda y Filtros -->
            <div class="search-filter">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <form method="get" action="{{ path('app_historial_precios_index') }}" id="search-form">
                            <div class="input-group">
                                <input type="text"
                                       name="q"
                                       class="form-control form-control-modern"
                                       placeholder="游댌 Buscar por tipo (venta/compra/promoci칩n/ajuste), motivo o nombre de producto..."
                                       value="{{ searchTerm|default('') }}"
                                       id="search-input">
                                {% if searchTerm %}
                                    <button type="button" class="btn btn-outline-secondary" onclick="clearSearch()" title="Limpiar b칰squeda">
                                        <i class="fas fa-times"></i>
                                    </button>
                                {% endif %}
                                <button type="submit" class="btn btn-primary">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tabla de Historial de Precios -->
            <div class="table-modern">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Producto</th>
                            <th>Tipo</th>
                            <th class="text-center">Precio Anterior</th>
                            <th class="text-center">Precio Nuevo</th>
                            <th class="text-center">Diferencia</th>
                            <th>Fecha Cambio</th>
                            <th>Motivo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for registro in historial_precios %}
                            <tr>
                                <td class="fw-bold">{{ registro.id }}</td>
                                <td>
                                    {% if registro.producto %}
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3">
                                                <i class="fas fa-cube text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="product-name">{{ registro.producto.nombre }}</div>
                                                <small class="text-muted">
                                                    {% if registro.producto.codigoBarras %}
                                                        游늶 {{ registro.producto.codigoBarras }}
                                                    {% else %}
                                                        游늶 Sin c칩digo
                                                    {% endif %}
                                                </small>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Producto no disponible</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set tipo = registro.tipo|lower %}
                                    {% if tipo == 'venta' %}
                                        <span class="badge-modern bg-primary">Venta</span>
                                    {% elseif tipo == 'compra' %}
                                        <span class="badge-modern bg-success">Compra</span>
                                    {% elseif tipo == 'promocion' %}
                                        <span class="badge-modern bg-warning text-dark">Promoci칩n</span>
                                    {% elseif tipo == 'ajuste' %}
                                        <span class="badge-modern bg-info">Ajuste</span>
                                    {% else %}
                                        <span class="badge-modern bg-secondary">{{ registro.tipo|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-center price-cell text-muted">
                                    ${{ registro.precioAnterior|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center price-cell fw-bold text-success">
                                    ${{ registro.precioNuevo|number_format(2, ',', '.') }}
                                </td>
                                <td class="text-center">
                                    {% set diferencia = registro.precioNuevo - registro.precioAnterior %}
                                    {% if diferencia > 0 %}
                                        <span class="text-success fw-bold">+${{ diferencia|number_format(2, ',', '.') }}</span>
                                    {% else %}
                                        <span class="text-danger fw-bold">${{ diferencia|number_format(2, ',', '.') }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="fw-bold">{{ registro.fechaCambio ? registro.fechaCambio|date('d/m/Y') : '-' }}</div>
                                    <small class="text-muted">{{ registro.fechaCambio ? registro.fechaCambio|date('H:i') : '' }}</small>
                                </td>
                                <td title="{{ registro.motivo }}">
                                    {{ registro.motivo ? (registro.motivo|slice(0, 30) ~ (registro.motivo|length > 30 ? '...' : '')) : 'Sin motivo' }}
                                </td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_historial_precios_show', {'id': registro.id}) }}"
                                           class="btn btn-modern btn-outline-modern" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_historial_precios_edit', {'id': registro.id}) }}"
                                           class="btn btn-modern btn-primary-modern" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="empty-state">
                                    <i class="fas fa-history"></i>
                                    <h4 class="mt-3">
                                        {% if searchTerm %}
                                            No se encontraron registros para "{{ searchTerm }}"
                                        {% else %}
                                            No se encontraron registros en el historial
                                        {% endif %}
                                    </h4>
                                    <p class="text-muted mb-3">
                                        {% if searchTerm %}
                                            Intenta con otros t칠rminos de b칰squeda
                                        {% else %}
                                            Comienza agregando tu primer registro al historial
                                        {% endif %}
                                    </p>
                                    {% if searchTerm %}
                                        <a href="{{ path('app_historial_precios_index') }}" class="btn btn-primary">
                                            <i class="fas fa-times me-2"></i>Limpiar b칰squeda
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_producto_index') }}" class="btn btn-primary">
                                            <i class="fas fa-boxes me-2"></i>Ir a Productos
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Informaci칩n de Paginaci칩n -->
            {% if historial_precios.getTotalItemCount > 0 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        P치gina <strong>{{ historial_precios.currentPageNumber }}</strong> de <strong>{{ historial_precios.pageCount }}</strong> -
                        Mostrando <strong>{{ historial_precios.getItemNumberPerPage * (historial_precios.currentPageNumber - 1) + 1 }}-{{ min(historial_precios.getItemNumberPerPage * historial_precios.currentPageNumber, historial_precios.getTotalItemCount) }}</strong> de <strong>{{ historial_precios.getTotalItemCount }}</strong> registros
                        {% if searchTerm %}
                            <span class="badge bg-info ms-2">B칰squeda: "{{ searchTerm }}"</span>
                        {% endif %}
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                {# Bot칩n Anterior #}
                                <li class="page-item {{ historial_precios.currentPageNumber == 1 ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ historial_precios.currentPageNumber == 1 ? '#' : path('app_historial_precios_index', {'page': historial_precios.currentPageNumber - 1, 'q': searchTerm}) }}">
                                        <i class="fas fa-chevron-left me-1"></i> Anterior
                                    </a>
                                </li>

                                {# Primera p치gina #}
                                {% if historial_precios.currentPageNumber > 2 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_historial_precios_index', {'page': 1, 'q': searchTerm}) }}">1</a>
                                    </li>
                                    {% if historial_precios.currentPageNumber > 3 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {# P치ginas alrededor de la actual #}
                                {% for i in max(1, historial_precios.currentPageNumber - 1)..min(historial_precios.pageCount, historial_precios.currentPageNumber + 1) %}
                                    <li class="page-item {{ historial_precios.currentPageNumber == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_historial_precios_index', {'page': i, 'q': searchTerm}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {# 칔ltima p치gina #}
                                {% if historial_precios.currentPageNumber < historial_precios.pageCount - 1 %}
                                    {% if historial_precios.currentPageNumber < historial_precios.pageCount - 2 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_historial_precios_index', {'page': historial_precios.pageCount, 'q': searchTerm}) }}">{{ historial_precios.pageCount }}</a>
                                    </li>
                                {% endif %}

                                {# Bot칩n Siguiente #}
                                <li class="page-item {{ historial_precios.currentPageNumber == historial_precios.pageCount ? 'disabled' : '' }}">
                                    <a class="page-link"
                                       href="{{ historial_precios.currentPageNumber == historial_precios.pageCount ? '#' : path('app_historial_precios_index', {'page': historial_precios.currentPageNumber + 1, 'q': searchTerm}) }}">
                                        Siguiente <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        // Funci칩n global para limpiar b칰squeda
        function clearSearch() {
            window.location.href = "{{ path('app_historial_precios_index') }}";
        }
    </script>

    <script type="module">
        import { initIndexPage } from "{{ asset('js/historial_precio/index.js') }}";

        document.addEventListener('DOMContentLoaded', initIndexPage);
    </script>
{% endblock %}
