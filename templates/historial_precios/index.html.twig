{% extends 'base.html.twig' %}

{% block title %}HistorialPrecios index{% endblock %}

{% block body %}
    <h1>HistorialPrecios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Precio_anterior</th>
                <th>Precio_nuevo</th>
                <th>Fecha_cambio</th>
                <th>Motivo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historial_precio in historial_precios %}
            <tr>
                <td>{{ historial_precio.id }}</td>
                <td>{{ historial_precio.tipo }}</td>
                <td>{{ historial_precio.precioAnterior }}</td>
                <td>{{ historial_precio.precioNuevo }}</td>
                <td>{{ historial_precio.fechaCambio ? historial_precio.fechaCambio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ historial_precio.motivo }}</td>
                <td>
                    <a href="{{ path('app_historial_precios_show', {'id': historial_precio.id}) }}">show</a>
                    <a href="{{ path('app_historial_precios_edit', {'id': historial_precio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_historial_precios_new') }}">Create new</a>
{% endblock %}
