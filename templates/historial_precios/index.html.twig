{% extends 'base.html.twig' %}

{% block title %}Historial de Precios{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar
            </a>
            <h1 class="fw-bold text-primary">Historial de Precios</h1>
            <a href="{{ path('app_historial_precios_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Nuevo Registro
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Tipo</th>
                            <th>Precio Anterior</th>
                            <th>Precio Nuevo</th>
                            <th>Fecha Cambio</th>
                            <th>Motivo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for registro in historial_precios %}
                            <tr>
                                <td>{{ registro.id }}</td>
                                <td>
                                    {% set tipo = registro.tipo|lower %}
                                    {% if tipo == 'venta' %}
                                        <span class="badge bg-primary">Venta</span>
                                    {% elseif tipo == 'compra' %}
                                        <span class="badge bg-success">Compra</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ registro.tipo|capitalize }}</span>
                                    {% endif %}
                                </td>
                                <td>$ {{ registro.precioAnterior|number_format(2, ',', '.') }}</td>
                                <td><strong>$ {{ registro.precioNuevo|number_format(2, ',', '.') }}</strong></td>
                                <td>{{ registro.fechaCambio ? registro.fechaCambio|date('d/m/Y H:i') : '-' }}</td>
                                <td title="{{ registro.motivo }}">
                                    {{ registro.motivo|slice(0, 30) }}{{ registro.motivo|length > 30 ? '...' : '' }}
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_historial_precios_show', {'id': registro.id}) }}" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_historial_precios_edit', {'id': registro.id}) }}" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">No se encontraron registros en el historial.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
