{% extends 'base.html.twig' %}

{% block title %}Historial de Precios #{{ historial_precio.id }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">Historial de Precios #{{ historial_precio.id }}</h1>
            <a href="{{ path('app_historial_precios_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Regresar al listado
            </a>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Tipo</div>
                    <div class="col-sm-9">
                        {% set tipo = historial_precio.tipo|lower %}
                        {% if tipo == 'venta' %}
                            <span class="badge bg-primary">Venta</span>
                        {% elseif tipo == 'compra' %}
                            <span class="badge bg-success">Compra</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ historial_precio.tipo|capitalize }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Precio anterior</div>
                    <div class="col-sm-9">$ {{ historial_precio.precioAnterior|number_format(2, ',', '.') }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Precio nuevo</div>
                    <div class="col-sm-9 h5 mb-0 text-success">$ {{ historial_precio.precioNuevo|number_format(2, ',', '.') }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-3 fw-bold text-muted">Fecha cambio</div>
                    <div class="col-sm-9">{{ historial_precio.fechaCambio ? historial_precio.fechaCambio|date('d/m/Y H:i') : '-' }}</div>
                </div>
                <div class="row mb-0">
                    <div class="col-sm-3 fw-bold text-muted">Motivo</div>
                    <div class="col-sm-9">{{ historial_precio.motivo }}</div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_historial_precios_edit', {'id': historial_precio.id}) }}" class="btn btn-warning btn-sm">
                <i class="fas fa-edit me-1"></i>Editar
            </a>
            {{ include('historial_precios/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
