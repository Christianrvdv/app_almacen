{% extends 'base.html.twig' %}

{% block title %}Editar Historial de Precios #{{ historial_precio.id }} - Sistema de Inventario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modern-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="page-header">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a href="{{ path('app_historial_precios_index') }}"
                           class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Historial
                        </a>
                    </div>
                    <div class="text-center text-white">
                        <h1 class="fw-bold mb-1">✏️ Editar Registro</h1>
                        <p class="mb-0 opacity-75">Actualiza la información del registro #{{ historial_precio.id }}</p>
                    </div>
                    <div style="width: 130px;"></div> <!-- Espaciador para alinear -->
                </div>
            </div>
        </div>

        <div class="container">
            <!-- Mensajes Flash -->
            {% for message in app.flashes('success') %}
                <div class="alert-modern alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">¡Éxito!</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert-modern alert alert-danger alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Error</h5>
                            {{ message }}
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Información Actual del Registro -->
            <div class="stats-grid mb-4">
                <div class="stat-item">
                    <div class="stat-number text-primary">
                        ${{ historial_precio.precioAnterior|number_format(2, ',', '.') }}
                    </div>
                    <div class="stat-label">Precio Anterior</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number text-success">
                        ${{ historial_precio.precioNuevo|number_format(2, ',', '.') }}
                    </div>
                    <div class="stat-label">Precio Nuevo</div>
                </div>
                <div class="stat-item">
                    {% set diferencia = historial_precio.precioNuevo - historial_precio.precioAnterior %}
                    <div class="stat-number {% if diferencia > 0 %}text-success{% else %}text-danger{% endif %}">
                        {% if diferencia > 0 %}+{% endif %}${{ diferencia|number_format(2, ',', '.') }}
                    </div>
                    <div class="stat-label">Diferencia</div>
                </div>
                <div class="stat-item">
                    {% set porcentaje = ((historial_precio.precioNuevo - historial_precio.precioAnterior) / historial_precio.precioAnterior * 100)|number_format(2) %}
                    <div class="stat-number {% if porcentaje > 0 %}text-success{% else %}text-danger{% endif %}">
                        {% if porcentaje > 0 %}+{% endif %}{{ porcentaje }}%
                    </div>
                    <div class="stat-label">Variación %</div>
                </div>
            </div>

            <!-- Formulario Principal -->
            <div class="stats-card">
                <div class="card-header-modern">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <i class="fas fa-edit me-2"></i>Editando Registro #{{ historial_precio.id }}
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <!-- Información Básica -->
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </h3>
                    <div class="form-section">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <div class="bg-light rounded p-3 me-3">
                                        <i class="fas fa-cube text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="fw-bold mb-1">{{ historial_precio.producto.nombre }}</h5>
                                        <div class="d-flex flex-wrap gap-3">
                                            {% if historial_precio.producto.codigoBarras %}
                                                <small class="text-muted">
                                                    <i class="fas fa-barcode me-1"></i>{{ historial_precio.producto.codigoBarras }}
                                                </small>
                                            {% endif %}
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Actualizado: {{ historial_precio.producto.fechaActualizacion ? historial_precio.producto.fechaActualizacion|date('d/m/Y') : 'N/A' }}
                                            </small>
                                            <small>
                                                {% if historial_precio.producto.activo %}
                                                    <span class="badge-modern text-success">
                                            <i class="fas fa-check me-1"></i>Activo
                                        </span>
                                                {% else %}
                                                    <span class="badge-modern text-secondary">
                                            <i class="fas fa-times me-1"></i>Inactivo
                                        </span>
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.tipo, 'Tipo de Cambio', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.tipo, {'attr': {
                                        'class': 'form-control form-control-modern form-select-modern',
                                        'required': 'required',
                                        'id': 'historial_precios_tipo'
                                    }}) }}
                                    {{ form_errors(form.tipo) }}
                                    <div class="form-help-text">Selecciona el tipo de cambio de precio</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Precios -->
                    <h3 class="section-title">
                        <i class="fas fa-dollar-sign me-2"></i>Información de Precios
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.precio_anterior, 'Precio Anterior', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.precio_anterior, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'step': '0.01',
                                            'min': '0',
                                            'required': 'required',
                                            'placeholder': '0.00',
                                            'readonly': 'readonly',
                                            'id': 'historial_precios_precio_anterior'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.precio_anterior) }}
                                    <div class="form-help-text">Precio anterior del producto</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.precio_nuevo, 'Precio Nuevo', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    <div class="input-group input-group-modern">
                                        <span class="input-group-text input-group-text-modern">$</span>
                                        {{ form_widget(form.precio_nuevo, {'attr': {
                                            'class': 'form-control form-control-modern',
                                            'step': '0.01',
                                            'min': '0',
                                            'required': 'required',
                                            'placeholder': '0.00',
                                            'id': 'historial_precios_precio_nuevo'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.precio_nuevo) }}
                                    <div class="form-help-text">Nuevo precio del producto</div>
                                </div>
                            </div>
                        </div>

                        <!-- Vista Previa de Cambio -->
                        <div class="price-preview">
                            <div class="price-preview-item">
                                <span>Diferencia:</span>
                                <span id="diferenciaPreview" class="text-success">$0.00</span>
                            </div>
                            <div class="price-preview-item">
                                <span>Variación Porcentual:</span>
                                <span id="variacionPreview" class="text-profit">0.00%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Fecha y Motivo -->
                    <h3 class="section-title">
                        <i class="fas fa-calendar-alt me-2"></i>Fecha y Motivo
                    </h3>
                    <div class="form-section">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.fecha_cambio, 'Fecha del Cambio', {'label_attr': {'class': 'form-label-modern required-field'}}) }}
                                    {{ form_widget(form.fecha_cambio, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'required': 'required',
                                        'id': 'historial_precios_fecha_cambio'
                                    }}) }}
                                    {{ form_errors(form.fecha_cambio) }}
                                    <div class="form-help-text">Fecha y hora en que se realizó el cambio</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    {{ form_label(form.motivo, 'Motivo del Cambio', {'label_attr': {'class': 'form-label-modern'}}) }}
                                    {{ form_widget(form.motivo, {'attr': {
                                        'class': 'form-control form-control-modern',
                                        'placeholder': 'Describe el motivo del cambio de precio...'
                                    }}) }}
                                    {{ form_errors(form.motivo) }}
                                    <div class="form-help-text">Razón o justificación del cambio (opcional)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Resumen -->
                    <h3 class="section-title">
                        <i class="fas fa-chart-line me-2"></i>Resumen del Cambio
                    </h3>

                    <div class="form-section">
                        <div class="detalle-card">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="info-label">Tipo</div>
                                    <div id="resumenTipo" class="info-value">-</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Precio Anterior</div>
                                    <div id="resumenAnterior" class="info-value text-danger">$0.00</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Precio Nuevo</div>
                                    <div id="resumenNuevo" class="info-value text-success">$0.00</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-label">Diferencia</div>
                                    <div id="resumenDiferencia" class="info-value text-primary">$0.00</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="form-section">
                        <div class="action-buttons">
                            <a href="{{ path('app_producto_show', {'id':historial_precio.producto.id}) }}"
                               class="btn btn-modern btn-outline-modern">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="fas fa-save me-2"></i>Actualizar Registro
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Pasar datos de PHP a JavaScript
        window.preciosProducto = {
            compra: {{ historial_precio.producto.precio_compra ?? 0 }},
            venta: {{ historial_precio.producto.precio_venta_actual) ?? 0 }}
        };
    </script>
    <script type="module" src="{{ asset('js/historial_precios/edit.js') }}"></script>
{% endblock %}
